    <!-- Hero -->
    <section class="relative py-20 sm:py-28 lg:py-36 overflow-hidden">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute inset-0 bg-linear-to-b from-sky-900/30 via-gray-900/60 to-gray-900"></div>
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-6xl h-full">
          <div class="absolute top-16 left-10 w-[28rem] h-[28rem] bg-orange-500/10 rounded-full blur-3xl"></div>
          <div class="absolute bottom-12 right-10 w-[28rem] h-[28rem] bg-sky-500/10 rounded-full blur-3xl"></div>
        </div>
