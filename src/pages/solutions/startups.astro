---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import RolloutIllustration from '@/components/solutions/RolloutIllustration.astro'
import BugFixIllustration from '@/components/solutions/BugFixIllustration.astro'
import { createServiceLdJson, createLdJsonGraph } from '@/lib/ldJson'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.solutions_startups_title({}, { locale })}`
const description = m.solutions_startups_description({}, { locale })

const serviceLdJson = createServiceLdJson(Astro.locals.runtimeConfig.public, {
  name: title,
  description: description,
  url: Astro.url.href,
  serviceType: 'Software Development Service',
  areaServed: ['Worldwide'],
})

const ldJSON = createLdJsonGraph(Astro.locals.runtimeConfig.public, serviceLdJson, {
  includeOrganization: true,
})

const content = { title, description, ldJSON }
---

<Layout content={content}>
  <div>
    <!-- Hero Section - Speed & Agility -->
    <section class="relative py-20 sm:py-28 lg:py-36 overflow-hidden">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-6xl h-full">
          <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl"></div>
          <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl"></div>
        </div>
      </div>

      <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center px-4 py-2 text-sm font-medium text-emerald-200 border rounded-full border-emerald-400/40 bg-emerald-500/10 mb-8">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            {m.solutions_startups_badge({}, { locale })}
          </div>

          <h1 class="text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
            {m.solutions_startups_hero_title({}, { locale })}
          </h1>

          <p class="max-w-3xl mx-auto mt-8 text-xl leading-relaxed text-gray-300">
            {m.solutions_startups_hero_subtitle({}, { locale })}
          </p>

          <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-emerald-600 rounded-xl hover:bg-emerald-700 focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 shadow-lg shadow-emerald-500/25"
            >
              {m.solutions_start_free_trial({}, { locale })}
            </a>
            <a
              href={getRelativeLocaleUrl(locale, 'pricing')}
              class="px-8 py-4 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
            >
              {m.solutions_startups_see_pricing({}, { locale })}
            </a>
          </div>

          <!-- Pricing highlight -->
          <div class="mt-8 inline-flex items-center gap-2 px-4 py-2 bg-emerald-500/10 rounded-full text-emerald-300">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            {m.solutions_startups_pricing_highlight({}, { locale })}
          </div>
        </div>
      </div>
    </section>

    <!-- The Startup Reality -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-red-400 uppercase mb-4">{m.solutions_startups_reality_label({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_startups_reality_title({}, { locale })}</h3>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- The Pain -->
          <div class="space-y-6">
            <div class="bg-gray-900 rounded-xl p-6 border border-red-500/20">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-2">{m.solutions_startups_pain1_title({}, { locale })}</h4>
                  <p class="text-gray-400">{m.solutions_startups_pain1_desc({}, { locale })}</p>
                </div>
              </div>
            </div>

            <div class="bg-gray-900 rounded-xl p-6 border border-red-500/20">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-2">{m.solutions_startups_pain2_title({}, { locale })}</h4>
                  <p class="text-gray-400">{m.solutions_startups_pain2_desc({}, { locale })}</p>
                </div>
              </div>
            </div>

            <div class="bg-gray-900 rounded-xl p-6 border border-red-500/20">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-2">{m.solutions_startups_pain3_title({}, { locale })}</h4>
                  <p class="text-gray-400">{m.solutions_startups_pain3_desc({}, { locale })}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- The Reality Quote -->
          <div class="bg-gray-900 rounded-2xl p-8 border border-gray-700">
            <div class="text-6xl text-emerald-500/30 font-serif">"</div>
            <p class="text-xl text-gray-300 italic -mt-6 mb-6">
              {m.solutions_startups_founder_quote({}, { locale })}
            </p>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-emerald-500/20 rounded-full flex items-center justify-center">
                <span class="text-emerald-400 font-bold">S</span>
              </div>
              <div>
                <p class="font-semibold text-white">{m.solutions_startups_quote_author({}, { locale })}</p>
                <p class="text-sm text-gray-400">{m.solutions_startups_quote_role({}, { locale })}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- The Startup Advantage -->
    <section class="py-20 bg-gray-900">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-emerald-400 uppercase mb-4">{m.solutions_startups_advantage_label({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_startups_advantage_title({}, { locale })}</h3>
          <p class="mt-4 text-xl text-gray-400">{m.solutions_startups_advantage_subtitle({}, { locale })}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Advantage 1: Ship Daily -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-emerald-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">{m.solutions_startups_adv1_title({}, { locale })}</h3>
            </div>
            <p class="text-gray-300 mb-6">{m.solutions_startups_adv1_desc({}, { locale })}</p>
            <div class="bg-gray-900 rounded-xl p-6 flex items-center justify-center">
              <div class="w-full max-w-sm">
                <RolloutIllustration class="text-emerald-500" />
              </div>
            </div>
          </div>

          <!-- Advantage 2: No DevOps Tax -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">{m.solutions_startups_adv2_title({}, { locale })}</h3>
            </div>
            <p class="text-gray-300 mb-6">{m.solutions_startups_adv2_desc({}, { locale })}</p>
            <ul class="space-y-2">
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_startups_adv2_point1({}, { locale })}
              </li>
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_startups_adv2_point2({}, { locale })}
              </li>
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_startups_adv2_point3({}, { locale })}
              </li>
            </ul>
          </div>

          <!-- Advantage 3: Fix Bugs Instantly -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">{m.solutions_startups_adv3_title({}, { locale })}</h3>
            </div>
            <p class="text-gray-300 mb-6">{m.solutions_startups_adv3_desc({}, { locale })}</p>
            <div class="bg-gray-900 rounded-xl p-6 flex items-center justify-center">
              <div class="w-full max-w-sm">
                <BugFixIllustration class="text-red-500" />
              </div>
            </div>
          </div>

          <!-- Advantage 4: Startup-Friendly Pricing -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-amber-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">{m.solutions_startups_adv4_title({}, { locale })}</h3>
            </div>
            <p class="text-gray-300 mb-6">{m.solutions_startups_adv4_desc({}, { locale })}</p>
            <div class="space-y-3">
              <div class="flex items-center justify-between p-3 bg-gray-900 rounded-lg">
                <span class="text-gray-400">{m.solutions_startups_adv4_competitor({}, { locale })}</span>
                <span class="text-red-400 line-through">$499/mo</span>
              </div>
              <div class="flex items-center justify-between p-3 bg-emerald-500/10 rounded-lg border border-emerald-500/30">
                <span class="text-emerald-300">Capgo</span>
                <span class="text-emerald-400 font-bold">$14/mo</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Startup Success Story -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-emerald-400 uppercase mb-4">{m.solutions_startups_story_label({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_startups_story_title({}, { locale })}</h3>
        </div>

        <div class="bg-gray-900 rounded-2xl p-8 lg:p-12 border border-gray-700 max-w-5xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- The Story -->
            <div>
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 bg-emerald-500/20 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-xl font-bold text-white">{m.solutions_startups_case_company({}, { locale })}</h4>
                  <p class="text-gray-400">{m.solutions_startups_case_stage({}, { locale })}</p>
                </div>
              </div>

              <div class="space-y-6 text-gray-300">
                <p>{m.solutions_startups_case_para1({}, { locale })}</p>
                <p>{m.solutions_startups_case_para2({}, { locale })}</p>
                <p>{m.solutions_startups_case_para3({}, { locale })}</p>
              </div>
            </div>

            <!-- The Results -->
            <div class="bg-gray-800 rounded-xl p-6">
              <h4 class="text-lg font-bold text-white mb-6">{m.solutions_startups_case_results({}, { locale })}</h4>

              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_startups_case_metric1_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-emerald-400">{m.solutions_startups_case_metric1_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_startups_case_metric2_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-emerald-400">{m.solutions_startups_case_metric2_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_startups_case_metric3_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-emerald-400">{m.solutions_startups_case_metric3_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_startups_case_metric4_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-emerald-400">{m.solutions_startups_case_metric4_value({}, { locale })}</span>
                </div>
              </div>

              <div class="mt-6 p-4 bg-emerald-500/10 rounded-lg border border-emerald-500/30">
                <p class="text-emerald-300 text-sm italic">"{m.solutions_startups_case_quote({}, { locale })}"</p>
                <p class="text-gray-400 text-sm mt-2">— {m.solutions_startups_case_quote_author({}, { locale })}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Start -->
    <section class="py-20 bg-gray-900">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_startups_quickstart_title({}, { locale })}</h2>
          <p class="mt-4 text-xl text-gray-400">{m.solutions_startups_quickstart_subtitle({}, { locale })}</p>
        </div>

        <div class="max-w-3xl mx-auto">
          <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <span class="ml-2 text-sm text-gray-500">Terminal</span>
            </div>
            <pre class="overflow-x-auto text-sm text-gray-300"><code><span class="text-gray-500"># Install (30 seconds)</span>
npm install @capgo/capacitor-updater
npx cap sync

<span class="text-gray-500"># Configure (add to your main component)</span>
import {'{ CapacitorUpdater }'} from '@capgo/capacitor-updater'
CapacitorUpdater.notifyAppReady()

<span class="text-gray-500"># Deploy your first update</span>
npm run build
npx @capgo/cli bundle upload

<span class="text-emerald-400">✔</span> Done! Your users will receive updates automatically.</code></pre>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="relative px-8 py-16 overflow-hidden bg-gradient-to-r from-emerald-600 to-teal-700 rounded-3xl sm:px-16">
          <div aria-hidden="true" class="absolute inset-0">
            <svg class="absolute inset-0 w-full h-full" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1463 360">
              <path class="text-emerald-500 text-opacity-40" fill="currentColor" d="M-82.673 72l1761.849 472.086-134.327 501.315-1761.85-472.086z"></path>
              <path class="text-teal-400 text-opacity-20" fill="currentColor" d="M-217.088 544.086L1544.761 72l134.327 501.316-1761.849 472.086z"></path>
            </svg>
          </div>
          <div class="relative text-center">
            <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_startups_cta_title({}, { locale })}</h2>
            <p class="max-w-2xl mx-auto mt-4 text-lg text-emerald-100">{m.solutions_startups_cta_subtitle({}, { locale })}</p>
            <div class="flex flex-col items-center justify-center gap-4 mt-8 sm:flex-row">
              <a
                href={getRelativeLocaleUrl(locale, 'register')}
                class="px-8 py-4 text-base font-semibold text-emerald-600 transition-all duration-200 bg-white rounded-xl hover:bg-gray-100 shadow-lg"
              >
                {m.solutions_start_free_trial({}, { locale })}
              </a>
              <a
                href={getRelativeLocaleUrl(locale, 'pricing')}
                class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 border rounded-xl border-white/30 hover:bg-white/10"
