---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.solutions_direct_updates_title({}, { locale })}`
const description = m.solutions_direct_updates_description({}, { locale })

const content = { title, description }
---

<Layout content={content}>
  <div>
    <!-- Hero Section with Urgency -->
    <section class="relative py-20 sm:py-28 lg:py-36 overflow-hidden">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-6xl h-full">
          <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl"></div>
          <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-teal-500/10 rounded-full blur-3xl"></div>
        </div>
      </div>

      <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center px-4 py-2 text-sm font-medium text-emerald-200 border rounded-full border-emerald-400/40 bg-emerald-500/10 mb-8">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            {m.solutions_direct_updates({}, { locale })}
          </div>

          <h1 class="text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
            {m.solutions_direct_updates_hero_title({}, { locale })}
          </h1>

          <p class="max-w-3xl mx-auto mt-8 text-xl leading-relaxed text-gray-300">
            {m.solutions_direct_updates_hero_subtitle({}, { locale })}
          </p>

          <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-emerald-600 rounded-xl hover:bg-emerald-700 focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 shadow-lg shadow-emerald-500/25"
            >
              {m.solutions_start_free_trial({}, { locale })}
            </a>
            <a
              href={getRelativeLocaleUrl(locale, 'book_demo')}
              class="px-8 py-4 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
            >
              {m.solutions_talk_to_team({}, { locale })}
            </a>
          </div>

          <!-- Trust Badges -->
          <div class="flex flex-wrap items-center justify-center gap-6 mt-12 text-sm text-gray-400">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              {m.solutions_direct_instant_apply({}, { locale })}
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              {m.solutions_direct_zero_outdated({}, { locale })}
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              {m.solutions_direct_sub_second({}, { locale })}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- The Problem: Why Waiting Isn't an Option -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-red-400 uppercase mb-4">{m.solutions_the_problem({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_direct_problem_title({}, { locale })}</h3>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Problem Visualization -->
          <div class="bg-gray-900 rounded-2xl p-8 border border-red-500/30">
            <h4 class="text-xl font-bold text-white mb-6">{m.solutions_direct_background_problem({}, { locale })}</h4>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center">
                  <span class="text-red-400 font-bold">1</span>
                </div>
                <div>
                  <p class="font-semibold text-white">{m.solutions_direct_problem_step1_title({}, { locale })}</p>
                  <p class="text-gray-400 text-sm mt-1">{m.solutions_direct_problem_step1_desc({}, { locale })}</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center">
                  <span class="text-red-400 font-bold">2</span>
                </div>
                <div>
                  <p class="font-semibold text-white">{m.solutions_direct_problem_step2_title({}, { locale })}</p>
                  <p class="text-gray-400 text-sm mt-1">{m.solutions_direct_problem_step2_desc({}, { locale })}</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center">
                  <span class="text-red-400 font-bold">3</span>
                </div>
                <div>
                  <p class="font-semibold text-white">{m.solutions_direct_problem_step3_title({}, { locale })}</p>
                  <p class="text-gray-400 text-sm mt-1">{m.solutions_direct_problem_step3_desc({}, { locale })}</p>
                </div>
              </div>
            </div>

            <div class="mt-8 p-4 bg-red-500/10 rounded-xl border border-red-500/30">
              <p class="text-red-300 font-medium">{m.solutions_direct_problem_result({}, { locale })}</p>
            </div>
          </div>

          <!-- Critical Scenarios -->
          <div>
            <h4 class="text-xl font-bold text-white mb-6">{m.solutions_direct_when_matters({}, { locale })}</h4>

            <div class="space-y-6">
              <div class="p-6 bg-gray-900 rounded-xl border border-gray-700">
                <div class="flex items-center gap-4 mb-3">
                  <div class="w-12 h-12 rounded-full bg-red-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-lg font-bold text-white">{m.solutions_direct_scenario1_title({}, { locale })}</p>
                    <p class="text-gray-400">{m.solutions_direct_scenario1_desc({}, { locale })}</p>
                  </div>
                </div>
              </div>

              <div class="p-6 bg-gray-900 rounded-xl border border-gray-700">
                <div class="flex items-center gap-4 mb-3">
                  <div class="w-12 h-12 rounded-full bg-amber-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-lg font-bold text-white">{m.solutions_direct_scenario2_title({}, { locale })}</p>
                    <p class="text-gray-400">{m.solutions_direct_scenario2_desc({}, { locale })}</p>
                  </div>
                </div>
              </div>

              <div class="p-6 bg-gray-900 rounded-xl border border-gray-700">
                <div class="flex items-center gap-4 mb-3">
                  <div class="w-12 h-12 rounded-full bg-purple-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-lg font-bold text-white">{m.solutions_direct_scenario3_title({}, { locale })}</p>
                    <p class="text-gray-400">{m.solutions_direct_scenario3_desc({}, { locale })}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- The Solution: How Direct Updates Work -->
    <section class="py-20 bg-gray-900">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-green-400 uppercase mb-4">{m.solutions_the_solution({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_direct_solution_title({}, { locale })}</h3>
          <p class="mt-4 text-xl text-gray-400">{m.solutions_direct_solution_subtitle({}, { locale })}</p>
        </div>

        <!-- Comparison -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
          <!-- Background Updates -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <h4 class="text-lg font-bold text-gray-400 mb-6 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              {m.solutions_direct_background_mode({}, { locale })}
            </h4>
            <div class="space-y-4">
              <div class="flex items-center gap-3 text-gray-400">
                <div class="w-6 h-6 rounded-full bg-gray-700 flex items-center justify-center text-xs">1</div>
                <span>{m.solutions_direct_bg_step1({}, { locale })}</span>
              </div>
              <div class="flex items-center gap-3 text-gray-400">
                <div class="w-6 h-6 rounded-full bg-gray-700 flex items-center justify-center text-xs">2</div>
                <span>{m.solutions_direct_bg_step2({}, { locale })}</span>
              </div>
              <div class="flex items-center gap-3 text-gray-400">
                <div class="w-6 h-6 rounded-full bg-gray-700 flex items-center justify-center text-xs">3</div>
                <span>{m.solutions_direct_bg_step3({}, { locale })}</span>
              </div>
              <div class="flex items-center gap-3 text-gray-400">
                <div class="w-6 h-6 rounded-full bg-gray-700 flex items-center justify-center text-xs">4</div>
                <span>{m.solutions_direct_bg_step4({}, { locale })}</span>
              </div>
            </div>
            <div class="mt-6 p-4 bg-gray-900 rounded-xl">
              <p class="text-gray-500 text-sm">{m.solutions_direct_bg_result({}, { locale })}</p>
            </div>
          </div>

          <!-- Direct Updates -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-emerald-500/30">
            <h4 class="text-lg font-bold text-emerald-400 mb-6 flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              {m.solutions_direct_direct_mode({}, { locale })}
            </h4>
            <div class="space-y-4">
              <div class="flex items-center gap-3 text-white">
                <div class="w-6 h-6 rounded-full bg-emerald-500/30 flex items-center justify-center text-xs text-emerald-400">1</div>
                <span>{m.solutions_direct_d_step1({}, { locale })}</span>
              </div>
              <div class="flex items-center gap-3 text-white">
                <div class="w-6 h-6 rounded-full bg-emerald-500/30 flex items-center justify-center text-xs text-emerald-400">2</div>
                <span>{m.solutions_direct_d_step2({}, { locale })}</span>
              </div>
              <div class="flex items-center gap-3 text-white">
                <div class="w-6 h-6 rounded-full bg-emerald-500/30 flex items-center justify-center text-xs text-emerald-400">3</div>
                <span>{m.solutions_direct_d_step3({}, { locale })}</span>
              </div>
            </div>
            <div class="mt-6 p-4 bg-emerald-500/10 rounded-xl border border-emerald-500/30">
              <p class="text-emerald-300 text-sm font-medium">{m.solutions_direct_d_result({}, { locale })}</p>
            </div>
          </div>
        </div>

        <!-- Code Example -->
        <div class="max-w-3xl mx-auto">
          <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <span class="ml-2 text-sm text-gray-500">capacitor.config.ts</span>
            </div>
            <pre class="overflow-x-auto text-sm text-gray-300"><code><span class="text-gray-500">// Enable Direct Updates - one config change</span>
CapacitorUpdater: {'{'}
  <span class="text-emerald-400">autoUpdate</span>: true,
  <span class="text-emerald-400">directUpdate</span>: true, <span class="text-gray-500">// Updates apply immediately on app open</span>
{'}'}

<span class="text-gray-500">// That's it. When users open your app:</span>
<span class="text-gray-500">// 1. Capgo checks for updates (~50ms)</span>
<span class="text-gray-500">// 2. If available, downloads immediately (~200-500ms)</span>
<span class="text-gray-500">// 3. Applies before your app renders</span>
<span class="text-gray-500">// Users always see the latest version. Zero exceptions.</span></code></pre>
          </div>
        </div>
      </div>
    </section>

    <!-- Real Business Scenario -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-emerald-400 uppercase mb-4">{m.solutions_real_world({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_direct_scenario_title({}, { locale })}</h3>
        </div>

        <div class="bg-gray-900 rounded-2xl p-8 lg:p-12 border border-gray-700 max-w-5xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- The Story -->
            <div>
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 bg-emerald-500/20 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-xl font-bold text-white">{m.solutions_direct_case_company({}, { locale })}</h4>
                  <p class="text-gray-400">{m.solutions_direct_case_industry({}, { locale })}</p>
                </div>
              </div>

              <div class="space-y-6 text-gray-300">
                <p>{m.solutions_direct_case_para1({}, { locale })}</p>
                <p>{m.solutions_direct_case_para2({}, { locale })}</p>
                <p>{m.solutions_direct_case_para3({}, { locale })}</p>
              </div>
            </div>

            <!-- The Results -->
            <div class="bg-gray-800 rounded-xl p-6">
              <h4 class="text-lg font-bold text-white mb-6">{m.solutions_direct_case_results({}, { locale })}</h4>

              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_direct_case_metric1_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-emerald-400">{m.solutions_direct_case_metric1_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_direct_case_metric2_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-emerald-400">{m.solutions_direct_case_metric2_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_direct_case_metric3_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-emerald-400">{m.solutions_direct_case_metric3_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_direct_case_metric4_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-emerald-400">{m.solutions_direct_case_metric4_value({}, { locale })}</span>
                </div>
              </div>

              <div class="mt-6 p-4 bg-emerald-500/10 rounded-lg border border-emerald-500/30">
                <p class="text-emerald-300 text-sm italic">"{m.solutions_direct_case_quote({}, { locale })}"</p>
                <p class="text-gray-400 text-sm mt-2">â€” {m.solutions_direct_case_quote_author({}, { locale })}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Key Benefits -->
    <section class="py-20 bg-gray-900">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_direct_benefits_title({}, { locale })}</h2>
          <p class="mt-4 text-xl text-gray-400">{m.solutions_direct_benefits_subtitle({}, { locale })}</p>
        </div>

        <div class="space-y-8">
          <!-- Benefit 1: Zero Outdated Sessions -->
          <div class="bg-gray-800 rounded-2xl p-8 lg:p-10 border border-gray-700">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
              <div class="lg:col-span-2">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-10 h-10 bg-emerald-500/20 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold text-white">{m.solutions_direct_benefit1_title({}, { locale })}</h3>
                </div>
                <p class="text-gray-300 mb-4">{m.solutions_direct_benefit1_desc({}, { locale })}</p>
                <ul class="space-y-2">
                  <li class="flex items-start gap-2 text-gray-400">
                    <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    {m.solutions_direct_benefit1_point1({}, { locale })}
                  </li>
                  <li class="flex items-start gap-2 text-gray-400">
                    <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    {m.solutions_direct_benefit1_point2({}, { locale })}
                  </li>
                  <li class="flex items-start gap-2 text-gray-400">
                    <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    {m.solutions_direct_benefit1_point3({}, { locale })}
                  </li>
                </ul>
              </div>
              <div class="bg-gray-900 rounded-xl p-6 flex flex-col justify-center">
                <p class="text-4xl font-bold text-emerald-400 mb-2">100%</p>
                <p class="text-gray-400">{m.solutions_direct_benefit1_stat({}, { locale })}</p>
              </div>
            </div>
