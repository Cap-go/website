            {m.solutions_agencies_badge({}, { locale })}
          </div>

          <h1 class="text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
            {m.solutions_agencies_hero_title({}, { locale })}
          </h1>

          <p class="max-w-3xl mx-auto mt-8 text-xl leading-relaxed text-gray-300">
            {m.solutions_agencies_hero_subtitle({}, { locale })}
          </p>

          <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-amber-600 rounded-xl hover:bg-amber-700 focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 shadow-lg shadow-amber-500/25"
