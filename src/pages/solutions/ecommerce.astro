---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.solutions_ecommerce_title({}, { locale })}`
const description = m.solutions_ecommerce_description({}, { locale })

const content = { title, description }
---

<Layout content={content}>
  <div>
    <!-- Hero Section -->
    <section class="relative py-20 sm:py-28 lg:py-36 overflow-hidden">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-6xl h-full">
          <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-rose-500/10 rounded-full blur-3xl"></div>
          <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-pink-500/10 rounded-full blur-3xl"></div>
        </div>
      </div>

      <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center px-4 py-2 text-sm font-medium text-rose-200 border rounded-full border-rose-400/40 bg-rose-500/10 mb-8">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            {m.solutions_ecommerce_badge({}, { locale })}
          </div>

          <h1 class="text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
            {m.solutions_ecommerce_hero_title({}, { locale })}
          </h1>

          <p class="max-w-3xl mx-auto mt-8 text-xl leading-relaxed text-gray-300">
            {m.solutions_ecommerce_hero_subtitle({}, { locale })}
          </p>

          <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-rose-600 rounded-xl hover:bg-rose-700 focus:ring-2 focus:ring-rose-500 focus:ring-offset-2 shadow-lg shadow-rose-500/25"
            >
              {m.solutions_start_free_trial({}, { locale })}
            </a>
            <a
              href={getRelativeLocaleUrl(locale, 'book_demo')}
              class="px-8 py-4 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
            >
              {m.solutions_talk_to_team({}, { locale })}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- The E-commerce Reality -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-red-400 uppercase mb-4">{m.solutions_ecommerce_reality_label({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_ecommerce_reality_title({}, { locale })}</h3>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
          <!-- Black Friday Nightmare -->
          <div class="bg-gray-900 rounded-2xl p-8 border border-red-500/30">
            <h4 class="text-xl font-bold text-red-400 mb-6 flex items-center gap-2">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              {m.solutions_ecommerce_nightmare_title({}, { locale })}
            </h4>
            <div class="space-y-4 text-gray-300">
              <p>{m.solutions_ecommerce_nightmare_para1({}, { locale })}</p>
              <p>{m.solutions_ecommerce_nightmare_para2({}, { locale })}</p>
              <p class="text-red-300 font-medium">{m.solutions_ecommerce_nightmare_para3({}, { locale })}</p>
            </div>
            <div class="mt-6 p-4 bg-red-500/10 rounded-xl border border-red-500/30">
              <p class="text-red-300 text-2xl font-bold">$12,000+</p>
              <p class="text-gray-400 text-sm">{m.solutions_ecommerce_nightmare_cost({}, { locale })}</p>
            </div>
          </div>

          <!-- Pain Points -->
          <div class="space-y-4">
            <div class="bg-gray-900 rounded-xl p-6 border border-gray-700">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-1">{m.solutions_ecommerce_pain1_title({}, { locale })}</h4>
                  <p class="text-gray-400 text-sm">{m.solutions_ecommerce_pain1_desc({}, { locale })}</p>
                </div>
              </div>
            </div>

            <div class="bg-gray-900 rounded-xl p-6 border border-gray-700">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-1">{m.solutions_ecommerce_pain2_title({}, { locale })}</h4>
                  <p class="text-gray-400 text-sm">{m.solutions_ecommerce_pain2_desc({}, { locale })}</p>
                </div>
              </div>
            </div>

            <div class="bg-gray-900 rounded-xl p-6 border border-gray-700">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-1">{m.solutions_ecommerce_pain3_title({}, { locale })}</h4>
                  <p class="text-gray-400 text-sm">{m.solutions_ecommerce_pain3_desc({}, { locale })}</p>
                </div>
              </div>
            </div>

            <div class="bg-gray-900 rounded-xl p-6 border border-gray-700">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-1">{m.solutions_ecommerce_pain4_title({}, { locale })}</h4>
                  <p class="text-gray-400 text-sm">{m.solutions_ecommerce_pain4_desc({}, { locale })}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How We Solve It -->
    <section class="py-20 bg-gray-900">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-rose-400 uppercase mb-4">{m.solutions_ecommerce_solution_label({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_ecommerce_solution_title({}, { locale })}</h3>
          <p class="mt-4 text-xl text-gray-400">{m.solutions_ecommerce_solution_subtitle({}, { locale })}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Solution 1: Instant Flash Sale Updates -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-rose-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-rose-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">{m.solutions_ecommerce_sol1_title({}, { locale })}</h3>
            </div>
            <p class="text-gray-300 mb-6">{m.solutions_ecommerce_sol1_desc({}, { locale })}</p>
            <div class="bg-gray-900 rounded-xl p-4">
              <pre class="text-sm text-gray-300 overflow-x-auto"><code><span class="text-gray-500"># Flash sale starts in 2 hours</span>
<span class="text-gray-500"># Push promo banner and discount logic</span>

npm run build
npx @capgo/cli bundle upload

<span class="text-rose-400">✔</span> 45,000 users updated before sale starts
<span class="text-rose-400">✔</span> Zero app store review wait</code></pre>
            </div>
          </div>

          <!-- Solution 2: A/B Test Everything -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">{m.solutions_ecommerce_sol2_title({}, { locale })}</h3>
            </div>
            <p class="text-gray-300 mb-6">{m.solutions_ecommerce_sol2_desc({}, { locale })}</p>
            <ul class="space-y-2">
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_ecommerce_sol2_point1({}, { locale })}
              </li>
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_ecommerce_sol2_point2({}, { locale })}
              </li>
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_ecommerce_sol2_point3({}, { locale })}
              </li>
            </ul>
          </div>

          <!-- Solution 3: Fix Cart Issues Instantly -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-amber-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">{m.solutions_ecommerce_sol3_title({}, { locale })}</h3>
            </div>
            <p class="text-gray-300 mb-6">{m.solutions_ecommerce_sol3_desc({}, { locale })}</p>
            <div class="bg-gray-900 rounded-xl p-4">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <span class="text-gray-400">{m.solutions_ecommerce_sol3_before({}, { locale })}</span>
              </div>
              <div class="flex items-center gap-3 mb-3">
                <div class="w-3 h-3 bg-amber-500 rounded-full"></div>
                <span class="text-gray-400">{m.solutions_ecommerce_sol3_during({}, { locale })}</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="text-green-300">{m.solutions_ecommerce_sol3_after({}, { locale })}</span>
              </div>
            </div>
          </div>

          <!-- Solution 4: Seasonal Updates -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white">{m.solutions_ecommerce_sol4_title({}, { locale })}</h3>
            </div>
            <p class="text-gray-300 mb-6">{m.solutions_ecommerce_sol4_desc({}, { locale })}</p>
            <ul class="space-y-2">
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_ecommerce_sol4_point1({}, { locale })}
              </li>
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_ecommerce_sol4_point2({}, { locale })}
              </li>
              <li class="flex items-center gap-2 text-gray-400">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {m.solutions_ecommerce_sol4_point3({}, { locale })}
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Results -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_ecommerce_results_title({}, { locale })}</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="p-8 text-center bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="text-4xl font-bold text-rose-400 mb-2">+23%</div>
            <p class="text-gray-400">{m.solutions_ecommerce_stat1({}, { locale })}</p>
          </div>
          <div class="p-8 text-center bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="text-4xl font-bold text-green-400 mb-2">-67%</div>
            <p class="text-gray-400">{m.solutions_ecommerce_stat2({}, { locale })}</p>
          </div>
          <div class="p-8 text-center bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="text-4xl font-bold text-blue-400 mb-2">4x</div>
            <p class="text-gray-400">{m.solutions_ecommerce_stat3({}, { locale })}</p>
          </div>
          <div class="p-8 text-center bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="text-4xl font-bold text-purple-400 mb-2">&lt;15min</div>
            <p class="text-gray-400">{m.solutions_ecommerce_stat4({}, { locale })}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-20 bg-gray-900">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="relative px-8 py-16 overflow-hidden bg-gradient-to-r from-rose-600 to-pink-700 rounded-3xl sm:px-16">
          <div aria-hidden="true" class="absolute inset-0">
            <svg class="absolute inset-0 w-full h-full" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1463 360">
              <path class="text-rose-500 text-opacity-40" fill="currentColor" d="M-82.673 72l1761.849 472.086-134.327 501.315-1761.85-472.086z"></path>
              <path class="text-pink-400 text-opacity-20" fill="currentColor" d="M-217.088 544.086L1544.761 72l134.327 501.316-1761.849 472.086z"></path>
            </svg>
          </div>
          <div class="relative text-center">
            <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_ecommerce_cta_title({}, { locale })}</h2>
            <p class="max-w-2xl mx-auto mt-4 text-lg text-rose-100">{m.solutions_ecommerce_cta_subtitle({}, { locale })}</p>
            <div class="flex flex-col items-center justify-center gap-4 mt-8 sm:flex-row">
              <a
                href={getRelativeLocaleUrl(locale, 'register')}
                class="px-8 py-4 text-base font-semibold text-rose-600 transition-all duration-200 bg-white rounded-xl hover:bg-gray-100 shadow-lg"
              >
                {m.solutions_start_free_trial({}, { locale })}
              </a>
              <a
                href={getRelativeLocaleUrl(locale, 'book_demo')}
                class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 border rounded-xl border-white/30 hover:bg-white/10"
              >
                {m.solutions_schedule_demo({}, { locale })}
              </a>
            </div>
            <p class="mt-6 text-sm text-rose-200">{m.solutions_ecommerce_cta_note({}, { locale })}</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
