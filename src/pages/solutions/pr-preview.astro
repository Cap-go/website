---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { createServiceLdJson, createLdJsonGraph } from '@/lib/ldJson'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.solutions_pr_preview_title({}, { locale })}`
const description = m.solutions_pr_preview_description({}, { locale })

const serviceLdJson = createServiceLdJson(Astro.locals.runtimeConfig.public, {
  name: title,
  description: description,
  url: Astro.url.href,
  serviceType: 'Software Development Service',
  areaServed: ['Worldwide'],
})

const ldJSON = createLdJsonGraph(Astro.locals.runtimeConfig.public, serviceLdJson, {
  includeOrganization: true,
})

const content = { title, description, ldJSON }
---

<Layout content={content}>
  <div>
    <!-- Hero Section -->
    <section class="relative py-20 sm:py-28 lg:py-36 overflow-hidden">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-6xl h-full">
          <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
          <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-violet-500/10 rounded-full blur-3xl"></div>
        </div>
      </div>

      <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center px-4 py-2 text-sm font-medium text-purple-200 border rounded-full border-purple-400/40 bg-purple-500/10 mb-8">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {m.solutions_pr_preview({}, { locale })}
          </div>

          <h1 class="text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
            {m.solutions_pr_preview_hero_title({}, { locale })}
          </h1>

          <p class="max-w-3xl mx-auto mt-8 text-xl leading-relaxed text-gray-300">
            {m.solutions_pr_preview_hero_subtitle({}, { locale })}
          </p>

          <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-purple-600 rounded-xl hover:bg-purple-700 focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 shadow-lg shadow-purple-500/25"
            >
              {m.solutions_start_free_trial({}, { locale })}
            </a>
            <a
              href="https://cal.com/team/capgo/demo"
              class="px-8 py-4 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
            >
              {m.solutions_talk_to_team({}, { locale })}
            </a>
          </div>

          <!-- Trust Badges -->
          <div class="flex flex-wrap items-center justify-center gap-6 mt-12 text-sm text-gray-400">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              {m.solutions_pr_no_testflight({}, { locale })}
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              {m.solutions_pr_instant_testing({}, { locale })}
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              {m.solutions_pr_auto_cleanup({}, { locale })}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- The Problem: TestFlight/Beta Pain -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-red-400 uppercase mb-4">{m.solutions_the_problem({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_pr_problem_title({}, { locale })}</h3>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Problem Visualization -->
          <div class="bg-gray-900 rounded-2xl p-8 border border-red-500/30">
            <h4 class="text-xl font-bold text-white mb-6">{m.solutions_pr_traditional_workflow({}, { locale })}</h4>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="shrink-0 w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center">
                  <span class="text-red-400 font-bold">1</span>
                </div>
                <div>
                  <p class="font-semibold text-white">{m.solutions_pr_problem_step1_title({}, { locale })}</p>
                  <p class="text-gray-400 text-sm mt-1">{m.solutions_pr_problem_step1_desc({}, { locale })}</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="shrink-0 w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center">
                  <span class="text-red-400 font-bold">2</span>
                </div>
                <div>
                  <p class="font-semibold text-white">{m.solutions_pr_problem_step2_title({}, { locale })}</p>
                  <p class="text-gray-400 text-sm mt-1">{m.solutions_pr_problem_step2_desc({}, { locale })}</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="shrink-0 w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center">
                  <span class="text-red-400 font-bold">3</span>
                </div>
                <div>
                  <p class="font-semibold text-white">{m.solutions_pr_problem_step3_title({}, { locale })}</p>
                  <p class="text-gray-400 text-sm mt-1">{m.solutions_pr_problem_step3_desc({}, { locale })}</p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="shrink-0 w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center">
                  <span class="text-red-400 font-bold">4</span>
                </div>
                <div>
                  <p class="font-semibold text-white">{m.solutions_pr_problem_step4_title({}, { locale })}</p>
                  <p class="text-gray-400 text-sm mt-1">{m.solutions_pr_problem_step4_desc({}, { locale })}</p>
                </div>
              </div>
            </div>

            <div class="mt-8 p-4 bg-red-500/10 rounded-xl border border-red-500/30">
              <p class="text-red-300 font-medium">{m.solutions_pr_problem_result({}, { locale })}</p>
            </div>
          </div>

          <!-- The Real Cost -->
          <div>
            <h4 class="text-xl font-bold text-white mb-6">{m.solutions_pr_real_cost({}, { locale })}</h4>

            <div class="space-y-6">
              <div class="p-6 bg-gray-900 rounded-xl border border-gray-700">
                <div class="flex items-center gap-4 mb-3">
                  <div class="w-12 h-12 rounded-full bg-red-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-2xl font-bold text-white">15-30 {m.solutions_minutes({}, { locale })}</p>
                    <p class="text-gray-400">{m.solutions_pr_testflight_processing({}, { locale })}</p>
                  </div>
                </div>
                <p class="text-gray-400 text-sm">{m.solutions_pr_processing_explanation({}, { locale })}</p>
              </div>

              <div class="p-6 bg-gray-900 rounded-xl border border-gray-700">
                <div class="flex items-center gap-4 mb-3">
                  <div class="w-12 h-12 rounded-full bg-red-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-2xl font-bold text-white">67%</p>
                    <p class="text-gray-400">{m.solutions_pr_qa_blocked({}, { locale })}</p>
                  </div>
                </div>
                <p class="text-gray-400 text-sm">{m.solutions_pr_qa_explanation({}, { locale })}</p>
              </div>

              <div class="p-6 bg-gray-900 rounded-xl border border-gray-700">
                <div class="flex items-center gap-4 mb-3">
                  <div class="w-12 h-12 rounded-full bg-red-500/20 flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <p class="text-2xl font-bold text-white">$340/PR</p>
                    <p class="text-gray-400">{m.solutions_pr_hidden_cost({}, { locale })}</p>
                  </div>
                </div>
                <p class="text-gray-400 text-sm">{m.solutions_pr_cost_explanation({}, { locale })}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- The Solution: How PR Preview Works -->
    <section class="py-20 bg-gray-900">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-green-400 uppercase mb-4">{m.solutions_the_solution({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_pr_solution_title({}, { locale })}</h3>
          <p class="mt-4 text-xl text-gray-400">{m.solutions_pr_solution_subtitle({}, { locale })}</p>
        </div>

        <!-- Workflow Steps -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-16">
          <div class="relative">
            <div class="p-6 bg-gray-800 border border-purple-500/30 rounded-2xl h-full">
              <div class="flex items-center justify-center w-12 h-12 mb-4 text-lg font-bold text-purple-400 bg-purple-500/20 rounded-full">1</div>
              <h3 class="mb-2 text-lg font-bold text-white">{m.solutions_pr_step1_title({}, { locale })}</h3>
              <p class="text-sm text-gray-400">{m.solutions_pr_step1_desc({}, { locale })}</p>
              <p class="text-purple-400 font-medium mt-3 text-sm">{m.solutions_pr_step1_time({}, { locale })}</p>
            </div>
            <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-0.5 bg-purple-500/50"></div>
          </div>

          <div class="relative">
            <div class="p-6 bg-gray-800 border border-purple-500/30 rounded-2xl h-full">
              <div class="flex items-center justify-center w-12 h-12 mb-4 text-lg font-bold text-purple-400 bg-purple-500/20 rounded-full">2</div>
              <h3 class="mb-2 text-lg font-bold text-white">{m.solutions_pr_step2_title({}, { locale })}</h3>
              <p class="text-sm text-gray-400">{m.solutions_pr_step2_desc({}, { locale })}</p>
              <p class="text-purple-400 font-medium mt-3 text-sm">{m.solutions_pr_step2_time({}, { locale })}</p>
            </div>
            <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-0.5 bg-purple-500/50"></div>
          </div>

          <div class="relative">
            <div class="p-6 bg-gray-800 border border-purple-500/30 rounded-2xl h-full">
              <div class="flex items-center justify-center w-12 h-12 mb-4 text-lg font-bold text-purple-400 bg-purple-500/20 rounded-full">3</div>
              <h3 class="mb-2 text-lg font-bold text-white">{m.solutions_pr_step3_title({}, { locale })}</h3>
              <p class="text-sm text-gray-400">{m.solutions_pr_step3_desc({}, { locale })}</p>
              <p class="text-purple-400 font-medium mt-3 text-sm">{m.solutions_pr_step3_time({}, { locale })}</p>
            </div>
            <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-0.5 bg-purple-500/50"></div>
          </div>

          <div>
            <div class="p-6 bg-gray-800 border border-purple-500/30 rounded-2xl h-full">
              <div class="flex items-center justify-center w-12 h-12 mb-4 text-lg font-bold text-purple-400 bg-purple-500/20 rounded-full">4</div>
              <h3 class="mb-2 text-lg font-bold text-white">{m.solutions_pr_step4_title({}, { locale })}</h3>
              <p class="text-sm text-gray-400">{m.solutions_pr_step4_desc({}, { locale })}</p>
              <p class="text-purple-400 font-medium mt-3 text-sm">{m.solutions_pr_step4_time({}, { locale })}</p>
            </div>
          </div>
        </div>

        <!-- GitHub Actions Example -->
        <div class="max-w-4xl mx-auto">
          <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <span class="ml-2 text-sm text-gray-500">.github/workflows/pr-preview.yml</span>
            </div>
            <pre class="overflow-x-auto text-sm text-gray-300"><code><span class="text-purple-400">name:</span> PR Preview
<span class="text-purple-400">on:</span>
  pull_request:
    types: [opened, synchronize]

<span class="text-purple-400">jobs:</span>
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Setup & Build
        run: |
          npm ci
          npm run build

      <span class="text-gray-500"># Create a channel named after your PR</span>
      - name: Create PR Channel
        run: npx @capgo/cli channel add pr-${'${{ github.event.pull_request.number }}'}

      <span class="text-gray-500"># Upload the build to that channel</span>
      - name: Upload to Capgo
        run: npx @capgo/cli bundle upload --channel pr-${'${{ github.event.pull_request.number }}'}

      <span class="text-gray-500"># Post a comment with the test link</span>
      - name: Comment on PR
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({'{'}
              owner: context.repo.owner,
              repo: context.repo.repo,
              issue_number: ${'${{ github.event.pull_request.number }}'},
              body: 'ðŸ“± **Test this PR on device:**\\n\\nOpen your app and switch to channel: `pr-${'${{ github.event.pull_request.number }}'}`'
            {'}'})</code></pre>
          </div>
          <p class="text-center text-gray-500 mt-4">{m.solutions_pr_setup_time({}, { locale })}</p>
        </div>

        <!-- How Testers Switch Channels -->
        <div class="mt-16 max-w-4xl mx-auto">
          <h3 class="text-2xl font-bold text-white text-center mb-8">{m.solutions_pr_how_testers_switch({}, { locale })}</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Option 1: Shake Menu -->
            <div class="bg-gray-800 rounded-2xl p-6 border border-gray-700">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                </div>
                <h4 class="text-lg font-bold text-white">{m.solutions_pr_shake_menu({}, { locale })}</h4>
              </div>
              <p class="text-gray-400 text-sm mb-4">{m.solutions_pr_shake_menu_desc({}, { locale })}</p>
              <pre class="bg-gray-900 rounded-lg p-3 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-gray-500">// capacitor.config.ts</span>
CapacitorUpdater: {'{'}
  shakeMenu: true <span class="text-gray-500">// Enable for testing</span>
{'}'}</code></pre>
            </div>

            <!-- Option 2: setChannel API -->
            <div class="bg-gray-800 rounded-2xl p-6 border border-gray-700">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                </div>
                <h4 class="text-lg font-bold text-white">{m.solutions_pr_programmatic({}, { locale })}</h4>
              </div>
              <p class="text-gray-400 text-sm mb-4">{m.solutions_pr_programmatic_desc({}, { locale })}</p>
              <pre class="bg-gray-900 rounded-lg p-3 text-sm overflow-x-auto"><code class="text-gray-300"><span class="text-gray-500">// Switch channel from your app</span>
import {'{'} CapacitorUpdater {'}'} from '@capgo/capacitor-updater'

await CapacitorUpdater.setChannel({'{'}
  channel: 'pr-123'
{'}'})</code></pre>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Real Business Scenario -->
    <section class="py-20 bg-gray-800">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-sm font-semibold tracking-wide text-purple-400 uppercase mb-4">{m.solutions_real_world({}, { locale })}</h2>
          <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_pr_scenario_title({}, { locale })}</h3>
        </div>

        <div class="bg-gray-900 rounded-2xl p-8 lg:p-12 border border-gray-700 max-w-5xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- The Story -->
            <div>
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 bg-purple-500/20 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-xl font-bold text-white">{m.solutions_pr_case_company({}, { locale })}</h4>
                  <p class="text-gray-400">{m.solutions_pr_case_industry({}, { locale })}</p>
                </div>
              </div>

              <div class="space-y-6 text-gray-300">
                <p>{m.solutions_pr_case_para1({}, { locale })}</p>
                <p>{m.solutions_pr_case_para2({}, { locale })}</p>
                <p>{m.solutions_pr_case_para3({}, { locale })}</p>
              </div>
            </div>

            <!-- The Results -->
            <div class="bg-gray-800 rounded-xl p-6">
              <h4 class="text-lg font-bold text-white mb-6">{m.solutions_pr_case_results({}, { locale })}</h4>

              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_pr_case_metric1_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-purple-400">{m.solutions_pr_case_metric1_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_pr_case_metric2_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-purple-400">{m.solutions_pr_case_metric2_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_pr_case_metric3_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-purple-400">{m.solutions_pr_case_metric3_value({}, { locale })}</span>
                </div>
                <div class="flex items-center justify-between p-4 bg-gray-900 rounded-lg">
                  <span class="text-gray-400">{m.solutions_pr_case_metric4_label({}, { locale })}</span>
                  <span class="text-2xl font-bold text-purple-400">{m.solutions_pr_case_metric4_value({}, { locale })}</span>
                </div>
