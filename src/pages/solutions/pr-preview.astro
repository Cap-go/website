---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.solutions_pr_preview_title({}, { locale })}`
const description = m.solutions_pr_preview_description({}, { locale })

const content = { title, description }
---

<Layout content={content}>
  <div>
    <!-- Hero Section -->
    <section class="relative py-16 sm:py-20 lg:py-28">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        {
          Array.from({ length: 15 }).map((_, i) => (
            <div
              class="absolute w-2 h-2 bg-purple-500 rounded-full opacity-20 animate-pulse"
              style={{
                top: `${Math.random() * 100}%`,
                left: `${Math.random() * 100}%`,
                animationDelay: `${Math.random() * 3}s`,
                animationDuration: `${2 + Math.random() * 2}s`,
              }}
            />
          ))
        }
      </div>

      <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <p class="inline-flex px-4 py-2 text-sm text-purple-100 border rounded-full font-medium border-purple-400/40 bg-purple-500/10">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {m.solutions_pr_preview({}, { locale })}
          </p>
          <h1 class="mt-6 text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
            {m.solutions_pr_preview_hero_title({}, { locale })}
          </h1>
          <p class="max-w-3xl mx-auto mt-6 text-xl leading-relaxed text-gray-300">
            {m.solutions_pr_preview_hero_subtitle({}, { locale })}
          </p>

          <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-purple-600 rounded-xl hover:bg-purple-700 focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
            >
              {m.solutions_get_started({}, { locale })}
            </a>
            <a
              href={getRelativeLocaleUrl(locale, 'docs/tooling/cli')}
              class="px-8 py-4 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
            >
              {m.solutions_view_docs({}, { locale })}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="py-16 bg-gray-800 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
          <div class="p-8 transition-all duration-300 bg-gray-900 border border-gray-700 rounded-2xl hover:border-purple-500/50">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl ring-1 bg-purple-500/15 ring-purple-300/40">
              <svg class="w-7 h-7 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_pr_preview_feature1_title({}, { locale })}</h3>
            <p class="text-gray-400 leading-relaxed">{m.solutions_pr_preview_feature1_desc({}, { locale })}</p>
          </div>

          <div class="p-8 transition-all duration-300 bg-gray-900 border border-gray-700 rounded-2xl hover:border-purple-500/50">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl ring-1 bg-purple-500/15 ring-purple-300/40">
              <svg class="w-7 h-7 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_pr_preview_feature2_title({}, { locale })}</h3>
            <p class="text-gray-400 leading-relaxed">{m.solutions_pr_preview_feature2_desc({}, { locale })}</p>
          </div>

          <div class="p-8 transition-all duration-300 bg-gray-900 border border-gray-700 rounded-2xl hover:border-purple-500/50">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl ring-1 bg-purple-500/15 ring-purple-300/40">
              <svg class="w-7 h-7 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_pr_preview_feature3_title({}, { locale })}</h3>
            <p class="text-gray-400 leading-relaxed">{m.solutions_pr_preview_feature3_desc({}, { locale })}</p>
          </div>

          <div class="p-8 transition-all duration-300 bg-gray-900 border border-gray-700 rounded-2xl hover:border-purple-500/50">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl ring-1 bg-purple-500/15 ring-purple-300/40">
              <svg class="w-7 h-7 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_pr_preview_feature4_title({}, { locale })}</h3>
            <p class="text-gray-400 leading-relaxed">{m.solutions_pr_preview_feature4_desc({}, { locale })}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Workflow Section -->
    <section class="py-16 bg-gray-900 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="mb-16 text-center">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_pr_preview_workflow_title({}, { locale })}</h2>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
          <div class="relative">
            <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
              <div class="flex items-center justify-center w-12 h-12 mb-4 text-lg font-bold text-purple-400 border-2 border-purple-400 rounded-full">1</div>
              <h3 class="mb-2 text-lg font-bold text-white">{m.solutions_pr_preview_workflow_step1({}, { locale })}</h3>
              <p class="text-sm text-gray-400">{m.solutions_pr_preview_workflow_step1_desc({}, { locale })}</p>
            </div>
            <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-purple-500"></div>
          </div>

          <div class="relative">
            <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
              <div class="flex items-center justify-center w-12 h-12 mb-4 text-lg font-bold text-purple-400 border-2 border-purple-400 rounded-full">2</div>
              <h3 class="mb-2 text-lg font-bold text-white">{m.solutions_pr_preview_workflow_step2({}, { locale })}</h3>
              <p class="text-sm text-gray-400">{m.solutions_pr_preview_workflow_step2_desc({}, { locale })}</p>
            </div>
            <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-purple-500"></div>
          </div>

          <div class="relative">
            <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
              <div class="flex items-center justify-center w-12 h-12 mb-4 text-lg font-bold text-purple-400 border-2 border-purple-400 rounded-full">3</div>
              <h3 class="mb-2 text-lg font-bold text-white">{m.solutions_pr_preview_workflow_step3({}, { locale })}</h3>
              <p class="text-sm text-gray-400">{m.solutions_pr_preview_workflow_step3_desc({}, { locale })}</p>
            </div>
            <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-purple-500"></div>
          </div>

          <div>
            <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
              <div class="flex items-center justify-center w-12 h-12 mb-4 text-lg font-bold text-purple-400 border-2 border-purple-400 rounded-full">4</div>
              <h3 class="mb-2 text-lg font-bold text-white">{m.solutions_pr_preview_workflow_step4({}, { locale })}</h3>
              <p class="text-sm text-gray-400">{m.solutions_pr_preview_workflow_step4_desc({}, { locale })}</p>
            </div>
          </div>
        </div>

        <!-- CI/CD Example -->
        <div class="max-w-4xl mx-auto mt-16">
          <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 bg-gray-500 rounded-full"></div>
              <div class="w-3 h-3 bg-gray-500 rounded-full"></div>
              <div class="w-3 h-3 bg-gray-500 rounded-full"></div>
              <span class="ml-2 text-sm text-gray-500">.github/workflows/pr-preview.yml</span>
            </div>
            <pre class="overflow-x-auto text-sm text-gray-300"><code>name: PR Preview
on:
  pull_request:
    types: [opened, synchronize]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Build app
        run: npm run build

      - name: Create PR channel & upload
        run: |
          npx @capgo/cli channel create pr-${'${{ github.event.pull_request.number }}'}
          npx @capgo/cli bundle upload --channel pr-${'${{ github.event.pull_request.number }}'}

      - name: Comment PR with test link
        uses: actions/github-script@v7
        with:
          script: |
            github.rest.issues.createComment({'{'}
              owner: context.repo.owner,
              repo: context.repo.repo,
              issue_number: context.issue.number,
              body: 'ðŸ“± Test this PR: `capgo://channel/pr-${'${{ github.event.pull_request.number }}'}`'
            {'}'})</code></pre>
          </div>
        </div>
      </div>
    </section>

    <!-- Teams Section -->
    <section class="py-16 bg-gray-800 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="mb-16 text-center">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_pr_preview_teams_title({}, { locale })}</h2>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
          <div class="p-8 text-center bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-16 h-16 mx-auto mb-6 rounded-xl bg-blue-500/15">
              <svg class="w-8 h-8 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_pr_preview_teams_qa({}, { locale })}</h3>
            <p class="text-gray-400">{m.solutions_pr_preview_teams_qa_desc({}, { locale })}</p>
          </div>

          <div class="p-8 text-center bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-16 h-16 mx-auto mb-6 rounded-xl bg-amber-500/15">
              <svg class="w-8 h-8 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_pr_preview_teams_pm({}, { locale })}</h3>
            <p class="text-gray-400">{m.solutions_pr_preview_teams_pm_desc({}, { locale })}</p>
          </div>

          <div class="p-8 text-center bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-16 h-16 mx-auto mb-6 rounded-xl bg-emerald-500/15">
              <svg class="w-8 h-8 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_pr_preview_teams_dev({}, { locale })}</h3>
            <p class="text-gray-400">{m.solutions_pr_preview_teams_dev_desc({}, { locale })}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gray-900 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="relative px-8 py-16 overflow-hidden bg-gradient-to-r from-purple-600 to-purple-800 rounded-3xl sm:px-16">
          <div aria-hidden="true" class="absolute inset-0">
            <svg class="absolute inset-0 w-full h-full" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1463 360">
              <path class="text-purple-500 text-opacity-40" fill="currentColor" d="M-82.673 72l1761.849 472.086-134.327 501.315-1761.85-472.086z"></path>
              <path class="text-purple-400 text-opacity-20" fill="currentColor" d="M-217.088 544.086L1544.761 72l134.327 501.316-1761.849 472.086z"></path>
            </svg>
          </div>
          <div class="relative text-center">
            <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_pr_preview_cta_title({}, { locale })}</h2>
            <p class="max-w-2xl mx-auto mt-4 text-lg text-purple-100">{m.solutions_pr_preview_cta_subtitle({}, { locale })}</p>
            <div class="flex flex-col items-center justify-center gap-4 mt-8 sm:flex-row">
              <a
                href={getRelativeLocaleUrl(locale, 'register')}
                class="px-8 py-4 text-base font-semibold text-purple-600 transition-all duration-200 bg-white rounded-xl hover:bg-gray-100"
              >
                {m.solutions_get_started({}, { locale })}
              </a>
              <a
                href={getRelativeLocaleUrl(locale, 'pricing')}
                class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 border rounded-xl border-white/30 hover:bg-white/10"
              >
                {m.pricing({}, { locale })}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
