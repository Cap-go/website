---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { createServiceLdJson, createLdJsonGraph } from '@/lib/ldJson'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.solutions_beta_testing_title({}, { locale })}`
const description = m.solutions_beta_testing_description({}, { locale })

const serviceLdJson = createServiceLdJson(Astro.locals.runtimeConfig.public, {
  name: title,
  description: description,
  url: Astro.url.href,
  serviceType: 'Software Development Service',
  areaServed: ['Worldwide'],
})

const ldJSON = createLdJsonGraph(Astro.locals.runtimeConfig.public, serviceLdJson, {
  includeOrganization: true,
})

const content = { title, description, ldJSON }
---

<Layout content={content}>
  <div>
    <!-- Hero Section -->
    <section class="relative py-16 sm:py-20 lg:py-28">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        {
          Array.from({ length: 15 }).map((_, i) => (
            <div
              id={`${i}`}
              class="absolute w-2 h-2 bg-amber-500 rounded-full opacity-20 animate-pulse"
              style={{
                top: `${Math.random() * 100}%`,
                left: `${Math.random() * 100}%`,
                animationDelay: `${Math.random() * 3}s`,
                animationDuration: `${2 + Math.random() * 2}s`,
              }}
            />
          ))
        }
      </div>

      <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <p class="inline-flex px-4 py-2 text-sm text-amber-100 border rounded-full font-medium border-amber-400/40 bg-amber-500/10">
            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            {m.solutions_beta_testing({}, { locale })}
          </p>
          <h1 class="mt-6 text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
            {m.solutions_beta_testing_hero_title({}, { locale })}
          </h1>
          <p class="max-w-3xl mx-auto mt-6 text-xl leading-relaxed text-gray-300">
            {m.solutions_beta_testing_hero_subtitle({}, { locale })}
          </p>

          <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-amber-600 rounded-xl hover:bg-amber-700 focus:ring-2 focus:ring-amber-500 focus:ring-offset-2"
            >
              {m.solutions_get_started({}, { locale })}
            </a>
            <a
              href={getRelativeLocaleUrl(locale, 'docs/plugin/api')}
              class="px-8 py-4 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
            >
              {m.solutions_view_docs({}, { locale })}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="py-16 bg-gray-800 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
          <div class="p-8 transition-all duration-300 bg-gray-900 border border-gray-700 rounded-2xl hover:border-amber-500/50">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl ring-1 bg-amber-500/15 ring-amber-300/40">
              <svg class="w-7 h-7 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_beta_testing_feature1_title({}, { locale })}</h3>
            <p class="text-gray-400 leading-relaxed">{m.solutions_beta_testing_feature1_desc({}, { locale })}</p>
          </div>

          <div class="p-8 transition-all duration-300 bg-gray-900 border border-gray-700 rounded-2xl hover:border-amber-500/50">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl ring-1 bg-amber-500/15 ring-amber-300/40">
              <svg class="w-7 h-7 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_beta_testing_feature2_title({}, { locale })}</h3>
            <p class="text-gray-400 leading-relaxed">{m.solutions_beta_testing_feature2_desc({}, { locale })}</p>
          </div>

          <div class="p-8 transition-all duration-300 bg-gray-900 border border-gray-700 rounded-2xl hover:border-amber-500/50">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl ring-1 bg-amber-500/15 ring-amber-300/40">
              <svg class="w-7 h-7 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_beta_testing_feature3_title({}, { locale })}</h3>
            <p class="text-gray-400 leading-relaxed">{m.solutions_beta_testing_feature3_desc({}, { locale })}</p>
          </div>

          <div class="p-8 transition-all duration-300 bg-gray-900 border border-gray-700 rounded-2xl hover:border-amber-500/50">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl ring-1 bg-amber-500/15 ring-amber-300/40">
              <svg class="w-7 h-7 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_beta_testing_feature4_title({}, { locale })}</h3>
            <p class="text-gray-400 leading-relaxed">{m.solutions_beta_testing_feature4_desc({}, { locale })}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Comparison Table -->
    <section class="py-16 bg-gray-900 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="mb-16 text-center">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_beta_testing_compare_title({}, { locale })}</h2>
        </div>

        <div class="max-w-4xl mx-auto overflow-hidden bg-gray-800 border border-gray-700 rounded-2xl">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-700">
                <th class="px-6 py-4 text-left text-gray-300"></th>
                <th class="px-6 py-4 text-center text-gray-400">{m.solutions_beta_testing_compare_testflight({}, { locale })}</th>
                <th class="px-6 py-4 text-center text-amber-400">{m.solutions_beta_testing_compare_capgo({}, { locale })}</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
              <tr>
                <td class="px-6 py-4 text-gray-300">{m.solutions_beta_testing_compare_upload({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-gray-500">{m.solutions_beta_testing_compare_upload_tf({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-amber-400">{m.solutions_beta_testing_compare_upload_capgo({}, { locale })}</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-300">{m.solutions_beta_testing_compare_distribution({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-gray-500">{m.solutions_beta_testing_compare_distribution_tf({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-amber-400">{m.solutions_beta_testing_compare_distribution_capgo({}, { locale })}</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-300">{m.solutions_beta_testing_compare_switching({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-gray-500">{m.solutions_beta_testing_compare_switching_tf({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-amber-400">{m.solutions_beta_testing_compare_switching_capgo({}, { locale })}</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-300">{m.solutions_beta_testing_compare_feedback({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-gray-500">{m.solutions_beta_testing_compare_feedback_tf({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-amber-400">{m.solutions_beta_testing_compare_feedback_capgo({}, { locale })}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Code Example -->
    <section class="py-16 bg-gray-800 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid items-center gap-12 lg:grid-cols-2">
          <div>
            <h2 class="text-3xl font-bold text-white sm:text-4xl">Build an In-App Channel Selector</h2>
            <p class="mt-6 text-lg text-gray-300 leading-relaxed">
              Give your testers the power to switch between builds directly in your app. A simple UI lists available channels - testers tap to switch and the new build downloads immediately.
            </p>
            <ul class="mt-8 space-y-4">
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-300">List all available channels with one API call</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-300">Switch channels programmatically</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-300">Download happens automatically</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-6 h-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-300">App reloads with the new build</span>
              </li>
            </ul>
          </div>

          <div class="p-6 bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 bg-gray-500 rounded-full"></div>
              <div class="w-3 h-3 bg-gray-500 rounded-full"></div>
              <div class="w-3 h-3 bg-gray-500 rounded-full"></div>
              <span class="ml-2 text-sm text-gray-500">ChannelSelector.tsx</span>
            </div>
            <pre class="overflow-x-auto text-sm text-gray-300"><code>import {'{'} CapacitorUpdater {'}'} from '@capgo/capacitor-updater'

<span class="text-gray-500">// Get available channels</span>
const channels = await CapacitorUpdater.getChannels()

<span class="text-gray-500">// Switch to a different channel</span>
async function switchChannel(channelName: string) {'{'}
  await CapacitorUpdater.setChannel({'{'}
    channel: channelName
  {'}'})

  <span class="text-gray-500">// Download will start automatically</span>
  <span class="text-gray-500">// App reloads when ready</span>
{'}'}

<span class="text-gray-500">// Handle deep link to auto-switch</span>
App.addListener('appUrlOpen', async (data) => {'{'}
  const channel = extractChannel(data.url)
  if (channel) {'{'}
    await switchChannel(channel)
  {'}'}
{'}'})</code></pre>
          </div>
        </div>
      </div>
    </section>

    <!-- Use Cases -->
    <section class="py-16 bg-gray-900 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="mb-16 text-center">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_beta_testing_usecases_title({}, { locale })}</h2>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
          <div class="p-8 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl bg-blue-500/15">
              <svg class="w-7 h-7 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_beta_testing_usecases_qa({}, { locale })}</h3>
            <p class="text-gray-400">{m.solutions_beta_testing_usecases_qa_desc({}, { locale })}</p>
          </div>

          <div class="p-8 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl bg-purple-500/15">
              <svg class="w-7 h-7 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_beta_testing_usecases_beta({}, { locale })}</h3>
            <p class="text-gray-400">{m.solutions_beta_testing_usecases_beta_desc({}, { locale })}</p>
          </div>

          <div class="p-8 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-14 h-14 mb-6 rounded-xl bg-emerald-500/15">
              <svg class="w-7 h-7 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="mb-3 text-xl font-bold text-white">{m.solutions_beta_testing_usecases_stakeholders({}, { locale })}</h3>
            <p class="text-gray-400">{m.solutions_beta_testing_usecases_stakeholders_desc({}, { locale })}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gray-900 sm:py-20">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="relative px-8 py-16 overflow-hidden bg-linear-to-r from-amber-600 to-amber-800 rounded-3xl sm:px-16">
          <div aria-hidden="true" class="absolute inset-0">
            <svg class="absolute inset-0 w-full h-full" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 1463 360">
              <path class="text-amber-500 text-opacity-40" fill="currentColor" d="M-82.673 72l1761.849 472.086-134.327 501.315-1761.85-472.086z"></path>
              <path class="text-amber-400 text-opacity-20" fill="currentColor" d="M-217.088 544.086L1544.761 72l134.327 501.316-1761.849 472.086z"></path>
            </svg>
          </div>
          <div class="relative text-center">
            <h2 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_beta_testing_cta_title({}, { locale })}</h2>
            <p class="max-w-2xl mx-auto mt-4 text-lg text-amber-100">{m.solutions_beta_testing_cta_subtitle({}, { locale })}</p>
            <div class="flex flex-col items-center justify-center gap-4 mt-8 sm:flex-row">
              <a
                href={getRelativeLocaleUrl(locale, 'register')}
                class="px-8 py-4 text-base font-semibold text-amber-600 transition-all duration-200 bg-white rounded-xl hover:bg-gray-100"
              >
                {m.solutions_get_started({}, { locale })}
              </a>
              <a
                href={getRelativeLocaleUrl(locale, 'pricing')}
                class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 border rounded-xl border-white/30 hover:bg-white/10"
              >
                {m.pricing({}, { locale })}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
