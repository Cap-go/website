            </div>
          </div>

          <!-- Pain Points -->
          <div class="space-y-4">
            <div class="bg-gray-900 rounded-xl p-6 border border-gray-700">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-1">{m.solutions_qsr_pain1_title({}, { locale })}</h4>
                  <p class="text-gray-400 text-sm">{m.solutions_qsr_pain1_desc({}, { locale })}</p>
                </div>
              </div>
            </div>

            <div class="bg-gray-900 rounded-xl p-6 border border-gray-700">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
