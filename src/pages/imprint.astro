---
import Layout from '@/layouts/Layout.astro'
import VueImprint from '@/vue-pages/imprint.vue'
import * as m from '../paraglide/messages.js'

const brand = Astro.locals.runtimeConfig.public.brand

const title = [brand, m.imprint({}, { locale: Astro.locals.locale })].join(' | ')
const description = m.imprint_description({}, { locale: Astro.locals.locale }).replace('$1', brand)

const content = { title, description }
---

<Layout content={content}><VueImprint locale={Astro.locals.locale} client:load /></Layout>
