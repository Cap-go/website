---
import { useRuntimeConfig } from '@/config/app'
import Layout from '@/layouts/Layout.astro'
import translations from '@/services/translations'
import VuePlugins from '@/vue-pages/plugins.vue'

const config = useRuntimeConfig()
const brand = config.public.brand

const title = [brand, translations['plugins'][Astro.locals.locale]].join(' | ')
const description = translations['plugins_description'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VuePlugins locale={Astro.locals.locale} client:load /></Layout>
