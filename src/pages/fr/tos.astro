---
import VueTos from '@/vue-pages/tos.vue'
import Layout from '@/layouts/Layout.astro'
import translations from '@/services/translations'

const title = [Astro.locals.runtimeConfig.public.brand, translations['terms'][Astro.locals.locale]].join(' | ')
const description = translations['read_our_terms_of_service'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VueTos locale={Astro.locals.locale} client:load /></Layout>
