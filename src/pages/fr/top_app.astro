---
import Layout from '@/layouts/Layout.astro'
import VueTopapp from '@/vue-pages/top_app.vue'
import translations from '@/services/translations'
import { useRuntimeConfig } from '@/config/app'

const config = useRuntimeConfig()
const brand = config.public.brand

const title = [brand, translations['top_apps_by_framework'][Astro.locals.locale]].join(' | ')
const description = translations['top_100_app_using_different_framworks_on_android_store'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VueTopapp locale={Astro.locals.locale} client:load /></Layout>
