---
import Layout from '@/layouts/Layout.astro'
import VueReturn from '@/vue-pages/return.vue'
import { useRuntimeConfig } from '@/config/app'
import translations from '@/services/translations'

const config = useRuntimeConfig()
const brand = config.public.brand

const title = [brand, translations['return_policy'][Astro.locals.locale]].join(' | ')
const description = translations['read_our_return_policy'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VueReturn locale={Astro.locals.locale} client:load /></Layout>
