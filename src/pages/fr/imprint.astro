---
import Layout from '@/layouts/Layout.astro'
import VueImprint from '@/vue-pages/imprint.vue'
import translations from '@/services/translations'

const brand = Astro.locals.runtimeConfig.public.brand

const title = [brand, translations['imprint'][Astro.locals.locale]].join(' | ')
const description = translations['imprint_description'][Astro.locals.locale].replace('$1', brand)

const content = { title, description }
---

<Layout content={content}><VueImprint locale={Astro.locals.locale} client:load /></Layout>
