---
import Layout from '@/layouts/Layout.astro'
import VueTopcapacitorapp from '@/vue-pages/top_capacitor_app.vue'
import translations from '@/services/translations'

const brand = Astro.locals.runtimeConfig.public.brand

const title = [brand, translations['top_capacitor_apps'][Astro.locals.locale]].join(' | ')
const description = translations['top_100_app_using_capacitor_on_android_play_store'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VueTopcapacitorapp locale={Astro.locals.locale} client:load /></Layout>
