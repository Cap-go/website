---
import Layout from '@/layouts/Layout.astro'
import translations from '@/services/translations'
import VuePricing from '@/vue-pages/pricing.vue'

const brand = Astro.locals.runtimeConfig.public.brand

const title = [brand, translations['pricing'][Astro.locals.locale]].join(' | ')
const description = translations['pricing_description'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VuePricing locale={Astro.locals.locale} client:load /></Layout>
