<style>
  .teleport-line-animation {
    background: linear-gradient(90deg, transparent, rgba(168, 85, 247, 0.5), transparent);
    animation: teleport 4s linear infinite;
  }

  @keyframes teleport {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100vw);
    }
  }
</style>