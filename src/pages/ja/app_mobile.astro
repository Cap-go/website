---
import Layout from '@/layouts/Layout.astro'
import VueAppmobile from '@/vue-pages/app_mobile.vue'

const title = [Astro.locals.runtimeConfig.public.brand, Astro.locals.translations['Capacitor_Sanbox_App'][Astro.locals.locale]].join(' | ')
const description = Astro.locals.translations['Capacitor_Sanbox_App_description'][Astro.locals.locale]

const content = {
  title,
  description,
  image: `${Astro.locals.runtimeConfig.public.baseUrl}/app_demo.webp`,
}
---

<Layout content={content}><VueAppmobile locale={Astro.locals.locale} client:load /></Layout>
