---
import Layout from '@/layouts/Layout.astro'
import VueDisclaimer from '@/vue-pages/disclaimer.vue'

const title = [Astro.locals.runtimeConfig.public.brand, Astro.locals.translations['disclaimer'][Astro.locals.locale]].join(' | ')
const description = Astro.locals.translations['read_our_disclaimer'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VueDisclaimer locale={Astro.locals.locale} client:load /></Layout>
