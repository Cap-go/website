    <script is:inline>
    const feeMap = {
      ios: { total: 99, detail: 'Apple Developer Program' },
      android: { total: 25, detail: 'Google Play Console' },
      both: { total: 124, detail: 'Apple + Google developer fees' },
    }

    const radios = document.querySelectorAll('input[name="platform-fee"]')
    const totalEl = document.querySelector('[data-fee-total]')
    const detailEl = document.querySelector('[data-fee-detail]')

    if (totalEl && detailEl) {
      const update = () => {
        const selected = document.querySelector('input[name="platform-fee"]:checked')
        if (!selected) return
        const data = feeMap[selected.value]
        if (!data) return
        totalEl.textContent = `$${data.total}`
        detailEl.textContent = data.detail
      }

      radios.forEach((radio) => radio.addEventListener('change', update))
      update()
    }
    </script>
