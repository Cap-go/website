---
import Layout from '@/layouts/Layout.astro'

const title = [Astro.locals.runtimeConfig.public.brand, Astro.locals.translations['sla_policy'][Astro.locals.locale]].join(' | ')
const description = Astro.locals.translations['read_our_sla_policy'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}>
  <div class="prose prose-sm m-auto px-3 text-left">
    <h2>{Astro.locals.translations['sla_title'][Astro.locals.locale]}</h2>
    <h2>{Astro.locals.translations['enterprise_platform_uptime_sla'][Astro.locals.locale]}</h2>
    <p>{Astro.locals.translations['sla_intro'][Astro.locals.locale]}</p>
    <h3>{Astro.locals.translations['uptime_commitment_title'][Astro.locals.locale]}</h3>
    <p>{Astro.locals.translations['uptime_commitment_desc'][Astro.locals.locale]}</p>
    <h3>{Astro.locals.translations['service_credits_title'][Astro.locals.locale]}</h3>
    <p>{Astro.locals.translations['service_credits_desc'][Astro.locals.locale]}</p>
    <table>
      <tr>
        <th>{Astro.locals.translations['actual_availability'][Astro.locals.locale]}</th>
        <th>{Astro.locals.translations['credit_percentage'][Astro.locals.locale]}</th>
      </tr>
      <tr>
        <td>{Astro.locals.translations['availability_99_98'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['credit_10_percent'][Astro.locals.locale]}</td>
      </tr>
      <tr>
        <td>{Astro.locals.translations['availability_98_97'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['credit_15_percent'][Astro.locals.locale]}</td>
      </tr>
      <tr>
        <td>{Astro.locals.translations['availability_97_95'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['credit_20_percent'][Astro.locals.locale]}</td>
      </tr>
      <tr>
        <td>{Astro.locals.translations['availability_below_95'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['credit_30_percent'][Astro.locals.locale]}</td>
      </tr>
    </table>
    <h3>{Astro.locals.translations['credit_requests_payment_title'][Astro.locals.locale]}</h3>
    <p>{Astro.locals.translations['credit_requests_payment_desc'][Astro.locals.locale]}</p>
    <h3>{Astro.locals.translations['4_definitions_title'][Astro.locals.locale]}</h3>
    <p>{Astro.locals.translations['definitions_desc'][Astro.locals.locale]}</p>
    <h4>{Astro.locals.translations['scheduled_availability_title'][Astro.locals.locale]}</h4>
    <p>{Astro.locals.translations['scheduled_availability_desc'][Astro.locals.locale]}</p>
    <h4>{Astro.locals.translations['unscheduled_downtime_title'][Astro.locals.locale]}</h4>
    <p>{Astro.locals.translations['unscheduled_downtime_desc'][Astro.locals.locale]}</p>
    <h4>{Astro.locals.translations['actual_availability_title'][Astro.locals.locale]}</h4>
    <p>{Astro.locals.translations['actual_availability_desc'][Astro.locals.locale]}</p>
    <h4>{Astro.locals.translations['production_title'][Astro.locals.locale]}</h4>
    <p>{Astro.locals.translations['production_desc'][Astro.locals.locale]}</p>
    <p>{Astro.locals.translations['non_production_desc'][Astro.locals.locale]}</p>
    <h3>{Astro.locals.translations['sla_exclusions_title'][Astro.locals.locale]}</h3>
    <h4>{Astro.locals.translations['general_service_exclusions_title'][Astro.locals.locale]}</h4>
    <ul>
      <li>{Astro.locals.translations['general_service_exclusion_1'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['general_service_exclusion_2'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['general_service_exclusion_3'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['general_service_exclusion_4'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['general_service_exclusion_5'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['general_service_exclusion_6'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['general_service_exclusion_7'][Astro.locals.locale]}</li>
    </ul>
    <h4>{Astro.locals.translations['live_update_sla_exclusions_title'][Astro.locals.locale]}</h4>
    <ul>
      <li>{Astro.locals.translations['live_update_exclusion_1'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['live_update_exclusion_2'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['live_update_exclusion_3'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['live_update_exclusion_4'][Astro.locals.locale]}</li>
      <li>{Astro.locals.translations['live_update_exclusion_5'][Astro.locals.locale]}</li>
    </ul>
    <h2>{Astro.locals.translations['support_title'][Astro.locals.locale]}</h2>
    <p>{Astro.locals.translations['support_desc'][Astro.locals.locale]}</p>
    <h3>{Astro.locals.translations['urgent_support_title'][Astro.locals.locale]}</h3>
    <p><strong>{Astro.locals.translations['urgent_support_subtitle'][Astro.locals.locale]}</strong></p>
    <p>{Astro.locals.translations['urgent_support_desc'][Astro.locals.locale]}</p>
    <h3>{Astro.locals.translations['high_support_title'][Astro.locals.locale]}</h3>
    <p><strong>{Astro.locals.translations['high_support_subtitle'][Astro.locals.locale]}</strong></p>
    <p>{Astro.locals.translations['high_support_desc'][Astro.locals.locale]}</p>
    <h3>{Astro.locals.translations['normal_support_title'][Astro.locals.locale]}</h3>
    <p><strong>{Astro.locals.translations['normal_support_subtitle'][Astro.locals.locale]}</strong></p>
    <p>{Astro.locals.translations['normal_support_desc'][Astro.locals.locale]}</p>
    <h3>{Astro.locals.translations['low_support_title'][Astro.locals.locale]}</h3>
    <p><strong>{Astro.locals.translations['low_support_subtitle'][Astro.locals.locale]}</strong></p>
    <p>{Astro.locals.translations['low_support_desc'][Astro.locals.locale]}</p>
    <h2>{Astro.locals.translations['target_initial_response_times_title'][Astro.locals.locale]}</h2>
    <table>
      <tr>
        <th>{Astro.locals.translations['severity_level'][Astro.locals.locale]}</th>
        <th>{Astro.locals.translations['team_plan'][Astro.locals.locale]}</th>
        <th>{Astro.locals.translations['pay_as_you_go_plan'][Astro.locals.locale]}</th>
        <th>{Astro.locals.translations['priority_plus_plan'][Astro.locals.locale]}</th>
      </tr>
      <tr>
        <td>{Astro.locals.translations['urgent_support_title'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['urgent_team_response'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['urgent_payg_response'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['urgent_priority_response'][Astro.locals.locale]}</td>
      </tr>
      <tr>
        <td>{Astro.locals.translations['high_support_title'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['high_team_response'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['high_payg_response'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['high_priority_response'][Astro.locals.locale]}</td>
      </tr>
      <tr>
        <td>{Astro.locals.translations['normal_support_title'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['normal_team_response'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['normal_payg_response'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['normal_priority_response'][Astro.locals.locale]}</td>
      </tr>
      <tr>
        <td>{Astro.locals.translations['low_support_title'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['low_team_response'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['low_payg_response'][Astro.locals.locale]}</td>
        <td>{Astro.locals.translations['low_priority_response'][Astro.locals.locale]}</td>
      </tr>
    </table>
    <p>{Astro.locals.translations['business_hours_note'][Astro.locals.locale]}</p>
  </div>
</Layout>
