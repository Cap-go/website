---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { renameCat, shortNumber } from '@/services/misc'

const title = [Astro.locals.runtimeConfig.public.brand, m.top_cordova_apps_title({}, { locale: Astro.locals.locale })].join(' | ')
const description = m.top_cordova_apps({}, { locale: Astro.locals.locale })

const content = { title, description }

const config = Astro.locals.runtimeConfig

// Initialize state
let apps: any[] = []
let usage = 7.21
const others = ['top_capacitor_app', 'top_react_native_app', 'top_flutter_app']

// Fetch data on the server side
try {
  const response = await fetch(`${config.public.baseApiUrl}/private/store_top?mode=cordova`)
  if (response.ok) {
    const data = await response.json()
    apps = data.apps
    usage = data.usage
  }
} catch (error) {
  console.error('Failed to fetch app data:', error)
}
---

<Layout content={content}>
  <section class="py-10 sm:py-12 lg:py-20">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="text-3xl font-bold leading-tight text-white sm:text-4xl lg:text-5xl">
          {m.top_cordova_apps_title({}, { locale: Astro.locals.locale })}
        </h1>
        <h2 class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-gray-50">
          {description}
        </h2>
        <p class="mx-auto mt-4 max-w-xl text-xs leading-relaxed text-gray-200">
          {m.cordova_power_approximately_1_of_apps_on_google_play_store({}, { locale: Astro.locals.locale }).replace('$1', usage.toString())}
        </p>
      </div>
      <div class="grid grid-cols-1 gap-6 mx-auto mt-8 max-w-md lg:grid-cols-3 lg:mt-16 lg:max-w-full">
        {
          apps.map((app, index) => (
            <div class="overflow-hidden bg-gray-100 rounded shadow">
              <div class="p-5">
                <div class="relative">
                  <a href={app.url} aria-label={app.title} class="block aspect-w-4 aspect-h-3">
                    <img class="object-cover w-full h-full rounded-lg" src={app.icon} alt={`app icon ${app.title}`} />
                  </a>
                  <div class="absolute top-4 left-4">
                    <span class="py-2 px-4 text-xs font-semibold tracking-widest text-gray-900 uppercase bg-white rounded-full shadow-lg">{renameCat(app.category)}</span>
                  </div>
                  <div class="absolute top-4 right-4">
                    <span class="py-2 px-4 text-xs font-semibold tracking-widest text-white uppercase rounded-full shadow-lg bg-pumpkin-orange-500">{index + 1}</span>
                  </div>
                </div>
                <span class="block mt-6 text-sm font-semibold tracking-widest text-gray-500 uppercase">
                  {shortNumber(app.installs)} {m.downloads({}, { locale: Astro.locals.locale })}
                </span>
                <p class="mt-5 text-2xl font-semibold">
                  <a href={app.url} aria-label={app.title} class="text-black">
                    {app.title}
                  </a>
                </p>
                <a
                  href={app.url}
                  aria-label={app.title}
                  class="inline-flex justify-center items-center pb-0.5 mt-5 text-base font-semibold text-gray-600 border-b-2 border-transparent transition-all duration-200 hover:border-blue-600 focus:border-blue-600"
                >
                  {m.see_in_play_store({}, { locale: Astro.locals.locale })}
                  <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path
                      fill-rule="evenodd"
                      d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
              </div>
            </div>
          ))
        }
      </div>
      <div class="grid grid-cols-1 gap-6 mx-auto mt-8 max-w-md lg:grid-cols-3 lg:mt-16 lg:max-w-full">
        {
          others.map((l) => (
            <a href={`/${l}/`} class="flex flex-col py-8 text-center bg-gray-700 rounded-lg transition-all duration-200 hover:bg-gray-700 focus:bg-blue-900">
              <div class="flex relative mx-auto">
                <div class="block pb-4 mx-4 w-full">
                  <img class="object-cover w-full h-full rounded-lg" src={`/${l.replace('top_', '').replace('_app', '')}.webp`} alt={`blog illustration ${l}`} />
                </div>
              </div>
              <div class="px-4 pt-2 w-full sm:pt-0">
                <p class="text-lg font-bold capitalize">{renameCat(l)}</p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
