---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { createServiceLdJson, createLdJsonGraph } from '@/lib/ldJson'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.live_update({}, { locale })}`
const description = m.live_update_description({}, { locale })

const serviceLdJson = createServiceLdJson(Astro.locals.runtimeConfig.public, {
  name: title,
  description: description,
  url: Astro.url.href,
  serviceType: 'Software Development Service',
  areaServed: ['Worldwide'],
})

const ldJSON = createLdJsonGraph(Astro.locals.runtimeConfig.public, serviceLdJson, {
  includeOrganization: true,
})

const content = {
  title,
  description,
  ldJSON,
}
---

<Layout content={content}>
  <div>
    <div class="relative">
      <!-- Animated background elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        {
          Array.from({ length: 12 }).map(() => (
            <div
              class="absolute w-2 h-2 bg-blue-500 rounded-full opacity-20 animate-pulse"
              style={{
                top: `${Math.random() * 100}%`,
                left: `${Math.random() * 100}%`,
                animationDelay: `${Math.random() * 3}s`,
                animationDuration: `${2 + Math.random() * 2}s`,
              }}
            />
          ))
        }
      </div>

      <!-- Hero Section -->
      <section class="relative py-12 sm:py-16 lg:pt-20 xl:pb-0">
        <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <div class="relative z-10 max-w-4xl mx-auto text-center">
            <p class="inline-flex px-4 py-2 text-base text-blue-100 border rounded-full font-pj border-blue-400/40 bg-blue-500/10">
              <svg class="w-5 h-5 mr-2 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              {m.iterate_faster({}, { locale })}
            </p>
            <h1 class="mt-5 text-3xl font-bold leading-tight text-white sm:text-4xl sm:leading-tight lg:leading-tight xl:text-5xl font-pj">
              {m.live_update_hero_title({}, { locale })}
            </h1>
            <h2 class="max-w-2xl mx-auto mt-6 text-base leading-7 text-gray-300 font-inter">
              {m.live_update_hero_subtitle({}, { locale })}
            </h2>

            <!-- CTA buttons -->
            <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
              <a
                href={getRelativeLocaleUrl(locale, 'register')}
                class="px-8 py-3 text-base font-semibold text-white transition-all duration-200 bg-blue-600 rounded-xl hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none"
              >
                {m.live_update_get_started({}, { locale })}
              </a>
              <a
                href={getRelativeLocaleUrl(locale, 'docs/live-updates')}
                class="px-8 py-3 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
              >
                {m.live_update_view_docs({}, { locale })}
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Grid Section -->
      <section class="py-12 bg-gray-900 sm:py-16 lg:py-20">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <div class="mb-12 text-center">
            <h2 class="text-3xl font-bold leading-tight text-white sm:text-4xl">
              {m.live_update_features_title({}, { locale })}
            </h2>
            <p class="mt-4 text-lg text-gray-300">
              {m.live_update_features_subtitle({}, { locale })}
            </p>
          </div>

          <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
            <!-- Breaking Update Detection -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-blue-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-blue-500/15 ring-blue-300/40">
                <svg class="w-6 h-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-white">{m.live_update_feature_breaking_detection({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.live_update_feature_breaking_detection_desc({}, { locale })}
              </p>
            </div>

            <!-- Pure Native Engine -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-blue-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-blue-500/15 ring-blue-300/40">
                <svg class="w-6 h-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-white">{m.live_update_feature_native_engine({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.live_update_feature_native_engine_desc({}, { locale })}
              </p>
            </div>

            <!-- Automatic Rollback -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-blue-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-blue-500/15 ring-blue-300/40">
                <svg class="w-6 h-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-white">{m.live_update_feature_auto_rollback({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.live_update_feature_auto_rollback_desc({}, { locale })}
              </p>
            </div>

            <!-- Self-Healing Updates -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-blue-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-blue-500/15 ring-blue-300/40">
                <svg class="w-6 h-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-white">{m.live_update_feature_self_healing({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.live_update_feature_self_healing_desc({}, { locale })}
              </p>
            </div>

            <!-- Pre-flight Validation -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-blue-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-blue-500/15 ring-blue-300/40">
                <svg class="w-6 h-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-white">{m.live_update_feature_preflight({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.live_update_feature_preflight_desc({}, { locale })}
              </p>
            </div>

            <!-- End-to-End Encryption -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-blue-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-blue-500/15 ring-blue-300/40">
                <svg class="w-6 h-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-white">{m.live_update_feature_encryption({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.live_update_feature_encryption_desc({}, { locale })}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Observability / Logs Section -->
      <section class="bg-gray-900 py-14">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] items-center">
            <div>
              <p class="inline-flex px-3 py-1 text-xs font-semibold tracking-wide uppercase border rounded-full text-sky-100 bg-blue-500/10 border-blue-400/30">
                {m.live_update_logs_kicker({}, { locale })}
              </p>
              <h2 class="mt-4 text-3xl font-bold text-white sm:text-4xl">
                {m.live_update_logs_title({}, { locale })}
              </h2>
              <p class="mt-4 text-lg text-gray-200">
                {m.live_update_logs_desc({}, { locale })}
              </p>
              <ul class="mt-6 space-y-3 text-gray-200">
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-emerald-400"></span>
                  {m.live_update_logs_bullet1({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-amber-400"></span>
                  {m.live_update_logs_bullet2({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-rose-400"></span>
                  {m.live_update_logs_bullet3({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-sky-400"></span>
                  {m.live_update_logs_bullet4({}, { locale })}
                </li>
              </ul>
              <div class="flex gap-3 mt-8">
                <a
                  href={getRelativeLocaleUrl(locale, 'register')}
                  class="px-6 py-3 text-sm font-semibold text-white transition bg-blue-600 rounded-lg shadow-lg shadow-blue-600/30 hover:bg-blue-700"
                >
                  {m.live_update_logs_cta_primary({}, { locale })}
                </a>
                <a
                  href={getRelativeLocaleUrl(locale, 'docs/webapp/logs')}
                  class="px-6 py-3 text-sm font-semibold text-blue-100 transition border rounded-lg border-white/10 hover:border-blue-400/60"
                >
                  {m.live_update_logs_cta_secondary({}, { locale })}
                </a>
              </div>
            </div>
            <div class="relative p-6 border shadow-2xl bg-gray-800/80 border-white/5 rounded-2xl shadow-blue-900/40">
              <div class="space-y-3 font-mono text-xs text-gray-100">
                <div class="flex justify-between">
                  <span class="text-sky-300">14:30:02</span>
                  <span class="text-gray-300">device A1B2C3</span>
                  <span class="text-amber-200">download_start 2.6.0</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-sky-300">14:30:07</span>
                  <span class="text-gray-300">device A1B2C3</span>
                  <span class="text-rose-300">update_fail (network_timeout)</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-sky-300">14:30:08</span>
                  <span class="text-gray-300">device A1B2C3</span>
                  <span class="text-sky-200">auto-retry scheduled (30s)</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-sky-300">14:31:15</span>
                  <span class="text-gray-300">device F0E1D2</span>
                  <span class="text-rose-300">update_fail (out_of_memory)</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-sky-300">14:31:16</span>
                  <span class="text-gray-300">device F0E1D2</span>
                  <span class="text-emerald-300">rollback → builtin bundle</span>
                </div>
              </div>
              <p class="mt-6 text-sm text-gray-300">
                {m.live_update_logs_panel_footer({}, { locale })}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Dynamic Channels Section -->
      <section class="py-14 bg-gray-800/80">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <div class="grid gap-10 lg:grid-cols-[1fr_1fr] items-center">
            <div class="order-2 lg:order-1">
              <p class="inline-flex px-3 py-1 text-xs font-semibold tracking-wide uppercase border rounded-full text-amber-100 bg-amber-500/10 border-amber-400/30">
                {m.live_update_dynamic_kicker({}, { locale })}
              </p>
              <h2 class="mt-4 text-3xl font-bold text-white sm:text-4xl">
                {m.live_update_dynamic_title({}, { locale })}
              </h2>
              <p class="mt-4 text-lg text-gray-200">
                {m.live_update_dynamic_desc({}, { locale })}
              </p>
              <ul class="mt-6 space-y-3 text-gray-200">
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-emerald-400"></span>
                  <span class="inline-flex flex-wrap items-center gap-2 leading-relaxed">
                    {m.live_update_dynamic_bullet1_prefix({}, { locale })}
                    <span class="inline-flex items-center px-3 py-1 text-[13px] font-semibold rounded-lg border border-white/10 bg-gray-900/80 shadow-[inset_0_1px_0_rgba(255,255,255,0.08)]">{m.live_update_dynamic_label_production({}, { locale })}</span>
                    {m.live_update_dynamic_label_to({}, { locale })}
                    <span class="inline-flex items-center px-3 py-1 text-[13px] font-semibold rounded-lg border border-white/10 bg-gray-900/80 shadow-[inset_0_1px_0_rgba(255,255,255,0.08)]">{m.live_update_dynamic_label_staging({}, { locale })}</span>
                    {m.live_update_dynamic_bullet1_suffix({}, { locale })}
                  </span>
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-sky-400"></span>
                  {m.live_update_dynamic_bullet2({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-amber-400"></span>
                  {m.live_update_dynamic_bullet3({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-rose-400"></span>
                  {m.live_update_dynamic_bullet4({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-purple-400"></span>
                  {m.live_update_dynamic_bullet5({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-cyan-400"></span>
                  {m.live_update_dynamic_bullet6({}, { locale })}
                </li>
              </ul>
              <div class="flex gap-3 mt-8">
                <a
                  href={getRelativeLocaleUrl(locale, 'docs/live-updates/channels')}
                  class="px-6 py-3 text-sm font-semibold text-blue-100 transition border rounded-lg border-white/10 hover:border-blue-400/60"
                >
                  {m.live_update_dynamic_cta_primary({}, { locale })}
                </a>
                <a
                  href={getRelativeLocaleUrl(locale, 'register')}
                  class="px-6 py-3 text-sm font-semibold text-white transition bg-blue-600 rounded-lg shadow-lg shadow-blue-600/30 hover:bg-blue-700"
                >
                  {m.live_update_dynamic_cta_secondary({}, { locale })}
                </a>
              </div>
            </div>
            <div class="relative order-1 p-6 border shadow-2xl lg:order-2 bg-gray-900/70 border-white/5 rounded-2xl shadow-amber-900/30">
              <div class="space-y-3 font-mono text-xs text-gray-100">
                <div class="flex justify-between">
                  <span class="text-amber-300">user selects</span>
                  <span class="text-gray-300">“Staging (v2.5.0-rc1)”</span>
                  <span class="text-emerald-300">setChannel</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-sky-300">14:41:10</span>
                  <span class="text-gray-300">device A1B2C3</span>
                  <span class="text-emerald-300">get → staging manifest</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-sky-300">14:41:14</span>
                  <span class="text-gray-300">device A1B2C3</span>
                  <span class="text-emerald-300">download_complete 2.5.0-rc1</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-sky-300">14:43:02</span>
                  <span class="text-gray-300">support user Q7R8S9</span>
                  <span class="text-rose-300">setChannel → debug-logs</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-sky-300">14:55:00</span>
                  <span class="text-gray-300">canary cohort</span>
                  <span class="text-emerald-300">auto-promoted to production</span>
                </div>
              </div>
              <p class="mt-6 text-sm text-gray-300">
                {m.live_update_dynamic_panel_footer({}, { locale })}
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Cloud-Native Configuration Section -->
      <section class="py-14 bg-gray-900">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <div class="grid gap-10 lg:grid-cols-[1fr_1fr] items-center">
            <div>
              <p class="inline-flex px-3 py-1 text-xs font-semibold tracking-wide uppercase border rounded-full text-emerald-100 bg-emerald-500/10 border-emerald-400/30">
                {m.live_update_cloud_config_kicker({}, { locale })}
              </p>
              <h2 class="mt-4 text-3xl font-bold text-white sm:text-4xl">
                {m.live_update_cloud_config_title({}, { locale })}
              </h2>
              <p class="mt-4 text-lg text-gray-200">
                {m.live_update_cloud_config_desc({}, { locale })}
              </p>
              <ul class="mt-6 space-y-3 text-gray-200">
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-emerald-400"></span>
                  {m.live_update_cloud_config_bullet1({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-sky-400"></span>
                  {m.live_update_cloud_config_bullet2({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-amber-400"></span>
                  {m.live_update_cloud_config_bullet3({}, { locale })}
                </li>
                <li class="flex gap-3">
                  <span class="w-2 h-2 mt-1 rounded-full bg-rose-400"></span>
                  {m.live_update_cloud_config_bullet4({}, { locale })}
                </li>
              </ul>
            </div>
            <div class="relative p-6 border shadow-2xl bg-gray-800/80 border-white/5 rounded-2xl shadow-emerald-900/30">
              <div class="mb-4 text-sm font-semibold text-emerald-300">
                {m.live_update_cloud_config_panel_title({}, { locale })}
              </div>
              <div class="space-y-4 font-mono text-xs text-gray-100">
                <div class="flex items-center gap-3 p-3 border rounded-lg bg-gray-900/60 border-white/5">
                  <span class="flex items-center justify-center w-6 h-6 text-xs font-bold text-white rounded-full bg-emerald-500">1</span>
                  <div class="flex-1">
                    <span class="text-gray-400">Dashboard:</span>
                    <span class="ml-2 text-white">Click "Assign to channel: beta-testers"</span>
                  </div>
                  <span class="text-emerald-400">0s</span>
                </div>
                <div class="flex items-center gap-3 p-3 border rounded-lg bg-gray-900/60 border-white/5">
                  <span class="flex items-center justify-center w-6 h-6 text-xs font-bold text-white rounded-full bg-emerald-500">2</span>
                  <div class="flex-1">
                    <span class="text-gray-400">Replication:</span>
                    <span class="ml-2 text-white">Syncing to 12 edge regions...</span>
                  </div>
                  <span class="text-amber-400">~30s</span>
                </div>
                <div class="flex items-center gap-3 p-3 border rounded-lg bg-gray-900/60 border-white/5">
                  <span class="flex items-center justify-center w-6 h-6 text-xs font-bold text-white rounded-full bg-emerald-500">3</span>
                  <div class="flex-1">
                    <span class="text-gray-400">Device (Tokyo):</span>
                    <span class="ml-2 text-emerald-300">Receives new config</span>
                  </div>
                  <span class="text-emerald-400">&lt;2min</span>
                </div>
                <div class="flex items-center gap-3 p-3 border rounded-lg bg-gray-900/60 border-white/5">
                  <span class="flex items-center justify-center w-6 h-6 text-xs font-bold text-white rounded-full bg-emerald-500">4</span>
                  <div class="flex-1">
                    <span class="text-gray-400">Device (Berlin):</span>
                    <span class="ml-2 text-emerald-300">Receives new config</span>
                  </div>
                  <span class="text-emerald-400">&lt;2min</span>
                </div>
              </div>
