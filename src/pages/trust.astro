---
import Layout from '@/layouts/Layout.astro'
import VueTrust from '@/vue-pages/trust.vue'
import * as m from '@/paraglide/messages'

const title = [Astro.locals.runtimeConfig.public.brand, m.trust({}, { locale: Astro.locals.locale })].join(' | ')
const description = m.consulting_description({}, { locale: Astro.locals.locale })

const content = { title, description }
---

<Layout content={content}><VueTrust locale={Astro.locals.locale} client:load /></Layout>
