---
import Layout from '@/layouts/Layout.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'

const pageTitle = 'CI/CD Integration | Capgo'
const pageDescription = 'Seamlessly integrate Capgo live updates into your CI/CD pipeline. Support for GitHub Actions, GitLab CI, Jenkins, and more.'
---

<Layout title={pageTitle} description={pageDescription}>
  <div>
    <!-- Hero Section -->
    <section class="relative py-20 sm:py-24 lg:py-32 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-black"></div>
      <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
      
      <!-- Animated CI/CD Pipeline Lines -->
      <div class="absolute inset-0 overflow-hidden">
        {
          Array.from({ length: 8 }).map((_, i) => (
            <div
              class="pipeline-flow absolute h-px bg-gradient-to-r from-transparent via-blue-400 to-transparent opacity-30"
              style={{
                top: `${20 + i * 10}%`,
                left: `-50%`,
                width: '200%',
                animationDelay: `${i * 0.5}s`,
                animation: 'pipeline-flow 4s ease-in-out infinite',
              }}
            />
          ))
        }
      </div>
      
      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
