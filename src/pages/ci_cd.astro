---
import Layout from '@/layouts/Layout.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'
import CiCdHeroIllustration from '@/components/landing/illustrations/CiCdHero.astro'
import ProfessionalSetupIllustration from '@/components/landing/illustrations/ProfessionalSetup.astro'
import PushToBuildIllustration from '@/components/landing/illustrations/PushToBuild.astro'
import DeployToStoresIllustration from '@/components/landing/illustrations/DeployToStores.astro'
import FeatureSection from '@/components/landing/FeatureSection.astro'

const pageTitle = 'Mobile CI/CD Setup | Capgo'
const pageDescription = 'Expert CI/CD setup for native mobile app builds. Automate iOS and Android builds with GitHub Actions, GitLab CI, Jenkins, and more.'
