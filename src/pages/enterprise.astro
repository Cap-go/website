---
import Layout from '@/layouts/Layout.astro'
import Testimonials from '@/components/Testimonials.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'
import { createLdJsonGraph, createServiceLdJson, createProductLdJson } from '@/lib/ldJson'
import HierarchyDashboardIllustration from '@/components/solutions/HierarchyDashboardIllustration.astro'
import RolloutIllustration from '@/components/solutions/RolloutIllustration.astro'
import SecurityIllustration from '@/components/solutions/SecurityIllustration.astro'

const locale = Astro.locals.locale

const title = [Astro.locals.runtimeConfig.public.brand, 'Enterprise'].join(' | ')
const description = 'Enterprise-grade live updates for Capacitor apps. Built for teams that need advanced security, compliance, and dedicated support at scale.'

// Build absolute URLs for structured data (Schema.org requires absolute URLs)
const baseUrl = Astro.locals.runtimeConfig.public.baseUrl
const enterpriseUrl = `${baseUrl}${getRelativeLocaleUrl(Astro.locals.locale, 'enterprise/')}`
const homeUrl = `${baseUrl}${getRelativeLocaleUrl(Astro.locals.locale, '/')}`

// Create enterprise service schema
const enterpriseService = createServiceLdJson(Astro.locals.runtimeConfig.public, {
  name: 'Capgo Enterprise - Professional Live Updates',
  description: 'Enterprise-grade live update platform for Capacitor applications with advanced security, compliance features, and dedicated support for large-scale deployments.',
  url: enterpriseUrl,
  serviceType: 'Enterprise Software Service',
  areaServed: ['Worldwide'],
})

// Create enterprise product offering
const enterpriseProduct = createProductLdJson(Astro.locals.runtimeConfig.public, {
  name: 'Capgo Enterprise Plan',
  description: 'Complete enterprise solution with advanced security, compliance, dedicated support, and unlimited scalability for professional teams.',
  url: enterpriseUrl,
  sku: 'capgo-enterprise',
  offers: [
    {
      price: '0',
      priceCurrency: 'USD',
      availability: 'https://schema.org/InStock',
      priceValidUntil: new Date(Date.now() + 365 * 24 * 60 * 60 * 1000).toISOString().split('T')[0],
    },
  ],
})

// Enhanced enterprise product with additional properties
const enhancedEnterpriseProduct = {
  ...enterpriseProduct,
  category: 'Enterprise Software',
  audience: {
    '@type': 'BusinessAudience',
    audienceType: 'Enterprise Teams',
    geographicArea: 'Global',
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Enterprise Features',
    itemListElement: [
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Advanced Security & Compliance',
          description: 'SOC 2 Type II compliance, end-to-end encryption, and enterprise-grade security controls.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Dedicated Support',
          description: '24/7 priority support with dedicated account management and SLA guarantees.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Custom Deployment Options',
          description: 'On-premise, hybrid cloud, or dedicated cloud deployments tailored to your infrastructure needs.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Advanced Analytics & Reporting',
          description: 'Comprehensive deployment analytics, performance monitoring, and custom reporting dashboards.',
        },
      },
    ],
  },
}

// Create comprehensive LD+JSON for enterprise page
const content = {
  title,
  description,
  image: `${baseUrl}/capgo_social.png`,
  ldJSON: createLdJsonGraph(Astro.locals.runtimeConfig.public, enhancedEnterpriseProduct, {
    includeOrganization: true,
    includeBreadcrumbs: true,
    breadcrumbs: [
      {
        name: 'Home',
        url: homeUrl,
      },
      {
        name: 'Enterprise',
        url: enterpriseUrl,
      },
    ],
  }),
}

// Add the enterprise service as additional entity
content.ldJSON['@graph'].push(enterpriseService)
---

<Layout content={content}>
  <!-- Hero Section -->
  <section class="relative py-20 sm:py-28 lg:py-36 overflow-hidden">
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-6xl h-full">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
      </div>
    </div>

    <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-200 border rounded-full border-blue-400/40 bg-blue-500/10 mb-8">
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          {m.enterprise_ready()}
        </div>

        <h1 class="text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
          {m.deliver_updates({}, { locale: Astro.locals.locale })}
          <br />
          {m.at_scale({}, { locale: Astro.locals.locale })}
        </h1>

        <p class="max-w-3xl mx-auto mt-8 text-xl leading-relaxed text-gray-300">
          {m.deploy_ota({}, { locale: Astro.locals.locale })}
        </p>

        <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
          <a
            href="https://cal.com/team/capgo/demo"
            target="_blank"
            class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-blue-600 rounded-xl hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 shadow-lg shadow-blue-500/25"
          >
            {m.request_demo({}, { locale: Astro.locals.locale })}
          </a>
          <a
            href="https://cal.com/team/capgo/capgo-enterprise-inquiry"
            target="_blank"
            class="px-8 py-4 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
          >
            {m.contact_sales({}, { locale: Astro.locals.locale })}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trusted By Section -->
  <section class="py-12 bg-gray-800 sm:py-16">
    <div class="px-6 mx-auto max-w-7xl lg:px-8">
      <h2 class="font-semibold text-center text-gray-200 text-lg/8">{m.trusted_by_the_biggest_capacitor_apps({}, { locale: Astro.locals.locale })}</h2>
      <div class="grid items-center max-w-lg grid-cols-2 mx-auto mt-10 gap-x-8 gap-y-10 sm:grid-cols-3 sm:gap-x-10 sm:max-w-2xl lg:grid-cols-5 lg:mx-0 lg:max-w-none">
        <div class="flex flex-col items-center space-y-2">
          <div class="bg-gray-600 shadow-sm rounded-2xl">
            <img class="object-contain w-12 h-12 rounded-xl grayscale" src="/nana-logo-transparent.webp" alt="Nana" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Nana</p>
            <p class="text-xs text-gray-400">2.5M {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <div class="bg-gray-600 shadow-sm rounded-2xl">
            <img class="object-contain w-12 h-12 rounded-xl brightness-90 contrast-75 grayscale" src="/snowqueen.webp" alt="Snowqueen" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Snowqueen</p>
            <p class="text-xs text-gray-400">1.8M {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <div class="bg-gray-600 shadow-sm rounded-2xl">
            <img class="object-contain w-12 h-12 rounded-xl brightness-90 contrast-75 grayscale" src="/shelf_app.webp" alt="Shelf" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Shelf</p>
            <p class="text-xs text-gray-400">950K {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <div class="bg-gray-600 shadow-sm rounded-2xl">
            <img class="object-contain w-12 h-12 rounded-xl brightness-90 contrast-75 grayscale" src="/suez.webp" alt="Suez" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Suez</p>
            <p class="text-xs text-gray-400">3.2M {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <div class="bg-gray-600 shadow-sm rounded-2xl">
            <img class="object-contain w-12 h-12 rounded-xl grayscale" src="/janitor_app.webp" alt="Janitor" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Janitor</p>
            <p class="text-xs text-gray-400">750K {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Your Problems - We Get It -->
  <section class="py-20 bg-gray-900">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-sm font-semibold tracking-wide text-red-400 uppercase mb-4">{m.solutions_enterprise_problems_label({}, { locale })}</h2>
        <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_enterprise_problems_title({}, { locale })}</h3>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Problem 1: Multiple Apps -->
        <div class="bg-gray-800 rounded-2xl p-8 border border-red-500/20">
          <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white mb-3">{m.solutions_enterprise_problem1_title({}, { locale })}</h4>
          <p class="text-gray-400">{m.solutions_enterprise_problem1_desc({}, { locale })}</p>
        </div>

        <!-- Problem 2: Version Fragmentation -->
        <div class="bg-gray-800 rounded-2xl p-8 border border-red-500/20">
          <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white mb-3">{m.solutions_enterprise_problem2_title({}, { locale })}</h4>
          <p class="text-gray-400">{m.solutions_enterprise_problem2_desc({}, { locale })}</p>
        </div>

        <!-- Problem 3: Compliance & Audits -->
        <div class="bg-gray-800 rounded-2xl p-8 border border-red-500/20">
          <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white mb-3">{m.solutions_enterprise_problem3_title({}, { locale })}</h4>
          <p class="text-gray-400">{m.solutions_enterprise_problem3_desc({}, { locale })}</p>
        </div>

        <!-- Problem 4: Slow Rollouts -->
        <div class="bg-gray-800 rounded-2xl p-8 border border-red-500/20">
          <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white mb-3">{m.solutions_enterprise_problem4_title({}, { locale })}</h4>
          <p class="text-gray-400">{m.solutions_enterprise_problem4_desc({}, { locale })}</p>
        </div>

        <!-- Problem 5: Team Coordination -->
        <div class="bg-gray-800 rounded-2xl p-8 border border-red-500/20">
          <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white mb-3">{m.solutions_enterprise_problem5_title({}, { locale })}</h4>
          <p class="text-gray-400">{m.solutions_enterprise_problem5_desc({}, { locale })}</p>
        </div>

        <!-- Problem 6: Production Incidents -->
        <div class="bg-gray-800 rounded-2xl p-8 border border-red-500/20">
          <div class="w-12 h-12 bg-red-500/20 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h4 class="text-xl font-bold text-white mb-3">{m.solutions_enterprise_problem6_title({}, { locale })}</h4>
          <p class="text-gray-400">{m.solutions_enterprise_problem6_desc({}, { locale })}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How We Solve It -->
  <section class="py-20 bg-gray-800">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-sm font-semibold tracking-wide text-green-400 uppercase mb-4">{m.solutions_enterprise_solution_label({}, { locale })}</h2>
        <h3 class="text-3xl font-bold text-white sm:text-4xl">{m.solutions_enterprise_solution_title({}, { locale })}</h3>
        <p class="mt-4 text-xl text-gray-400">{m.solutions_enterprise_solution_subtitle({}, { locale })}</p>
      </div>

      <div class="space-y-12">
        <!-- Solution 1: Multi-App Management -->
        <div class="bg-gray-900 rounded-2xl p-8 lg:p-10 border border-gray-700">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div>
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-white">{m.solutions_enterprise_sol1_title({}, { locale })}</h3>
              </div>
              <p class="text-gray-300 mb-4">{m.solutions_enterprise_sol1_desc({}, { locale })}</p>
              <ul class="space-y-2">
                <li class="flex items-start gap-2 text-gray-400">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {m.solutions_enterprise_sol1_point1({}, { locale })}
                </li>
                <li class="flex items-start gap-2 text-gray-400">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {m.solutions_enterprise_sol1_point2({}, { locale })}
                </li>
                <li class="flex items-start gap-2 text-gray-400">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {m.solutions_enterprise_sol1_point3({}, { locale })}
                </li>
              </ul>
            </div>
            <div class="bg-gray-800 rounded-xl p-6 flex items-center justify-center">
              <div class="w-full max-w-sm">
                <HierarchyDashboardIllustration class="text-green-500" />
              </div>
            </div>
          </div>
        </div>

        <!-- Solution 2: Staged Rollouts -->
        <div class="bg-gray-900 rounded-2xl p-8 lg:p-10 border border-gray-700">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div class="order-2 lg:order-1 bg-gray-800 rounded-xl p-6 flex items-center justify-center">
              <div class="w-full max-w-sm">
                <RolloutIllustration class="text-blue-500" />
              </div>
            </div>
            <div class="order-1 lg:order-2">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-white">{m.solutions_enterprise_sol2_title({}, { locale })}</h3>
              </div>
              <p class="text-gray-300 mb-4">{m.solutions_enterprise_sol2_desc({}, { locale })}</p>
              <ul class="space-y-2">
                <li class="flex items-start gap-2 text-gray-400">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {m.solutions_enterprise_sol2_point1({}, { locale })}
                </li>
                <li class="flex items-start gap-2 text-gray-400">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {m.solutions_enterprise_sol2_point2({}, { locale })}
                </li>
                <li class="flex items-start gap-2 text-gray-400">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {m.solutions_enterprise_sol2_point3({}, { locale })}
                </li>
              </ul>
            </div>
          </div>
