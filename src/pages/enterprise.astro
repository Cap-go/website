---
import Layout from '@/layouts/Layout.astro'
import Testimonials from '@/components/Testimonials.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'
import { createLdJsonGraph, createServiceLdJson, createProductLdJson } from '@/lib/ldJson'

const title = [Astro.locals.runtimeConfig.public.brand, 'Enterprise'].join(' | ')
const description = 'Enterprise-grade live updates for Capacitor apps. Built for teams that need advanced security, compliance, and dedicated support at scale.'

// Create enterprise service schema
const enterpriseService = createServiceLdJson(Astro.locals.runtimeConfig.public, {
  name: 'Capgo Enterprise - Professional Live Updates',
  description: 'Enterprise-grade live update platform for Capacitor applications with advanced security, compliance features, and dedicated support for large-scale deployments.',
  url: getRelativeLocaleUrl(Astro.locals.locale, 'enterprise/'),
  serviceType: 'Enterprise Software Service',
  areaServed: ['Worldwide']
})

// Create enterprise product offering
const enterpriseProduct = createProductLdJson(Astro.locals.runtimeConfig.public, {
  name: 'Capgo Enterprise Plan',
  description: 'Complete enterprise solution with advanced security, compliance, dedicated support, and unlimited scalability for professional teams.',
  url: getRelativeLocaleUrl(Astro.locals.locale, 'enterprise/'),
  sku: 'capgo-enterprise',
  offers: [
    {
      price: 'Custom',
      priceCurrency: 'USD',
      availability: 'https://schema.org/InStock',
      priceValidUntil: new Date(Date.now() + 365 * 24 * 60 * 60 * 1000).toISOString().split('T')[0] // 1 year from now
    }
  ]
})

// Enhanced enterprise product with additional properties
const enhancedEnterpriseProduct = {
  ...enterpriseProduct,
  category: 'Enterprise Software',
  audience: {
    '@type': 'BusinessAudience',
    audienceType: 'Enterprise Teams',
    geographicArea: 'Global'
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Enterprise Features',
    itemListElement: [
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Advanced Security & Compliance',
          description: 'SOC 2 Type II compliance, end-to-end encryption, and enterprise-grade security controls.'
        }
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Dedicated Support',
          description: '24/7 priority support with dedicated account management and SLA guarantees.'
        }
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Custom Deployment Options',
          description: 'On-premise, hybrid cloud, or dedicated cloud deployments tailored to your infrastructure needs.'
        }
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Advanced Analytics & Reporting',
          description: 'Comprehensive deployment analytics, performance monitoring, and custom reporting dashboards.'
        }
      }
    ]
  }
}

// Create comprehensive LD+JSON for enterprise page
const content = {
  title,
  description,
  image: `${Astro.locals.runtimeConfig.public.baseUrl}/capgo_social.png`,
  ldJSON: createLdJsonGraph(
    Astro.locals.runtimeConfig.public,
    enhancedEnterpriseProduct,
    {
      includeOrganization: true,
      includeBreadcrumbs: true,
      breadcrumbs: [
        {
          name: 'Home',
          url: getRelativeLocaleUrl(Astro.locals.locale, '/'),
        },
        {
          name: 'Enterprise',
          url: getRelativeLocaleUrl(Astro.locals.locale, 'enterprise/'),
        }
      ]
    }
  )
}

// Add the enterprise service as additional entity
content.ldJSON['@graph'].push(enterpriseService)
---

<Layout content={content}>
  <!-- Hero Section -->
  <section class="relative bg-gray-900 py-16 sm:py-20">
    <!-- Animated teleport lines -->
    <div class="pointer-events-none absolute inset-0 overflow-hidden">
      {
        Array.from({ length: 20 }).map((_, i) => (
          <div
            class="teleport-line-animation absolute w-full"
            style={{
              top: `${i * 5 - 2}%`,
              animationDelay: `${Math.random() * 3}s`,
              height: `${Math.random() * 1 + 1}px`,
              opacity: Math.random() * 0.5 + 0.3,
            }}
          />
        ))
      }
    </div>

    <!-- Glowing portal effect -->
    <div class="portal-glow-animation pointer-events-none absolute top-1/2 right-0 h-3/5 w-1/5 -translate-y-1/2"></div>

    <!-- Vertical data streams -->
    <div class="pointer-events-none absolute inset-0 overflow-hidden">
      {
        Array.from({ length: 10 }).map((_, i) => (
          <div
            class="data-stream-animation absolute h-full w-px"
            style={{
              left: `${i * 10}%`,
              animationDuration: `${Math.random() * 4 + 6}s`,
              animationDelay: `${Math.random() * 2}s`,
              opacity: Math.random() * 0.3 + 0.1,
            }}
          />
        ))
      }
    </div>
    
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <!-- Badge -->
        <p class="font-pj inline-flex rounded-full border border-gray-200 bg-gray-900 px-4 py-2 text-base mb-8">
          <span class="bg-linear-to-r from-[#44BCFF] via-[#FF44EC] to-[#FF675E] bg-clip-text text-transparent">
            {m.enterprise_ready()}
          </span>
        </p>

        <h1 class="font-pj text-3xl leading-tight font-bold text-white sm:text-4xl sm:leading-tight lg:leading-tight xl:text-6xl mb-8">
          <span class="bg-linear-to-r from-[#44BCFF] via-[#FF44EC] to-[#FF675E] bg-clip-text text-transparent">
            {m.deliver_updates({}, { locale: Astro.locals.locale })}
          </span>
          <br />
          <span class="text-white">{m.at_scale({}, { locale: Astro.locals.locale })}</span>
        </h1>
        
        <h2 class="font-inter mx-auto mt-6 max-w-4xl text-base leading-7 text-gray-400 text-xl">
          {m.deploy_ota({}, { locale: Astro.locals.locale })}
        </h2>

        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center items-center">
          <div class="group relative inline-flex">
            <div
              class="transitiona-all animate-tilt absolute -inset-px rounded-xl bg-linear-to-r from-[#44BCFF] via-[#FF44EC] to-[#FF675E] opacity-70 blur-lg duration-1000 group-hover:-inset-1 group-hover:opacity-100 group-hover:duration-200"
            >
            </div>
            <a
              href="https://cal.com/team/capgo/demo"
              target="_blank"
              class="font-pj relative z-10 inline-flex items-center justify-center rounded-xl bg-gray-900 px-8 py-4 text-lg font-bold text-white transition-all duration-200 focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 focus:outline-none"
              role="button"
            >
              {m.request_demo({}, { locale: Astro.locals.locale })}
              <svg class="ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
          
          <a 
            href="mailto:enterprise@capgo.app"
            class="font-pj inline-flex items-center justify-center rounded-xl border border-gray-200 bg-transparent px-8 py-4 text-lg font-bold text-white transition-all duration-200 hover:bg-gray-800 focus:ring-2 focus:ring-gray-200 focus:ring-offset-2 focus:outline-none"
          >
            <span>{m.contact_sales({}, { locale: Astro.locals.locale })}</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trusted By Section -->
  <section class="bg-gray-800 py-12 sm:py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <h2 class="text-center text-lg/8 font-semibold text-blue-400">{m.trusted_by_the_biggest_capacitor_apps({}, { locale: Astro.locals.locale })}</h2>
      <div class="mx-auto mt-10 grid max-w-lg grid-cols-2 items-center gap-x-8 gap-y-10 sm:max-w-2xl sm:grid-cols-3 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
        <div class="flex flex-col items-center space-y-2">
          <div class="rounded-2xl bg-gray-600 shadow-sm">
            <img class="h-12 w-12 object-contain grayscale rounded-xl" src="/nana-logo-trasnparent.webp" alt="Nana" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Nana</p>
            <p class="text-xs text-gray-400">2.5M {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <div class="rounded-2xl bg-gray-600 shadow-sm">
            <img class="h-12 w-12 object-contain grayscale brightness-90 contrast-75 rounded-xl" src="/snowqueen.webp" alt="Snowqueen" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Snowqueen</p>
            <p class="text-xs text-gray-400">1.8M {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <div class="rounded-2xl bg-gray-600 shadow-sm">
            <img class="h-12 w-12 object-contain grayscale brightness-90 contrast-75 rounded-xl" src="/shelf_app.webp" alt="Shelf" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Shelf</p>
            <p class="text-xs text-gray-400">950K {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <div class="rounded-2xl bg-gray-600 shadow-sm">
            <img class="h-12 w-12 object-contain grayscale brightness-90 contrast-75 rounded-xl" src="/suez.webp" alt="Suez" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Suez</p>
            <p class="text-xs text-gray-400">3.2M {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
        <div class="flex flex-col items-center space-y-2">
          <div class="rounded-2xl bg-gray-600 shadow-sm">
            <img class="h-12 w-12 object-contain grayscale rounded-xl" src="/janitor_app.webp" alt="Janitor" width="48" height="48" />
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-gray-200">Janitor</p>
            <p class="text-xs text-gray-400">750K {m.downloads({}, { locale: Astro.locals.locale })}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Enterprise Features Section -->
  <section class="bg-gray-900 py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
      <h2 class="text-base/7 font-semibold text-blue-400">{m.enterprise_features({}, { locale: Astro.locals.locale })}</h2>
      <p class="mt-2 max-w-2xl text-4xl font-semibold tracking-tight text-pretty text-white sm:text-5xl">
        {m.built_for_enterprise_teams({}, { locale: Astro.locals.locale })}
      </p>
      <p class="mt-4 max-w-2xl text-lg text-gray-400">{m.advanced_collaboration_security_compliance({}, { locale: Astro.locals.locale })}</p>
      
      <div class="mt-10 grid grid-cols-1 gap-4 sm:mt-16 lg:grid-cols-6">
        <!-- Organizations and Teams -->
        <div class="flex p-px lg:col-span-2">
          <div class="w-full overflow-hidden rounded-lg bg-gray-800 ring-1 ring-white/15">
            <div class="flex h-80 flex-col items-center justify-center bg-linear-to-br from-blue-500/20 to-purple-500/20">
              <svg class="mb-4 h-24 w-24 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <h3 class="text-xl font-bold text-white">{m.organizations_and_teams({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <div class="p-10">
              <p class="mt-2 text-lg font-medium tracking-tight text-white">{m.centralized_management({}, { locale: Astro.locals.locale })}</p>
              <p class="mt-2 max-w-lg text-sm/6 text-gray-400">
                {m.organize_projects_across_teams({}, { locale: Astro.locals.locale })}
              </p>
            </div>
          </div>
        </div>

        <!-- Role-Based Access Control -->
        <div class="flex p-px lg:col-span-2">
          <div class="w-full overflow-hidden rounded-lg bg-gray-800 ring-1 ring-white/15">
            <div class="flex h-80 flex-col items-center justify-center bg-linear-to-br from-purple-500/20 to-pink-500/20">
              <svg class="mb-4 h-24 w-24 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
              <h3 class="text-xl font-bold text-white">{m.role_based_access_control({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <div class="p-10">
              <p class="mt-2 text-lg font-medium tracking-tight text-white">{m.fine_grained_permissions({}, { locale: Astro.locals.locale })}</p>
              <p class="mt-2 max-w-lg text-sm/6 text-gray-400">
                {m.control_access_deploy_manage({}, { locale: Astro.locals.locale })}
              </p>
            </div>
          </div>
        </div>

        <!-- Enterprise Billing -->
        <div class="flex p-px lg:col-span-2">
          <div class="w-full overflow-hidden rounded-lg bg-gray-800 ring-1 ring-white/15">
            <div class="flex h-80 flex-col items-center justify-center bg-linear-to-br from-green-500/20 to-blue-500/20">
              <svg class="mb-4 h-24 w-24 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              <h3 class="text-xl font-bold text-white">{m.enterprise_billing({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <div class="p-10">
              <p class="mt-2 text-lg font-medium tracking-tight text-white">{m.flexible_payment_terms({}, { locale: Astro.locals.locale })}</p>
              <p class="mt-2 max-w-lg text-sm/6 text-gray-400">
                {m.consolidated_invoicing_purchase_orders({}, { locale: Astro.locals.locale })}
              </p>
            </div>
          </div>
        </div>

        <!-- SSO + 2FA -->
        <div class="flex p-px lg:col-span-3">
          <div class="w-full overflow-hidden rounded-lg bg-gray-800 ring-1 ring-white/15">
            <div class="flex h-80 flex-col items-center justify-center bg-linear-to-br from-orange-500/20 to-red-500/20">
              <svg class="mb-4 h-24 w-24 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              <h3 class="text-xl font-bold text-white">{m.sso_2fa({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <div class="p-10">
              <p class="mt-2 text-lg font-medium tracking-tight text-white">{m.enterprise_authentication({}, { locale: Astro.locals.locale })}</p>
              <p class="mt-2 max-w-lg text-sm/6 text-gray-400">
                {m.integrate_identity_provider_mfa({}, { locale: Astro.locals.locale })}
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'docs/plugin/cloud-mode/authentication')}
                  class="ml-2 text-orange-400 hover:text-orange-300 underline"
                >
                  {m.learn_more({}, { locale: Astro.locals.locale })}
                </a>
              </p>
            </div>
          </div>
        </div>

        <!-- Open Source -->
        <div class="flex p-px lg:col-span-3">
          <div class="w-full overflow-hidden rounded-lg bg-gray-800 ring-1 ring-white/15">
            <div class="flex h-80 flex-col items-center justify-center bg-linear-to-br from-[#44BCFF]/20 via-[#FF44EC]/20 to-[#FF675E]/20">
              <svg class="mb-4 h-24 w-24 text-[#44BCFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
              <h3 class="text-xl font-bold text-white">{m.open_source({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <div class="p-10">
              <p class="mt-2 text-lg font-medium tracking-tight text-white">{m.transparency_security({}, { locale: Astro.locals.locale })}</p>
              <p class="mt-2 max-w-lg text-sm/6 text-gray-400">
                {m.live_update_sdk_open_source({}, { locale: Astro.locals.locale })}
                <a
                  href="https://github.com/cap-go/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="ml-2 text-[#44BCFF] hover:text-blue-300 underline"
                >
                  {m.view_source({}, { locale: Astro.locals.locale })}
                </a>
              </p>
            </div>
          </div>
        </div>

        <!-- Enterprise Plugins -->
        <div class="flex p-px lg:col-span-6">
          <div class="w-full overflow-hidden rounded-lg bg-gray-800 ring-1 ring-white/15">
            <div class="flex h-80 flex-col items-center justify-center bg-linear-to-br from-indigo-500/20 via-purple-500/20 to-blue-500/20">
              <svg class="mb-4 h-24 w-24 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z"></path>
              </svg>
              <h3 class="text-xl font-bold text-white">{m.enterprise_plugins({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <div class="p-10">
              <p class="mt-2 text-lg font-medium tracking-tight text-white">{m.premium_plugin_suite({}, { locale: Astro.locals.locale })}</p>
              <p class="mt-2 max-w-lg text-sm/6 text-gray-400">
                {m.access_maintain_enterprise_plugins({}, { locale: Astro.locals.locale })}
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'plugins')}
                  class="ml-2 text-indigo-400 hover:text-indigo-300 underline"
                >
                  {m.explore_plugins({}, { locale: Astro.locals.locale })}
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Scalability Section -->
  <section class="relative bg-gray-800 py-16 sm:py-20 overflow-hidden">
    <!-- Enhanced Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 30px 30px;"></div>
    </div>
    
    <!-- Dynamic Floating Elements -->
    <div class="absolute top-10 left-10 w-32 h-32 bg-blue-500/10 rounded-full blur-2xl animate-pulse"></div>
    <div class="absolute bottom-10 right-10 w-40 h-40 bg-purple-500/10 rounded-full blur-2xl animate-pulse" style="animation-delay: 1.5s;"></div>

    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <div class="inline-flex items-center rounded-full bg-gradient-to-r from-blue-500/10 to-purple-500/10 px-4 py-2 text-sm font-medium text-blue-400 ring-1 ring-inset ring-blue-500/20 mb-8">
          <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          {m.global_infrastructure({}, { locale: Astro.locals.locale })}
        </div>
        
        <h2 class="text-4xl leading-tight font-bold text-white sm:text-5xl lg:text-6xl mb-6">
          <span class="bg-linear-to-r from-[#44BCFF] via-[#FF44EC] to-[#FF675E] bg-clip-text text-transparent">
            {m.global_infrastructure_lowercase({}, { locale: Astro.locals.locale })}
          </span>
          <br />
          <span class="text-white">{m.that_grows_with_you({}, { locale: Astro.locals.locale })}</span>
        </h2>
        
        <p class="mt-6 text-lg leading-relaxed text-gray-300 max-w-3xl mx-auto">
          {m.powered_by_serverless_edge_computing({}, { locale: Astro.locals.locale })}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="group relative">
          <div class="absolute inset-0 bg-linear-to-br from-blue-500/20 via-purple-500/20 to-pink-500/20 rounded-3xl blur-xl opacity-75 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative overflow-hidden rounded-3xl bg-gray-800/80 backdrop-blur-sm ring-1 ring-white/10 p-8 transition-all duration-300 hover:ring-white/20 hover:bg-gray-800/90">
            <div class="text-6xl font-bold mb-4">
