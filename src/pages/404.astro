---
import Layout from '@/layouts/Layout.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'

const homeUrl = new URL(getRelativeLocaleUrl(Astro.locals.locale, '/'), Astro.url.origin).toString()
---

<Layout content={{ canonical: homeUrl, robots: 'noindex, nofollow' }}>
  <div class="py-16 px-4 min-h-screen sm:py-24 sm:px-6 md:grid md:place-items-center lg:px-8">
    <div class="my-auto mx-auto max-w-max">
      <main class="sm:flex">
        <p class="text-4xl font-extrabold text-indigo-600 sm:text-5xl">404</p>
        <div class="sm:ml-6">
          <div class="sm:pl-6 sm:border-l sm:border-gray-200">
            <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl">{m.page_not_found_title({}, { locale: Astro.locals.locale })}</h1>
            <p class="mt-1 text-base text-white">{m.page_not_found_description({}, { locale: Astro.locals.locale })}</p>
          </div>
          <div class="flex mt-10 space-x-3 sm:pl-6 sm:border-l sm:border-transparent">
            <a
              href={getRelativeLocaleUrl(Astro.locals.locale, '/')}
              class="inline-flex items-center py-2 px-4 text-sm font-medium text-white bg-indigo-600 rounded-md border border-transparent shadow-sm hover:bg-indigo-600 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-none"
            >
              {m.go_back_home({}, { locale: Astro.locals.locale })}
            </a>
            <a
              href={`${getRelativeLocaleUrl(Astro.locals.locale, '/')}#support`}
              class="inline-flex items-center py-2 px-4 text-sm font-medium text-indigo-600 bg-indigo-100 rounded-md border border-transparent hover:bg-indigo-200 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-none"
            >
              {m.contact_support({}, { locale: Astro.locals.locale })}
            </a>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>
