---
import Layout from '@/layouts/Layout.astro'
import * as m from "../paraglide/messages.js"

const title = [Astro.locals.runtimeConfig.public.brand, m.support_policy()].join(' | ')
const description = m.read_our_support_policy()

const content = { title, description }
---

<Layout content={content}>
  <div class="px-3 m-auto prose-sm prose text-left">
    <h1>{m.support_policy_title()}</h1>
    <p>
      {m.support_policy_intro()}
    </p>
    <h2>{m.support_policy_scope_title()}</h2>
    <p>{m.support_policy_scope_intro()}</p>
    <h3>{m.support_policy_configuration_issues_title()}</h3>
    <ul>
      <li>{m.support_policy_configuration_issues_1()}</li>
      <li>{m.support_policy_configuration_issues_2()}</li>
      <li>{m.support_policy_configuration_issues_3()}</li>
    </ul>
    <h3>{m.support_policy_troubleshooting_title()}</h3>
    <ul>
      <li>{m.support_policy_troubleshooting_1()}</li>
      <li>{m.support_policy_troubleshooting_2()}</li>
      <li>{m.support_policy_troubleshooting_3()}</li>
    </ul>
    <h3>{m.support_policy_not_covered_title()}</h3>
    <p>{m.support_policy_not_covered_intro()}</p>
    <ul>
      <li>{m.support_policy_not_covered_1()}</li>
      <li>{m.support_policy_not_covered_2()}</li>
      <li>{m.support_policy_not_covered_3()}</li>
    </ul>
    <p>{m.support_policy_billing_support()}</p>
    <p>{m.support_policy_limited_support_intro()}</p>
    <ul>
      <li>{m.support_policy_limited_support_1()}</li>
      <li>{m.support_policy_limited_support_2()}</li>
      <li>{m.support_policy_limited_support_3()}</li>
    </ul>
    <h2>{m.support_policy_official_channels_title()}</h2>
    <ul>
      <li>{m.support_policy_official_channels_1()}</li>
      <li>{m.support_policy_official_channels_2()}</li>
    </ul>
    <p>
      {m.support_policy_official_channels_note()}
    </p>
    <p>
      {m.support_policy_code_debugging()}
    </p>
    <p>
      {m.support_policy_community_response()}
    </p>
    <p>{m.support_policy_team_participation()}</p>
    <h2>{m.support_policy_sla_title()}</h2>
    <p>
      {m.support_policy_sla_desc()}
      <a href="https://capgo.app/sla">https://capgo.app/sla</a>
    </p>
    <h2>{m.support_policy_proactive_monitoring_title()}</h2>
    <p>
      {m.support_policy_proactive_monitoring_desc()}
    </p>
    <h2>{m.support_policy_premium_support_title()}</h2>
    <p>{m.support_policy_premium_support_desc()}</p>
    <p><a href="mailto:martin@capgo.app">martin@capgo.app</a></p>
  </div>
</Layout>
