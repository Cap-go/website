---
import Layout from '@/layouts/Layout.astro'
import { type Locales, defaultLocale } from '@/services/locale'
import translations from '@/services/translations'
import { useRuntimeConfig } from '@/config/app'

const config = useRuntimeConfig()
const brand = config.public.brand

const pageLocale = (Astro.currentLocale || defaultLocale) as Locales
const title = [brand, translations['support_policy'][pageLocale]].join(' | ')
const description = translations['read_our_support_policy'][pageLocale]

const content = { title, description }
---

<Layout content={content}>
  <div class="prose prose-sm m-auto px-3 text-left">
    <h1>{translations['support_policy_title'][pageLocale]}</h1>
    <p>
      {translations['support_policy_intro'][pageLocale]}
    </p>
    <h2>{translations['support_policy_scope_title'][pageLocale]}</h2>
    <p>{translations['support_policy_scope_intro'][pageLocale]}</p>
    <h3>{translations['support_policy_configuration_issues_title'][pageLocale]}</h3>
    <ul>
      <li>{translations['support_policy_configuration_issues_1'][pageLocale]}</li>
      <li>{translations['support_policy_configuration_issues_2'][pageLocale]}</li>
      <li>{translations['support_policy_configuration_issues_3'][pageLocale]}</li>
    </ul>
    <h3>{translations['support_policy_troubleshooting_title'][pageLocale]}</h3>
    <ul>
      <li>{translations['support_policy_troubleshooting_1'][pageLocale]}</li>
      <li>{translations['support_policy_troubleshooting_2'][pageLocale]}</li>
      <li>{translations['support_policy_troubleshooting_3'][pageLocale]}</li>
    </ul>
    <h3>{translations['support_policy_not_covered_title'][pageLocale]}</h3>
    <p>{translations['support_policy_not_covered_intro'][pageLocale]}</p>
    <ul>
      <li>{translations['support_policy_not_covered_1'][pageLocale]}</li>
      <li>{translations['support_policy_not_covered_2'][pageLocale]}</li>
      <li>{translations['support_policy_not_covered_3'][pageLocale]}</li>
    </ul>
    <p>{translations['support_policy_billing_support'][pageLocale]}</p>
    <p>{translations['support_policy_limited_support_intro'][pageLocale]}</p>
    <ul>
      <li>{translations['support_policy_limited_support_1'][pageLocale]}</li>
      <li>{translations['support_policy_limited_support_2'][pageLocale]}</li>
      <li>{translations['support_policy_limited_support_3'][pageLocale]}</li>
    </ul>
    <h2>{translations['support_policy_official_channels_title'][pageLocale]}</h2>
    <ul>
      <li>{translations['support_policy_official_channels_1'][pageLocale]}</li>
      <li>{translations['support_policy_official_channels_2'][pageLocale]}</li>
    </ul>
    <p>
      {translations['support_policy_official_channels_note'][pageLocale]}
    </p>
    <p>
      {translations['support_policy_code_debugging'][pageLocale]}
    </p>
    <p>
      {translations['support_policy_community_response'][pageLocale]}
    </p>
    <p>{translations['support_policy_team_participation'][pageLocale]}</p>
    <h2>{translations['support_policy_sla_title'][pageLocale]}</h2>
    <p>
      {translations['support_policy_sla_desc'][pageLocale]}
      <a href="https://capgo.app/sla">https://capgo.app/sla</a>
    </p>
    <h2>{translations['support_policy_proactive_monitoring_title'][pageLocale]}</h2>
    <p>
      {translations['support_policy_proactive_monitoring_desc'][pageLocale]}
    </p>
    <h2>{translations['support_policy_premium_support_title'][pageLocale]}</h2>
    <p>{translations['support_policy_premium_support_desc'][pageLocale]}</p>
    <p><a href="mailto:martin@capgo.app">martin@capgo.app</a></p>
  </div>
</Layout>
