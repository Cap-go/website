---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { defaultLocale } from '@/services/locale'

const title = [Astro.locals.runtimeConfig.public.brand, m.privacy_policy({}, { locale: Astro.locals.locale })].join(' | ')
const description = m.read_our_privacy_policy_description({}, { locale: Astro.locals.locale })

const content = { title, description }

const config = Astro.locals.runtimeConfig
const brand = config.public.brand
const domain = config.public.baseUrl
---

<Layout content={content}>
  <div class="m-auto prose prose-sm prose-invert">
    {
      Astro.locals.locale !== defaultLocale && (
        <span class="text-xs">
          Note: This is an automatically translated page from its English source. Only the English version should be used for legal actions. Please refer to the English source for
          legal matters.
        </span>
      )
    }
    <h1 class="mt-8">{m.privacy_title({}, { locale: Astro.locals.locale })}</h1>
    <p>{m.privacy_last_updated({}, { locale: Astro.locals.locale })}</p>
    <p>
      {m.privacy_description({}, { locale: Astro.locals.locale })}
    </p>
    <p>
      {m.privacy_agreement({}, { locale: Astro.locals.locale })}
    </p>
    <h2>{m.privacy_interpretation_title({}, { locale: Astro.locals.locale })}</h2>
    <h3>{m.privacy_interpretation_subtitle({}, { locale: Astro.locals.locale })}</h3>
    <p>
      {m.privacy_interpretation_text({}, { locale: Astro.locals.locale })}
    </p>
    <h3>{m.privacy_definitions_subtitle({}, { locale: Astro.locals.locale })}</h3>
    <p>{m.privacy_definitions_intro({}, { locale: Astro.locals.locale })}</p>
    <ul>
      <li>
        <p>{m.privacy_definition_account({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>
          {m.privacy_definition_affiliate({}, { locale: Astro.locals.locale })}
        </p>
      </li>
      <li>
        <p>{m.privacy_definition_application({}, { locale: Astro.locals.locale }).replace('$1', brand)}</p>
      </li>
      <li>
        <p>
          {m.privacy_definition_business({}, { locale: Astro.locals.locale })}
        </p>
      </li>
      <li>
        <p>
          {m.privacy_definition_company({}, { locale: Astro.locals.locale })}
        </p>
        <p>{m.privacy_definition_company_gdpr({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>
          {m.privacy_definition_consumer({}, { locale: Astro.locals.locale })}
        </p>
      </li>
      <li>
        <p>{m.privacy_definition_country({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>
          {m.privacy_definition_data_controller({}, { locale: Astro.locals.locale })}
        </p>
      </li>
      <li>
        <p>{m.privacy_definition_device({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>{m.privacy_definition_do_not_track({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>{m.privacy_definition_personal_data({}, { locale: Astro.locals.locale })}</p>
        <p>{m.privacy_definition_personal_data_gdpr({}, { locale: Astro.locals.locale })}</p>
        <p>{m.privacy_definition_personal_data_ccpa({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>{m.privacy_definition_sale({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>{m.privacy_definition_service({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>{m.privacy_definition_service_provider({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>{m.privacy_definition_usage_data({}, { locale: Astro.locals.locale })}</p>
      </li>
      <li>
        <p>{m.privacy_definition_you({}, { locale: Astro.locals.locale })}</p>
        <p>{m.privacy_definition_you_gdpr({}, { locale: Astro.locals.locale })}</p>
      </li>
    </ul>
    <h2>{m.privacy_collecting_data_title({}, { locale: Astro.locals.locale })}</h2>
    <h3>{m.privacy_types_of_data_title({}, { locale: Astro.locals.locale })}</h3>
    <h4>{m.privacy_personal_data_title({}, { locale: Astro.locals.locale })}</h4>
    <p>{m.privacy_personal_data_description({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_personal_data_usage({}, { locale: Astro.locals.locale })}</p>
    <h4>{m.privacy_usage_data_title({}, { locale: Astro.locals.locale })}</h4>
    <p>{m.privacy_usage_data_description({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_usage_data_details({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_usage_data_mobile({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_usage_data_browser({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.privacy_use_of_data_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.privacy_use_of_data_intro({}, { locale: Astro.locals.locale })}</p>
    <ul>
      <li>{m.privacy_use_of_data_provide_service({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_use_of_data_manage_account({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_use_of_data_performance({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_use_of_data_contact({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_use_of_data_offers({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_use_of_data_requests({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_use_of_data_business_transfers({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_use_of_data_other_purposes({}, { locale: Astro.locals.locale })}</li>
    </ul>
    <p>{m.privacy_share_of_data_intro({}, { locale: Astro.locals.locale })}</p>
    <ul>
      <li>{m.privacy_share_of_data_service_providers({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_share_of_data_business_transfers({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_share_of_data_affiliates({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_share_of_data_business_partners({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_share_of_data_other_users({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_share_of_data_consent({}, { locale: Astro.locals.locale })}</li>
    </ul>
    <h2>{m.privacy_retention_of_data_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.privacy_retention_of_data_description({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_retention_of_usage_data({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.privacy_transfer_of_data_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.privacy_transfer_of_data_description({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_transfer_of_data_consent({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_transfer_of_data_safeguards({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.privacy_disclosure_of_data_title({}, { locale: Astro.locals.locale })}</h2>
    <h3>{m.privacy_disclosure_business_transactions_title({}, { locale: Astro.locals.locale })}</h3>
    <p>{m.privacy_disclosure_business_transactions_description({}, { locale: Astro.locals.locale })}</p>
    <h3>{m.privacy_disclosure_law_enforcement_title({}, { locale: Astro.locals.locale })}</h3>
    <p>{m.privacy_disclosure_law_enforcement_description({}, { locale: Astro.locals.locale })}</p>
    <h3>{m.privacy_disclosure_other_legal_requirements_title({}, { locale: Astro.locals.locale })}</h3>
    <p>{m.privacy_disclosure_other_legal_requirements_description({}, { locale: Astro.locals.locale })}</p>
    <ul>
      <li>{m.privacy_disclosure_other_legal_requirements_comply({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_disclosure_other_legal_requirements_protect({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_disclosure_other_legal_requirements_prevent({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_disclosure_other_legal_requirements_protect_personal({}, { locale: Astro.locals.locale })}</li>
      <li>{m.privacy_disclosure_other_legal_requirements_protect_legal({}, { locale: Astro.locals.locale })}</li>
    </ul>
    <h2>{m.privacy_security_of_data_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.privacy_security_of_data_description({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.privacy_children_privacy_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.privacy_children_privacy_description({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_children_privacy_consent({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.privacy_links_to_other_websites_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.privacy_links_to_other_websites_description({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_links_to_other_websites_control({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.privacy_changes_to_policy_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.privacy_changes_to_policy_description({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_changes_to_policy_notification({}, { locale: Astro.locals.locale })}</p>
    <p>{m.privacy_changes_to_policy_review({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.privacy_contact_us_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.privacy_contact_us_description({}, { locale: Astro.locals.locale })}</p>
    <p set:html={m.privacy_contact_us_website({}, { locale: Astro.locals.locale }).replace('$1', `<a href='${domain}/#support' target='_blank'>${domain}/#support</a>`)} />
    <div class="mt-8 w-full h-px"></div>
  </div>
</Layout>
