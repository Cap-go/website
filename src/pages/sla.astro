---
import Layout from '@/layouts/Layout.astro'
import * as m from "../paraglide/messages.js"

const title = [Astro.locals.runtimeConfig.public.brand, m.sla_policy()].join(' | ')
const description = m.read_our_sla_policy()

const content = { title, description }
---

<Layout content={content}>
  <div class="px-3 m-auto prose-sm prose text-left">
    <h2>{m.sla_title()}</h2>
    <h2>{m.enterprise_platform_uptime_sla()}</h2>
    <p>{m.sla_intro()}</p>
    <h3>{m.uptime_commitment_title()}</h3>
    <p>{m.uptime_commitment_desc()}</p>
    <h3>{m.service_credits_title()}</h3>
    <p>{m.service_credits_desc()}</p>
    <table>
      <tr>
        <th>{m.actual_availability()}</th>
        <th>{m.credit_percentage()}</th>
      </tr>
      <tr>
        <td>{m.availability_99_98()}</td>
        <td>{m.credit_10_percent()}</td>
      </tr>
      <tr>
        <td>{m.availability_98_97()}</td>
        <td>{m.credit_15_percent()}</td>
      </tr>
      <tr>
        <td>{m.availability_97_95()}</td>
        <td>{m.credit_20_percent()}</td>
      </tr>
      <tr>
        <td>{m.availability_below_95()}</td>
        <td>{m.credit_30_percent()}</td>
      </tr>
    </table>
    <h3>{m.credit_requests_payment_title()}</h3>
    <p>{m.credit_requests_payment_desc()}</p>
    <h3>{m.four_definitions_title()}</h3>
    <p>{m.definitions_desc()}</p>
    <h4>{m.scheduled_availability_title()}</h4>
    <p>{m.scheduled_availability_desc()}</p>
    <h4>{m.unscheduled_downtime_title()}</h4>
    <p>{m.unscheduled_downtime_desc()}</p>
    <h4>{m.actual_availability_title()}</h4>
    <p>{m.actual_availability_desc()}</p>
    <h4>{m.production_title()}</h4>
    <p>{m.production_desc()}</p>
    <p>{m.non_production_desc()}</p>
    <h3>{m.sla_exclusions_title()}</h3>
    <h4>{m.general_service_exclusions_title()}</h4>
    <ul>
      <li>{m.general_service_exclusion_1()}</li>
      <li>{m.general_service_exclusion_2()}</li>
      <li>{m.general_service_exclusion_3()}</li>
      <li>{m.general_service_exclusion_4()}</li>
      <li>{m.general_service_exclusion_5()}</li>
      <li>{m.general_service_exclusion_6()}</li>
      <li>{m.general_service_exclusion_7()}</li>
    </ul>
    <h4>{m.live_update_sla_exclusions_title()}</h4>
    <ul>
      <li>{m.live_update_exclusion_1()}</li>
      <li>{m.live_update_exclusion_2()}</li>
      <li>{m.live_update_exclusion_3()}</li>
      <li>{m.live_update_exclusion_4()}</li>
      <li>{m.live_update_exclusion_5()}</li>
    </ul>
    <h2>{m.support_title()}</h2>
    <p>{m.support_desc()}</p>
    <h3>{m.urgent_support_title()}</h3>
    <p><strong>{m.urgent_support_subtitle()}</strong></p>
    <p>{m.urgent_support_desc()}</p>
    <h3>{m.high_support_title()}</h3>
    <p><strong>{m.high_support_subtitle()}</strong></p>
    <p>{m.high_support_desc()}</p>
    <h3>{m.normal_support_title()}</h3>
    <p><strong>{m.normal_support_subtitle()}</strong></p>
    <p>{m.normal_support_desc()}</p>
    <h3>{m.low_support_title()}</h3>
    <p><strong>{m.low_support_subtitle()}</strong></p>
    <p>{m.low_support_desc()}</p>
    <h2>{m.target_initial_response_times_title()}</h2>
    <table>
      <tr>
        <th>{m.severity_level()}</th>
        <th>{m.team_plan()}</th>
        <th>{m.pay_as_you_go_plan()}</th>
        <th>{m.priority_plus_plan()}</th>
      </tr>
      <tr>
        <td>{m.urgent_support_title()}</td>
        <td>{m.urgent_team_response()}</td>
        <td>{m.urgent_payg_response()}</td>
        <td>{m.urgent_priority_response()}</td>
      </tr>
      <tr>
        <td>{m.high_support_title()}</td>
        <td>{m.high_team_response()}</td>
        <td>{m.high_payg_response()}</td>
        <td>{m.high_priority_response()}</td>
      </tr>
      <tr>
        <td>{m.normal_support_title()}</td>
        <td>{m.normal_team_response()}</td>
        <td>{m.normal_payg_response()}</td>
        <td>{m.normal_priority_response()}</td>
      </tr>
      <tr>
        <td>{m.low_support_title()}</td>
        <td>{m.low_team_response()}</td>
        <td>{m.low_payg_response()}</td>
        <td>{m.low_priority_response()}</td>
      </tr>
    </table>
    <p>{m.business_hours_note()}</p>
  </div>
</Layout>
