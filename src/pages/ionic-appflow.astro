---
import Layout from '@/layouts/Layout.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'

const locale = Astro.locals.locale
const title = m.capflow_title({}, { locale })
const description = m.capflow_meta_description({}, { locale })

const content = {
  title,
  description,
  image: `${Astro.locals.runtimeConfig.public.baseUrl}/capgo_social.png`,
}

const migrationGuideUrl = getRelativeLocaleUrl(locale, 'docs/upgrade/from-appflow-to-capgo/')
---

<Layout content={content}>
  <section class="py-16 bg-gray-900 sm:py-20">
    <div class="px-6 mx-auto max-w-4xl lg:px-8">
      <!-- Hero -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl mb-4">
          {m.appflow_hero_title({}, { locale })}
        </h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          {m.appflow_hero_subtitle({}, { locale })}
        </p>
      </div>

      <!-- The Elephant in the Room -->
      <div class="mb-16 rounded-lg border-2 border-orange-600 bg-orange-950/20 p-8">
        <h2 class="mb-4 text-2xl font-bold text-orange-400">
          {m.appflow_elephant_title({}, { locale })}
        </h2>
        <div class="space-y-4 text-gray-300">
          <p set:html={m.appflow_elephant_p1({}, { locale })}></p>
          <p>
            {m.appflow_elephant_p2({}, { locale })}
          </p>
        </div>
      </div>

      <!-- Credit Where Due -->
      <div class="mb-16">
        <h2 class="mb-6 text-3xl font-bold text-gray-100">
          {m.appflow_credit_title({}, { locale })}
        </h2>
        <div class="space-y-4 text-gray-300">
          <p set:html={m.appflow_credit_p1({}, { locale })}></p>
          <p>
            {m.appflow_credit_p2({}, { locale })}
          </p>
          <p class="text-gray-400">
            {m.appflow_credit_p3({}, { locale })}
          </p>
        </div>
      </div>

      <!-- What Makes Capgo Different -->
      <div class="mb-16">
        <h2 class="mb-8 text-3xl font-bold text-gray-100">
          {m.appflow_what_different_title({}, { locale })}
        </h2>

        <div class="space-y-6">
          <!-- Not Shutting Down -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-emerald-400">
              {m.appflow_not_shutting_title({}, { locale })}
            </h3>
            <p class="mb-2 text-gray-300" set:html={m.appflow_not_shutting_desc({}, { locale })}></p>
            <ul class="ml-6 list-disc space-y-1 text-gray-400 text-sm mb-2">
              <li>{m.appflow_not_shutting_li1({}, { locale })}</li>
              <li>{m.appflow_not_shutting_li2({}, { locale })}</li>
            </ul>
            <p class="text-gray-400 text-sm">
              {m.appflow_not_shutting_note({}, { locale })}
            </p>
          </div>

          <!-- Pricing -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-blue-400">
              {m.appflow_pricing_title({}, { locale })}
            </h3>
            <p class="text-gray-300 mb-2" set:html={m.appflow_pricing_comparison({}, { locale })}></p>
            <p class="text-gray-400 text-sm">
              {m.appflow_pricing_note({}, { locale })}
            </p>
          </div>

          <!-- Open Source -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-purple-400">
              {m.appflow_opensource_title({}, { locale })}
            </h3>
            <p class="text-gray-300 mb-2" set:html={m.appflow_opensource_desc({}, { locale })}></p>
            <ul class="ml-6 list-disc space-y-1 text-gray-400">
              <li set:html={m.appflow_opensource_li1({}, { locale })}></li>
              <li set:html={m.appflow_opensource_li2({}, { locale })}></li>
              <li>{m.appflow_opensource_li3({}, { locale })}</li>
            </ul>
            <p class="mt-3 text-gray-400 text-sm">
              {m.appflow_opensource_note({}, { locale })}
            </p>
          </div>

          <!-- Experience -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-yellow-400">
              {m.appflow_experience_title({}, { locale })}
            </h3>
            <p class="text-gray-300">
              {m.appflow_experience_desc({}, { locale })}
            </p>
            <p class="mt-2 text-gray-400 text-sm" set:html={m.appflow_experience_note({}, { locale })}></p>
          </div>

          <!-- Support -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-pink-400">
              {m.appflow_support_title({}, { locale })}
            </h3>
            <p class="text-gray-300">
              {m.appflow_support_desc({}, { locale })}
            </p>
            <p class="mt-2 text-gray-400">
              {m.appflow_support_note({}, { locale })}
            </p>
          </div>

          <!-- What We Do -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-green-400">
              {m.appflow_focus_title({}, { locale })}
            </h3>
            <p class="text-gray-300" set:html={m.appflow_focus_desc({}, { locale })}></p>
            <p class="mt-2 text-gray-400 text-sm">
              {m.appflow_focus_note({}, { locale })}
            </p>
          </div>
        </div>
      </div>

      <!-- What We're NOT -->
      <div class="mb-16 rounded-lg border-2 border-yellow-600 bg-yellow-950/20 p-8">
        <h2 class="mb-4 text-2xl font-bold text-yellow-400">
          {m.appflow_not_good_at_title({}, { locale })}
        </h2>
        <div class="space-y-3 text-gray-300">
          <p>
            <strong class="text-yellow-300">{m.appflow_not_good_at_ci_cd_label({}, { locale })}</strong> {m.appflow_not_good_at_ci_cd({}, { locale })}
          </p>
          <p>
            <strong class="text-yellow-300">{m.appflow_not_good_at_docs_label({}, { locale })}</strong> {m.appflow_not_good_at_docs({}, { locale })}
          </p>
        </div>
      </div>

      <!-- Migration -->
      <div class="mb-16">
        <h2 class="mb-6 text-3xl font-bold text-gray-100">
          {m.appflow_migration_how_title({}, { locale })}
        </h2>
        <div class="space-y-4 text-gray-300">
          <p set:html={m.appflow_migration_intro({}, { locale })}></p>
          <div class="mt-6 p-6 bg-gray-800 rounded-xl">
            <h3 class="text-lg font-semibold text-white mb-3">{m.appflow_migration_basics_title({}, { locale })}</h3>
            <ol class="space-y-2 text-gray-300">
              <li class="flex gap-3">
                <span class="text-emerald-400 font-semibold">1.</span>
                <span set:html={m.appflow_migration_step1({}, { locale })}></span>
              </li>
              <li class="flex gap-3">
                <span class="text-emerald-400 font-semibold">2.</span>
                <span set:html={m.appflow_migration_step2({}, { locale })}></span>
              </li>
              <li class="flex gap-3">
                <span class="text-emerald-400 font-semibold">3.</span>
                <span>{m.appflow_migration_step3({}, { locale })}</span>
              </li>
            </ol>
            <p class="mt-4 text-sm text-emerald-300" set:html={m.appflow_migration_guide_text({ url: migrationGuideUrl }, { locale })}></p>
          </div>
          <p class="text-gray-400 text-sm" set:html={m.appflow_migration_stuck({}, { locale })}></p>
        </div>
      </div>

      <!-- Testimonials -->
      <div class="mb-16">
        <h2 class="mb-8 text-3xl font-bold text-gray-100">
          {m.appflow_testimonials_title({}, { locale })}
        </h2>
        <div class="grid gap-6 sm:grid-cols-2">
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <p class="mb-2 italic text-gray-300">
              "{m.appflow_testimonial_1({}, { locale })}"
            </p>
            <p class="text-sm text-gray-400">{m.appflow_testimonial_1_author({}, { locale })}</p>
          </div>
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <p class="mb-2 italic text-gray-300">
              "{m.appflow_testimonial_2({}, { locale })}"
            </p>
            <p class="text-sm text-gray-400">{m.appflow_testimonial_2_author({}, { locale })}</p>
          </div>
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <p class="mb-2 italic text-gray-300">
              "{m.appflow_testimonial_3({}, { locale })}"
            </p>
            <p class="text-sm text-gray-400">{m.appflow_testimonial_3_author({}, { locale })}</p>
          </div>
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <p class="mb-2 italic text-gray-300">
              "{m.appflow_testimonial_4({}, { locale })}"
            </p>
            <p class="text-sm text-gray-400">{m.appflow_testimonial_4_author({}, { locale })}</p>
          </div>
        </div>

        <div class="mt-8 p-6 bg-gray-800 rounded-xl">
          <h3 class="text-lg font-semibold text-white mb-4">{m.appflow_testimonials_more({}, { locale })}</h3>
          <iframe
            id="wall-of-love-Ngmn41b"
            src="https://senja.io/p/capgo/Ngmn41b?hideNavigation=true&embed=true"
            aria-label="Wall of Love"
            frameborder="0"
            scrolling="no"
            width="100%"
            class="min-h-[400px]"
          ></iframe>
          <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', function () {
              if (typeof iFrameResize === 'function') {
                iFrameResize({ log: false, checkOrigin: false }, '#wall-of-love-Ngmn41b')
              }
            })
          </script>
        </div>
      </div>

      <!-- FAQ -->
      <div class="mb-16">
        <h2 class="mb-6 text-3xl font-bold text-gray-100">
          {m.appflow_faq_title({}, { locale })}
        </h2>
        <dl class="space-y-6 text-gray-200">
          <div>
            <dt class="text-lg font-semibold text-white">{m.appflow_faq_q1({}, { locale })}</dt>
            <dd class="mt-2 text-gray-300">{m.appflow_faq_a1({}, { locale })}</dd>
          </div>
          <div>
            <dt class="text-lg font-semibold text-white">{m.appflow_faq_q2({}, { locale })}</dt>
            <dd class="mt-2 text-gray-300">{m.appflow_faq_a2({}, { locale })}</dd>
          </div>
          <div>
            <dt class="text-lg font-semibold text-white">{m.appflow_faq_q3({}, { locale })}</dt>
            <dd class="mt-2 text-gray-300">{m.appflow_faq_a3({}, { locale })}</dd>
          </div>
          <div>
            <dt class="text-lg font-semibold text-white">{m.appflow_faq_q4({}, { locale })}</dt>
            <dd class="mt-2 text-gray-300" set:html={m.appflow_faq_a4({}, { locale })}></dd>
          </div>
        </dl>
      </div>

      <!-- CTA -->
      <div class="overflow-hidden p-1 bg-gradient-to-r rounded-3xl ring-1 from-[#44BCFF]/10 via-[#FF44EC]/10 to-[#FF675E]/10 ring-white/10">
        <div class="overflow-hidden relative py-12 px-8 bg-gray-900 sm:py-16 sm:px-12 rounded-[1.45rem]">
          <div class="absolute -left-10 -top-24 w-48 h-48 rounded-full pointer-events-none bg-[#44BCFF]/30 blur-3xl"></div>
          <div class="absolute -right-16 -bottom-28 w-56 h-56 rounded-full pointer-events-none bg-[#FF44EC]/20 blur-3xl"></div>
          <div class="relative text-center">
            <h2 class="text-3xl font-bold text-white sm:text-4xl mb-4">
              {m.appflow_cta_title({}, { locale })}
            </h2>
            <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
              {m.appflow_cta_subtitle({}, { locale })}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 items-center justify-center">
              <a
                href={getRelativeLocaleUrl(locale, 'register')}
                class="inline-flex justify-center items-center py-4 px-8 text-lg font-bold text-white bg-emerald-600 rounded-xl hover:bg-emerald-700 transition-all"
              >
                {m.appflow_cta_start_trial({}, { locale })}
              </a>
              <a
                href="https://cal.com/team/capgo/appflow-migration"
                target="_blank"
                class="inline-flex justify-center items-center py-4 px-8 text-lg font-semibold text-white rounded-xl ring-1 bg-white/10 ring-white/20 hover:bg-white/15"
              >
                {m.appflow_cta_book_migration({}, { locale })}
              </a>
            </div>
            <p class="mt-6 text-sm text-gray-400" set:html={m.appflow_cta_questions({}, { locale })}></p>
          </div>
        </div>
      </div>

      <!-- Footer Note -->
      <div class="mt-12 text-center text-sm text-gray-400">
        <p>
          {m.appflow_footer_note({}, { locale })}
        </p>
      </div>
    </div>
  </section>
</Layout>
