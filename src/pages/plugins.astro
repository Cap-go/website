import { actions } from '@/config/plugins'
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getSlug, getPluginsWithStars, getGitHubStars, getNpmDownloads, getTotalStars, getTotalDownloads } from '@/services/github'
import ArrowUpRightIcon from 'astro-heroicons/mini/ArrowUpRight.astro'
import PluginIcon from '@/components/PluginIcon.astro'
import { getCollection } from 'astro:content'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { marked } from 'marked'

const title = [Astro.locals.runtimeConfig.public.brand, m.plugins({}, { locale: Astro.locals.locale })].join(' | ')
const description = m.plugins_description({}, { locale: Astro.locals.locale })

const content = { title, description }

const slugsSet = new Set()
await getCollection('plugin', ({ data, filePath }) => {
  if (data.published !== false && filePath) {
    slugsSet.add(getSlug(filePath).replace('.md', ''))
  }
})

const pluginsWithStars = getPluginsWithStars(actions)
const totalStars = getTotalStars()
const totalDownloads = getTotalDownloads()

// Parse descriptions and filter by available tutorials
const slugs = [...slugsSet] as string[]
const plugins = await Promise.all(
  pluginsWithStars
    .filter((i) => slugs.includes(getSlug(i.href).replace('.md', '')))
    .map(async (item) => ({
      ...item,
      description: await marked.parse(item.description),
    })),
)

// Helper function to format counts
const formatCount = (count: number): string => {
  if (count >= 1000000) {
    return `${(count / 1000000).toFixed(1)}M`
  }
  if (count >= 1000) {
    return `${(count / 1000).toFixed(1)}k`
  }
  return count.toString()
}
