  },
  {
    number: "04",
    title: m.poor_app_quality({}, { locale: Astro.locals.locale }),
    description: m.somebody_developed_an_app_for_you_but_it_doesn_t_meet_your_expectations_and_the_quality_of_the_final_product_is_really_low({}, { locale: Astro.locals.locale })
  },
