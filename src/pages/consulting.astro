const useCases = [
  {
    number: "01",
    title: m.review_before_passing_the_code_to_the_production({}, { locale: Astro.locals.locale }),
    description: m.find_and_fix_bugs_during_the_coding_process({}, { locale: Astro.locals.locale }) + " " + m.it_s_faster_cheaper_and_requires_fewer_developers_to_do_it({}, { locale: Astro.locals.locale })
  },
  {
    number: "02", 
    title: m.optimization_of_the_existing_app({}, { locale: Astro.locals.locale }),
