---
import Layout from '@/layouts/Layout.astro'
import VueTrust from '@/vue-pages/trust.vue'

const title = [Astro.locals.runtimeConfig.public.brand, Astro.locals.translations['trust'][Astro.locals.locale]].join(' | ')
const description = Astro.locals.translations['consulting_description'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VueTrust locale={Astro.locals.locale} client:load /></Layout>
