---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { createServiceLdJson, createLdJsonGraph } from '@/lib/ldJson'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.solutions_ionic_plugins_title({}, { locale })}`
const description = m.solutions_ionic_plugins_description({}, { locale })
const supportUrl = getRelativeLocaleUrl(locale, 'premium-support')

const serviceLdJson = createServiceLdJson(Astro.locals.runtimeConfig.public, {
  name: title,
  description: description,
  url: Astro.url.href,
  serviceType: 'Software Development Service',
  areaServed: ['Worldwide'],
})

const ldJSON = createLdJsonGraph(Astro.locals.runtimeConfig.public, serviceLdJson, {
  includeOrganization: true,
})

const content = { title, description, ldJSON }
---

<Layout content={content}>
  <div>
    <!-- Hero Section -->
    <section class="relative py-16 sm:py-20 lg:py-28">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        {
          Array.from({ length: 12 }).map((_, i) => (
            <div
              id={`${i}`}
              class="absolute w-2 h-2 bg-emerald-400 rounded-full opacity-20 animate-pulse"
              style={{
                top: `${Math.random() * 100}%`,
                left: `${Math.random() * 100}%`,
                animationDelay: `${Math.random() * 3}s`,
                animationDuration: `${2 + Math.random() * 2}s`,
              }}
            />
          ))
        }
      </div>

      <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <p class="inline-flex px-4 py-2 text-sm text-emerald-100 border rounded-full font-medium border-emerald-400/40 bg-emerald-500/10">
            {m.solutions_ionic_plugins_badge({}, { locale })}
          </p>
          <h1 class="mt-6 text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
            {m.solutions_ionic_plugins_hero_title({}, { locale })}
          </h1>
          <p class="max-w-3xl mx-auto mt-6 text-xl leading-relaxed text-gray-300">
            {m.solutions_ionic_plugins_hero_subtitle({}, { locale })}
          </p>

          <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-emerald-600 rounded-xl hover:bg-emerald-700 focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2"
            >
              {m.solutions_get_started({}, { locale })}
            </a>
            <a
              href={getRelativeLocaleUrl(locale, 'docs/upgrade/from-ionic-secure-storage/')}
              class="px-8 py-4 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
            >
              {m.solutions_view_docs({}, { locale })}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Plugin Table -->
    <section id="plugin-migration" class="py-16 bg-gray-800 sm:py-20">
      <div class="px-4 mx-auto max-w-6xl sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">
            {m.solutions_ionic_plugins_section_title({}, { locale })}
          </h2>
          <p class="mt-4 text-lg text-gray-300">
            {m.solutions_ionic_plugins_section_desc({}, { locale })}
          </p>
        </div>

        <div class="mt-10 overflow-hidden rounded-2xl border border-gray-700 bg-gray-900/50">
          <table class="w-full text-left text-sm text-gray-300">
            <thead class="bg-gray-900/70 text-gray-400">
              <tr>
                <th class="px-6 py-4 font-semibold">{m.appflow_plugins_col_ionic({}, { locale })}</th>
                <th class="px-6 py-4 font-semibold">{m.appflow_plugins_col_capgo({}, { locale })}</th>
                <th class="px-6 py-4 font-semibold">{m.appflow_plugins_col_guide({}, { locale })}</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
              <tr class="transition hover:bg-gray-800/60">
                <td class="px-6 py-4 font-medium text-gray-100">Ionic Secure Storage</td>
                <td class="px-6 py-4">
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/plugins/fast-sql/')}
                    class="text-emerald-300 hover:underline"
                  >
                    Fast SQL
                  </a>
                  <span class="mx-2 text-gray-500">{m.appflow_plugins_or({}, { locale })}</span>
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/plugins/data-storage-sqlite/')}
                    class="text-emerald-300 hover:underline"
                  >
                    Data Storage SQLite
                  </a>
                </td>
                <td class="px-6 py-4">
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/upgrade/from-ionic-secure-storage/')}
                    class="text-blue-300 hover:underline"
                  >
                    {m.appflow_plugins_link_text({}, { locale })}
                  </a>
                </td>
              </tr>
              <tr class="transition hover:bg-gray-800/60">
                <td class="px-6 py-4 font-medium text-gray-100">Ionic Auth Connect</td>
                <td class="px-6 py-4">
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/plugins/social-login/')}
                    class="text-emerald-300 hover:underline"
                  >
                    Social Login
                  </a>
                </td>
                <td class="px-6 py-4">
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/upgrade/from-ionic-auth-connect/')}
                    class="text-blue-300 hover:underline"
                  >
                    {m.appflow_plugins_link_text({}, { locale })}
                  </a>
                </td>
              </tr>
              <tr class="transition hover:bg-gray-800/60">
                <td class="px-6 py-4 font-medium text-gray-100">Ionic Identity Vault</td>
                <td class="px-6 py-4">
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/plugins/native-biometric/')}
                    class="text-emerald-300 hover:underline"
                  >
                    Native Biometric
                  </a>
                  <span class="mx-2 text-gray-500">+</span>
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/plugins/fast-sql/')}
                    class="text-emerald-300 hover:underline"
                  >
                    Fast SQL
                  </a>
                  <span class="mx-2 text-gray-500">{m.appflow_plugins_or({}, { locale })}</span>
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/plugins/data-storage-sqlite/')}
                    class="text-emerald-300 hover:underline"
                  >
                    Data Storage SQLite
                  </a>
                </td>
                <td class="px-6 py-4">
                  <a
                    href={getRelativeLocaleUrl(locale, 'docs/upgrade/from-ionic-identity-vault/')}
                    class="text-blue-300 hover:underline"
                  >
                    {m.appflow_plugins_link_text({}, { locale })}
                  </a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Open Source + Optional Support -->
    <section class="py-16 bg-gray-900 sm:py-20">
      <div class="px-4 mx-auto max-w-6xl sm:px-6 lg:px-8">
        <div class="rounded-2xl border border-emerald-500/30 bg-emerald-500/10 p-8">
          <h2 class="mb-4 text-2xl font-bold text-white sm:text-3xl">
            {m.appflow_support_open_title({}, { locale })}
          </h2>
          <p class="text-gray-200 leading-relaxed" set:html={m.appflow_support_open_desc({ url: supportUrl }, { locale })}></p>
        </div>
      </div>
    </section>

    <!-- Migration Steps -->
    <section class="py-16 bg-gray-800 sm:py-20">
      <div class="px-4 mx-auto max-w-6xl sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-white sm:text-4xl">
          {m.solutions_ionic_plugins_steps_title({}, { locale })}
        </h2>
        <div class="mt-10 grid gap-6 md:grid-cols-3">
          <div class="rounded-2xl border border-gray-700 bg-gray-800/60 p-6">
            <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-emerald-500/20 text-emerald-300 font-semibold">1</div>
            <p class="text-gray-300">{m.solutions_ionic_plugins_step1({}, { locale })}</p>
          </div>
          <div class="rounded-2xl border border-gray-700 bg-gray-800/60 p-6">
            <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-emerald-500/20 text-emerald-300 font-semibold">2</div>
            <p class="text-gray-300">{m.solutions_ionic_plugins_step2({}, { locale })}</p>
          </div>
          <div class="rounded-2xl border border-gray-700 bg-gray-800/60 p-6">
            <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-emerald-500/20 text-emerald-300 font-semibold">3</div>
            <p class="text-gray-300">{m.solutions_ionic_plugins_step3({}, { locale })}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-gray-900 sm:py-20">
      <div class="px-4 mx-auto max-w-6xl sm:px-6 lg:px-8">
        <div class="rounded-3xl border border-emerald-500/30 bg-emerald-500/10 p-10 text-center">
          <h2 class="text-3xl font-bold text-white sm:text-4xl">
            {m.solutions_ionic_plugins_cta_title({}, { locale })}
          </h2>
          <p class="mt-4 text-lg text-emerald-100">
            {m.solutions_ionic_plugins_cta_subtitle({}, { locale })}
          </p>
          <div class="mt-8 flex flex-col items-center justify-center gap-4 sm:flex-row">
            <a
              href={getRelativeLocaleUrl(locale, 'register')}
              class="px-8 py-4 text-base font-semibold text-white transition-all duration-200 bg-emerald-600 rounded-xl hover:bg-emerald-700"
            >
              {m.solutions_start_free_trial({}, { locale })}
            </a>
            <a
              href={getRelativeLocaleUrl(locale, 'docs/upgrade/from-ionic-secure-storage/')}
              class="px-8 py-4 text-base font-semibold text-gray-200 transition-all duration-200 border border-emerald-400/50 rounded-xl hover:bg-emerald-500/10"
            >
              {m.solutions_view_docs({}, { locale })}
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
