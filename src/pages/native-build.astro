---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { createServiceLdJson, createLdJsonGraph } from '@/lib/ldJson'

const locale = Astro.locals.locale
const brand = Astro.locals.runtimeConfig.public.brand

const title = `${brand} | ${m.native_build({}, { locale })}`
const description = m.native_build_description({}, { locale })

const serviceLdJson = createServiceLdJson(Astro.locals.runtimeConfig.public, {
  name: title,
  description: description,
  url: Astro.url.href,
  serviceType: 'Software Development Service',
  areaServed: ['Worldwide'],
})

const ldJSON = createLdJsonGraph(Astro.locals.runtimeConfig.public, serviceLdJson, {
  includeOrganization: true,
})

const content = {
  title,
  description,
  ldJSON,
}
---

<Layout content={content}>
  <div>
    <div class="relative">
      <!-- Animated background elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        {
          Array.from({ length: 12 }).map(() => (
            <div
              class="absolute w-2 h-2 rounded-full bg-emerald-500 opacity-20 animate-pulse"
              style={{
                top: `${Math.random() * 100}%`,
                left: `${Math.random() * 100}%`,
                animationDelay: `${Math.random() * 3}s`,
                animationDuration: `${2 + Math.random() * 2}s`,
              }}
            />
          ))
        }
      </div>

      <!-- Hero Section -->
      <section class="relative py-12 sm:py-16 lg:pt-20 xl:pb-0">
        <div class="relative px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <div class="relative z-10 max-w-4xl mx-auto text-center">
            <p class="inline-flex px-4 py-2 text-base border rounded-full text-emerald-100 font-pj border-emerald-400/40 bg-emerald-500/10">
              <svg class="w-5 h-5 mr-2 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
              </svg>
              {m.build_from_anywhere({}, { locale })}
            </p>
            <h1 class="mt-5 text-3xl font-bold leading-tight text-white sm:text-4xl sm:leading-tight lg:leading-tight xl:text-5xl font-pj">
              {m.native_build_hero_title({}, { locale })}
            </h1>
            <h2 class="max-w-2xl mx-auto mt-6 text-base leading-7 text-gray-300 font-inter">
              {m.native_build_hero_subtitle({}, { locale })}
            </h2>

            <!-- CTA buttons -->
            <div class="flex flex-col items-center justify-center gap-4 mt-10 sm:flex-row">
              <a
                href={getRelativeLocaleUrl(locale, 'register')}
                class="px-8 py-3 text-base font-semibold text-white transition-all duration-200 bg-emerald-600 rounded-xl hover:bg-emerald-700 focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:outline-none"
              >
                {m.native_build_get_started({}, { locale })}
              </a>
              <a
                href={getRelativeLocaleUrl(locale, 'docs/cli/cloud-build/getting-started')}
                class="px-8 py-3 text-base font-semibold text-gray-300 transition-all duration-200 border border-gray-600 rounded-xl hover:bg-gray-800 hover:text-white"
              >
                {m.native_build_view_docs({}, { locale })}
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Grid Section -->
      <section class="py-12 bg-gray-900 sm:py-16 lg:py-20">
        <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
          <div class="mb-12 text-center">
            <h2 class="text-3xl font-bold leading-tight text-white sm:text-4xl">
              {m.native_build_features_title({}, { locale })}
            </h2>
            <p class="mt-4 text-lg text-gray-300">
              {m.native_build_features_subtitle({}, { locale })}
            </p>
          </div>

          <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
            <!-- Cloud Builds -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-emerald-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
                <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-emerald-100">{m.native_build_feature_cloud_builds({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.native_build_feature_cloud_builds_desc({}, { locale })}
              </p>
            </div>

            <!-- Automated Signing -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-emerald-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
                <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-emerald-100">{m.native_build_feature_auto_signing({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.native_build_feature_auto_signing_desc({}, { locale })}
              </p>
            </div>

            <!-- App Store Upload -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-emerald-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
                <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-emerald-100">{m.native_build_feature_store_upload({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.native_build_feature_store_upload_desc({}, { locale })}
              </p>
            </div>

            <!-- CI/CD Integration -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-emerald-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
                <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-emerald-100">{m.native_build_feature_ci_cd({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.native_build_feature_ci_cd_desc({}, { locale })}
              </p>
            </div>

            <!-- Secure Credentials -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-emerald-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
                <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-emerald-100">{m.native_build_feature_credentials({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.native_build_feature_credentials_desc({}, { locale })}
              </p>
            </div>

            <!-- Real-time Logs -->
            <div class="p-6 transition-all duration-300 bg-gray-800 border border-gray-700 rounded-2xl hover:border-emerald-500/50 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
                <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <h3 class="mb-2 text-xl font-bold text-emerald-100">{m.native_build_feature_logs({}, { locale })}</h3>
              <p class="text-sm text-gray-300">
                {m.native_build_feature_logs_desc({}, { locale })}
              </p>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- CLI Command Section -->
    <section class="py-16 bg-gray-800 sm:py-20 lg:py-28">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
          <div>
            <h2 class="text-3xl font-bold leading-tight text-white sm:text-4xl">
              {m.native_build_cli_title({}, { locale })}
            </h2>
            <p class="mt-4 text-lg text-gray-300">
              {m.native_build_cli_subtitle({}, { locale })}
            </p>
            <div class="mt-8">
              <p class="text-gray-400">
                {m.native_build_streaming_desc({}, { locale })}
              </p>
            </div>
          </div>
          <div class="p-6 bg-gray-900 border border-gray-700 rounded-2xl">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 bg-gray-600 rounded-full"></div>
              <div class="w-3 h-3 bg-gray-600 rounded-full"></div>
              <div class="w-3 h-3 bg-gray-600 rounded-full"></div>
              <span class="ml-2 text-sm text-gray-500">Terminal</span>
            </div>
            <pre class="overflow-x-auto text-sm text-gray-300"><code><span class="text-gray-500"># {m.native_build_cli_example({}, { locale })}</span>
npx @capgo/cli build <span class="text-emerald-400">com.example.app</span> \
  <span class="text-blue-400">--platform</span> ios \
  <span class="text-blue-400">--build-mode</span> release

<span class="text-emerald-400">✔</span> Creating build job...
<span class="text-emerald-400">✔</span> Uploading project (15.2 MB)...
<span class="text-emerald-400">✔</span> Build started

<span class="text-gray-500"># Real-time logs stream to your terminal</span>
<span class="text-yellow-400">→</span> Running pod install...
<span class="text-yellow-400">→</span> Building with Xcode...
<span class="text-yellow-400">→</span> Signing IPA...
<span class="text-emerald-400">✔</span> Build succeeded in 7m 23s
<span class="text-emerald-400">✔</span> Submitted to App Store Connect</code></pre>
          </div>
        </div>
      </div>
    </section>

    <!-- Security Section -->
    <section class="py-16 bg-gray-900 sm:py-20 lg:py-28">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="mb-12 text-center">
          <h2 class="text-3xl font-bold leading-tight text-white sm:text-4xl">
            {m.native_build_security_title({}, { locale })}
          </h2>
          <p class="max-w-2xl mx-auto mt-4 text-lg text-gray-300">
            {m.native_build_security_subtitle({}, { locale })}
          </p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
          <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
              <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold text-white">{m.native_build_security_feature1_title({}, { locale })}</h3>
            <p class="text-gray-400">{m.native_build_security_feature1_desc({}, { locale })}</p>
          </div>
          <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
              <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold text-white">{m.native_build_security_feature2_title({}, { locale })}</h3>
            <p class="text-gray-400">{m.native_build_security_feature2_desc({}, { locale })}</p>
          </div>
          <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
              <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold text-white">{m.native_build_security_feature3_title({}, { locale })}</h3>
            <p class="text-gray-400">{m.native_build_security_feature3_desc({}, { locale })}</p>
          </div>
          <div class="p-6 bg-gray-800 border border-gray-700 rounded-2xl">
            <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-xl ring-1 bg-emerald-500/15 ring-emerald-300/40">
              <svg class="w-6 h-6 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </div>
            <h3 class="mb-2 text-xl font-bold text-white">{m.native_build_security_feature4_title({}, { locale })}</h3>
            <p class="text-gray-400">{m.native_build_security_feature4_desc({}, { locale })}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Transparency Section -->
    <section class="py-16 bg-gray-800 sm:py-20 lg:py-28">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="grid items-center grid-cols-1 gap-12 lg:grid-cols-2">
          <div class="order-2 lg:order-1">
            <div class="p-8 bg-gray-900 border border-gray-700 rounded-2xl">
              <div class="flex items-center justify-between gap-4 pb-4 mb-4 border-b border-gray-700">
                <span class="text-gray-400">Storage costs</span>
                <span class="text-xl font-bold text-emerald-400">$0</span>
              </div>
              <div class="flex items-center justify-between gap-4 pb-4 mb-4 border-b border-gray-700">
                <span class="text-gray-400">Log storage</span>
                <span class="text-xl font-bold text-emerald-400">$0</span>
              </div>
              <div class="flex items-center justify-between gap-4 pb-4 mb-4 border-b border-gray-700">
                <span class="text-gray-400">Artifact storage</span>
                <span class="text-xl font-bold text-emerald-400">$0</span>
              </div>
              <div class="flex items-center justify-between gap-4">
                <span class="font-semibold text-white">You only pay</span>
                <span class="text-xl font-bold text-white">Build minutes</span>
              </div>
            </div>
          </div>
          <div class="order-1 lg:order-2">
            <h2 class="text-3xl font-bold leading-tight text-white sm:text-4xl">
              {m.native_build_pricing_title({}, { locale })}
            </h2>
            <p class="mt-4 text-lg text-gray-300">
              {m.native_build_pricing_subtitle({}, { locale })}
            </p>
            <p class="mt-6 text-gray-400">
              {m.native_build_pricing_desc({}, { locale })}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="py-16 bg-gray-50 sm:py-20 lg:py-28">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-2xl mx-auto mb-16 text-center">
          <h2 class="text-3xl font-bold leading-tight text-black sm:text-4xl xl:text-5xl">
            {m.native_build_how_it_works_title({}, { locale })}
          </h2>
          <p class="max-w-lg mx-auto mt-4 text-base leading-relaxed text-gray-600">
            {m.native_build_how_it_works_subtitle({}, { locale })}
          </p>
        </div>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
          <!-- Step 1 -->
          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 text-xl font-bold border rounded-full text-emerald-600 border-emerald-300/40 bg-emerald-500/15">1</div>
            <h3 class="mb-2 text-xl font-bold text-gray-900">{m.native_build_step1_title({}, { locale })}</h3>
            <p class="text-gray-600">
              {m.native_build_step1_desc({}, { locale })}
            </p>
          </div>

          <!-- Step 2 -->
          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 text-xl font-bold text-white bg-gray-900 border border-gray-700 rounded-full">2</div>
            <h3 class="mb-2 text-xl font-bold text-gray-900">{m.native_build_step2_title({}, { locale })}</h3>
            <p class="text-gray-600">
              {m.native_build_step2_desc({}, { locale })}
            </p>
          </div>

          <!-- Step 3 -->
          <div class="text-center">
            <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 text-xl font-bold border rounded-full text-emerald-600 border-emerald-300/40 bg-emerald-500/15">
              3
            </div>
            <h3 class="mb-2 text-xl font-bold text-gray-900">{m.native_build_step3_title({}, { locale })}</h3>
            <p class="text-gray-600">
              {m.native_build_step3_desc({}, { locale })}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Comparison Section -->
    <section class="py-16 bg-gray-900 sm:py-20 lg:py-28">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="mb-16 text-center">
          <h2 class="text-3xl font-bold leading-tight text-white sm:text-4xl xl:text-5xl">
            {m.native_build_comparison_title({}, { locale })}
          </h2>
          <p class="mt-4 text-lg text-gray-300">
            {m.native_build_comparison_subtitle({}, { locale })}
          </p>
        </div>

        <div class="max-w-4xl mx-auto overflow-hidden bg-gray-800 border border-gray-700 rounded-2xl">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-700">
                <th class="px-6 py-4 text-left text-gray-300">Feature</th>
                <th class="px-6 py-4 text-center text-white">Cloud Builds</th>
                <th class="px-6 py-4 text-center text-gray-400">Local Builds</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
              <tr>
                <td class="px-6 py-4 text-gray-300">{m.native_build_comparison_xcode({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-emerald-400">✓</td>
                <td class="px-6 py-4 text-center text-gray-500">✗</td>
              </tr>
              <tr>
                <td class="px-6 py-4 text-gray-300">{m.native_build_comparison_android({}, { locale })}</td>
                <td class="px-6 py-4 text-center text-emerald-400">✓</td>
                <td class="px-6 py-4 text-center text-gray-500">✗</td>
              </tr>
              <tr>
