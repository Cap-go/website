---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'

const title = [Astro.locals.runtimeConfig.public.brand, m.Capacitor_Sanbox_App({}, { locale: Astro.locals.locale })].join(' | ')
const description = m.Capacitor_Sanbox_App_description({}, { locale: Astro.locals.locale })

const content = {
  title,
  description,
  image: `${Astro.locals.runtimeConfig.public.baseUrl}/app_demo.webp`,
}

const config = Astro.locals.runtimeConfig
const brand = config.public.brand
---

<Layout content={content}>
  <div>
    <div class="relative">
      <!-- Animated background elements -->
      <div class="pointer-events-none absolute inset-0 overflow-hidden">
        {
          Array.from({ length: 15 }).map((_, i) => (
            <div
              class="mobile-wave-animation absolute w-full"
              style={{
                top: `${i * 7}%`,
                animationDelay: `${Math.random() * 4}s`,
                height: `${Math.random() * 2 + 1}px`,
                opacity: Math.random() * 0.3 + 0.2,
              }}
            />
          ))
        }
      </div>

      <!-- Hero Section -->
      <section class="relative py-12 sm:py-16 lg:pt-20 xl:pb-0">
        <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="relative z-10 mx-auto max-w-4xl text-center">
            <p class="font-pj inline-flex rounded-full border border-blue-400/40 bg-blue-500/10 px-4 py-2 text-base text-blue-100">
                <svg class="mr-2 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              {m.now_available_on_mobile({}, { locale: Astro.locals.locale })}
            </p>
            <h1 class="font-pj mt-5 text-3xl leading-tight font-bold text-white sm:text-4xl sm:leading-tight lg:leading-tight xl:text-5xl">
              {m.manage_your_releases({}, { locale: Astro.locals.locale })}
              <br />
              <span class="text-gray-200">
                {m.on_the_go({}, { locale: Astro.locals.locale })}
              </span>
            </h1>
            <h2 class="font-inter mx-auto mt-6 max-w-2xl text-base leading-7 text-gray-300">
              {m.test_deploy_and_monitor_your_capacitor_apps({}, { locale: Astro.locals.locale })}
              <br />
              <span class="font-bold">{m.directly_from_your_phone({}, { locale: Astro.locals.locale })}</span>
            </h2>
            
            <!-- Download buttons -->
            <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center items-center">
              <a href="https://play.google.com/store/apps/details?id=ee.forgr.capacitor_go" target="_blank" class="transform hover:scale-105 transition-transform duration-200">
                <img src="/play-store-button.webp" class="h-14 w-auto sm:h-16" alt="Google Play Store download" />
              </a>
              <a href="https://apps.apple.com/pt/app/capgo/id1602316563" target="_blank" class="transform hover:scale-105 transition-transform duration-200">
                <img src="/app-store-button.webp" class="h-14 w-auto sm:h-16" alt="Apple App Store download" />
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Grid Section -->
      <section class="bg-gray-900 py-12 sm:py-16 lg:py-20">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl leading-tight font-bold text-white sm:text-4xl">
              {m.everything_you_need_in_your_pocket({}, { locale: Astro.locals.locale })}
            </h2>
            <p class="mt-4 text-lg text-gray-300">
              {m.full_control_of_your_capacitor_apps_from_anywhere({}, { locale: Astro.locals.locale })}
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Test Releases -->
            <div class="rounded-2xl bg-gray-800 p-6 border border-gray-700 transition-all duration-300 hover:border-white/30 hover:bg-gray-800/90">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-blue-500/15 ring-1 ring-blue-300/40 mb-4">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-blue-100 mb-2">{m.test_releases_instantly({}, { locale: Astro.locals.locale })}</h3>
              <p class="text-gray-300 text-sm">
                {m.install_and_test_any_version_directly({}, { locale: Astro.locals.locale })}
              </p>
            </div>

            <!-- Manage Channels -->
            <div class="rounded-2xl bg-gray-800 p-6 border border-gray-700 transition-all duration-300 hover:border-white/30 hover:bg-gray-800/90">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gray-700 ring-1 ring-white/15 mb-4">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">{m.manage_channels({}, { locale: Astro.locals.locale })}</h3>
              <p class="text-gray-300 text-sm">
                {m.switch_between_development_staging_production({}, { locale: Astro.locals.locale })}
              </p>
            </div>

            <!-- Deploy Updates -->
            <div class="rounded-2xl bg-gray-800 p-6 border border-gray-700 transition-all duration-300 hover:border-white/30 hover:bg-gray-800/90">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gray-700 ring-1 ring-white/15 mb-4">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">{m.deploy_with_confidence({}, { locale: Astro.locals.locale })}</h3>
              <p class="text-gray-300 text-sm">
                {m.push_updates_to_production_from_anywhere({}, { locale: Astro.locals.locale })}
              </p>
            </div>

            <!-- View Statistics -->
            <div class="rounded-2xl bg-gray-800 p-6 border border-gray-700 transition-all duration-300 hover:border-white/30 hover:bg-gray-800/90">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-emerald-500/15 ring-1 ring-emerald-300/40 mb-4">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-emerald-100 mb-2">{m.real_time_statistics({}, { locale: Astro.locals.locale })}</h3>
              <p class="text-gray-300 text-sm">
                {m.monitor_downloads_active_users_success_rates({}, { locale: Astro.locals.locale })}
              </p>
            </div>

            <!-- Team Collaboration -->
            <div class="rounded-2xl bg-gray-800 p-6 border border-gray-700 transition-all duration-300 hover:border-white/30 hover:bg-gray-800/90">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gray-700 ring-1 ring-white/15 mb-4">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">{m.team_collaboration({}, { locale: Astro.locals.locale })}</h3>
              <p class="text-gray-300 text-sm">
                {m.share_test_builds_with_your_team({}, { locale: Astro.locals.locale })}
              </p>
            </div>

            <!-- Instant Rollback -->
            <div class="rounded-2xl bg-gray-800 p-6 border border-gray-700 transition-all duration-300 hover:border-white/30 hover:bg-gray-800/90">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gray-700 ring-1 ring-white/15 mb-4">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-2">{m.instant_rollback({}, { locale: Astro.locals.locale })}</h3>
              <p class="text-gray-300 text-sm">
                {m.revert_to_previous_version_with_one_tap({}, { locale: Astro.locals.locale })}
              </p>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- How It Works Section -->
    <section class="bg-gray-50 py-16 sm:py-20 lg:py-28">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-3xl leading-tight font-bold text-black sm:text-4xl xl:text-5xl">
            {m.how_the_app_works({}, { locale: Astro.locals.locale })}
          </h2>
          <p class="mx-auto mt-4 max-w-lg text-base leading-relaxed text-gray-600">
            {m.seamless_integration_with_your_capgo_account({}, { locale: Astro.locals.locale })}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Step 1 -->
          <div class="text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-blue-500/15 text-blue-600 font-bold text-xl mb-4 border border-blue-300/40">
              1
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{m.connect_your_account({}, { locale: Astro.locals.locale })}</h3>
            <p class="text-gray-600">
              {m.login_with_your_capgo_credentials({}, { locale: Astro.locals.locale })}
            </p>
          </div>

          <!-- Step 2 -->
          <div class="text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-gray-900 text-white font-bold text-xl mb-4 border border-gray-700">
              2
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{m.select_your_app({}, { locale: Astro.locals.locale })}</h3>
            <p class="text-gray-600">
              {m.choose_from_your_capgo_projects({}, { locale: Astro.locals.locale })}
            </p>
          </div>

          <!-- Step 3 -->
          <div class="text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-emerald-500/15 text-emerald-600 font-bold text-xl mb-4 border border-emerald-300/40">
              3
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{m.manage_on_the_go({}, { locale: Astro.locals.locale })}</h3>
            <p class="text-gray-600">
              {m.test_deploy_monitor_from_anywhere({}, { locale: Astro.locals.locale })}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Use Cases Section -->
    <section class="bg-gray-900 py-16 sm:py-20 lg:py-28">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl leading-tight font-bold text-white sm:text-4xl xl:text-5xl">
            {m.perfect_for({}, { locale: Astro.locals.locale })}
          </h2>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- QA Teams -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700 transition-colors duration-300 hover:border-white/30 hover:bg-gray-800/90">
            <div class="flex items-center mb-6">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-purple-500/15 ring-1 ring-purple-300/40">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="ml-4 text-2xl font-bold text-purple-100">{m.qa_teams({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <p class="text-gray-300 mb-4">
              {m.test_different_versions_and_channels({}, { locale: Astro.locals.locale })}
            </p>
            <ul class="space-y-2 text-gray-400">
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.instant_version_switching({}, { locale: Astro.locals.locale })}
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.test_on_real_devices({}, { locale: Astro.locals.locale })}
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.report_issues_directly({}, { locale: Astro.locals.locale })}
              </li>
            </ul>
          </div>

          <!-- Product Managers -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700 transition-colors duration-300 hover:border-white/30 hover:bg-gray-800/90">
            <div class="flex items-center mb-6">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gray-700 ring-1 ring-white/20">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h3 class="ml-4 text-2xl font-bold text-white">{m.product_managers({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <p class="text-gray-300 mb-4">
              {m.monitor_adoption_and_performance({}, { locale: Astro.locals.locale })}
            </p>
            <ul class="space-y-2 text-gray-400">
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.real_time_analytics({}, { locale: Astro.locals.locale })}
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.update_success_tracking({}, { locale: Astro.locals.locale })}
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.quick_decision_making({}, { locale: Astro.locals.locale })}
              </li>
            </ul>
          </div>

          <!-- Developers -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700 transition-colors duration-300 hover:border-white/30 hover:bg-gray-800/90">
            <div class="flex items-center mb-6">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-gray-700 ring-1 ring-white/20">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="ml-4 text-2xl font-bold text-white">{m.developers({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <p class="text-gray-300 mb-4">
              {m.deploy_and_test_anywhere_anytime({}, { locale: Astro.locals.locale })}
            </p>
            <ul class="space-y-2 text-gray-400">
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.emergency_fixes_on_the_go({}, { locale: Astro.locals.locale })}
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.test_pr_builds({}, { locale: Astro.locals.locale })}
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.channel_management({}, { locale: Astro.locals.locale })}
              </li>
            </ul>
          </div>

          <!-- Support Teams -->
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-700 transition-colors duration-300 hover:border-white/30 hover:bg-gray-800/90">
            <div class="flex items-center mb-6">
              <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-rose-500/15 ring-1 ring-rose-300/40">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <h3 class="ml-4 text-2xl font-bold text-rose-100">{m.support_teams({}, { locale: Astro.locals.locale })}</h3>
            </div>
            <p class="text-gray-300 mb-4">
              {m.help_customers_with_app_issues({}, { locale: Astro.locals.locale })}
            </p>
            <ul class="space-y-2 text-gray-400">
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.diagnose_version_issues({}, { locale: Astro.locals.locale })}
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.guide_rollback_process({}, { locale: Astro.locals.locale })}
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-white mr-2 mt-0.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {m.verify_fixes_instantly({}, { locale: Astro.locals.locale })}
              </li>
            </ul>
          </div>
        </div>
      </div>
