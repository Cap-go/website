---
import Layout from '@/layouts/Layout.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'

const locale = Astro.locals.locale
const title = m.capwesome_title({}, { locale })
const description = m.capwesome_meta_description({}, { locale })

const content = {
  title,
  description,
  image: `${Astro.locals.runtimeConfig.public.baseUrl}/capgo_social.png`,
}

const migrationGuideUrl = getRelativeLocaleUrl(locale, 'docs/upgrade/from-capawesome-to-capgo/')
---

<Layout content={content}>
  <section class="py-16 bg-gray-900 sm:py-20">
    <div class="px-6 mx-auto max-w-4xl lg:px-8">
      <!-- Hero -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl mb-4">
          {m.capwesome_hero_title({}, { locale })}
        </h1>
        <p class="text-xl text-gray-300 max-w-2xl mx-auto">
          {m.capwesome_hero_subtitle({}, { locale })}
        </p>
      </div>

      <!-- Respect Section -->
      <div class="mb-16 rounded-lg border border-gray-600 bg-gray-800/50 p-8">
        <h2 class="mb-4 text-2xl font-bold text-gray-100">
          {m.capwesome_respect_title({}, { locale })}
        </h2>
        <div class="space-y-4 text-gray-300">
          <p>
            {m.capwesome_respect_p1({}, { locale })}
          </p>
          <p class="text-gray-400">
            {m.capwesome_respect_p2({}, { locale })}
          </p>
        </div>
      </div>

      <!-- The Real Differences -->
      <div class="mb-16">
        <h2 class="mb-8 text-3xl font-bold text-gray-100">
          {m.capwesome_differences_title({}, { locale })}
        </h2>

        <div class="space-y-6">
          <!-- Experience & Scale -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-gray-100">
              {m.capwesome_diff_experience_title({}, { locale })}
            </h3>
            <div class="space-y-2 text-gray-300">
              <p set:html={m.capwesome_diff_experience_capgo({}, { locale })}></p>
              <p set:html={m.capwesome_diff_experience_capawesome({}, { locale })}></p>
              <p class="text-sm text-gray-400 pt-2">
                {m.capwesome_diff_experience_note({}, { locale })}
              </p>
            </div>
          </div>

          <!-- Pricing -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-gray-100">
              {m.capwesome_diff_pricing_title({}, { locale })}
            </h3>
            <div class="space-y-2 text-gray-300">
              <p set:html={m.capwesome_diff_pricing_capgo({}, { locale })}></p>
              <p set:html={m.capwesome_diff_pricing_capawesome({}, { locale })}></p>
              <p class="text-sm text-gray-400 pt-2">
                {m.capwesome_diff_pricing_note({}, { locale })}
              </p>
            </div>
          </div>

          <!-- Open Source & Security -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-gray-100">
              {m.capwesome_diff_opensource_title({}, { locale })}
            </h3>
            <div class="space-y-2 text-gray-300">
              <p set:html={m.capwesome_diff_opensource_capgo({}, { locale })}></p>
              <ul class="ml-6 list-disc space-y-1 text-gray-400">
                <li set:html={m.capwesome_diff_opensource_capgo_li1({}, { locale })}></li>
                <li set:html={m.capwesome_diff_opensource_capgo_li2({}, { locale })}></li>
                <li>{m.capwesome_diff_opensource_capgo_li3({}, { locale })}</li>
                <li>{m.capwesome_diff_opensource_capgo_li4({}, { locale })}</li>
              </ul>
              <p class="mt-2" set:html={m.capwesome_diff_opensource_capawesome({}, { locale })}></p>
              <ul class="ml-6 list-disc space-y-1 text-gray-400">
                <li>{m.capwesome_diff_opensource_capawesome_li1({}, { locale })}</li>
                <li>{m.capwesome_diff_opensource_capawesome_li2({}, { locale })}</li>
                <li>{m.capwesome_diff_opensource_capawesome_li3({}, { locale })}</li>
              </ul>
              <p class="text-sm text-gray-400 pt-2">
                {m.capwesome_diff_opensource_note({}, { locale })}
              </p>
            </div>
          </div>

          <!-- Business Model -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-gray-100">
              {m.capwesome_diff_business_title({}, { locale })}
            </h3>
            <div class="space-y-2 text-gray-300">
              <p set:html={m.capwesome_diff_business_capgo({}, { locale })}></p>
              <ul class="ml-6 list-disc space-y-1 text-gray-400 text-sm">
                <li>{m.capwesome_diff_business_capgo_li1({}, { locale })}</li>
                <li>{m.capwesome_diff_business_capgo_li2({}, { locale })}</li>
                <li>{m.capwesome_diff_business_capgo_li3({}, { locale })}</li>
                <li>{m.capwesome_diff_business_capgo_li4({}, { locale })}</li>
              </ul>
              <p class="mt-3" set:html={m.capwesome_diff_business_capawesome({}, { locale })}></p>
              <p class="text-gray-400 text-sm pt-2">
                {m.capwesome_diff_business_note({}, { locale })}
              </p>
            </div>
          </div>

          <!-- Plugin Ecosystem -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-gray-100">
              {m.capwesome_diff_plugins_title({}, { locale })}
            </h3>
            <div class="space-y-2 text-gray-300">
              <p set:html={m.capwesome_diff_plugins_capgo({}, { locale })}></p>
              <p set:html={m.capwesome_diff_plugins_capawesome({}, { locale })}></p>
              <p class="text-gray-400 text-sm pt-2">
                {m.capwesome_diff_plugins_note({}, { locale })}
              </p>
            </div>
          </div>

          <!-- Support -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-gray-100">
              {m.capwesome_diff_support_title({}, { locale })}
            </h3>
            <div class="space-y-2 text-gray-300">
              <p set:html={m.capwesome_diff_support_both({}, { locale })}></p>
              <p set:html={m.capwesome_diff_support_capgo({}, { locale })}></p>
              <p set:html={m.capwesome_diff_support_capawesome({}, { locale })}></p>
              <p class="text-gray-400 text-sm pt-2">
                {m.capwesome_diff_support_note({}, { locale })}
              </p>
            </div>
          </div>

          <!-- Dynamic Channels -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-gray-100">
              {m.capwesome_diff_channels_title({}, { locale })}
            </h3>
            <div class="space-y-2 text-gray-300">
              <p set:html={m.capwesome_diff_channels_capgo({}, { locale })}></p>
              <p set:html={m.capwesome_diff_channels_capawesome({}, { locale })}></p>
              <p class="text-gray-400 text-sm pt-2">
                {m.capwesome_diff_channels_note({}, { locale })}
              </p>
            </div>
          </div>

          <!-- Device Logs vs Server Logs -->
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="mb-3 text-xl font-semibold text-gray-100">
              {m.capwesome_diff_logs_title({}, { locale })}
            </h3>
            <div class="space-y-2 text-gray-300">
              <p set:html={m.capwesome_diff_logs_capgo({}, { locale })}></p>
              <p set:html={m.capwesome_diff_logs_capawesome({}, { locale })}></p>
              <p class="text-gray-400 text-sm pt-2">
                {m.capwesome_diff_logs_note({}, { locale })}
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- When Capawesome Might Be Better -->
      <div class="mb-16 rounded-lg border border-gray-600 bg-gray-800/50 p-8">
        <h2 class="mb-4 text-2xl font-bold text-gray-100">
          {m.capwesome_when_better_title({}, { locale })}
        </h2>
        <div class="space-y-3 text-gray-300">
          <p>
            <strong class="text-gray-100">{m.capwesome_when_better_manual_label({}, { locale })}</strong> {m.capwesome_when_better_manual({}, { locale })}
          </p>
          <p>
            <strong class="text-gray-100">{m.capwesome_when_better_git_label({}, { locale })}</strong> {m.capwesome_when_better_git({}, { locale })}
          </p>
          <p>
            <strong class="text-gray-100">{m.capwesome_when_better_european_label({}, { locale })}</strong> {m.capwesome_when_better_european({}, { locale })}
          </p>
          <p class="text-sm text-gray-400 pt-2">
            {m.capwesome_when_better_note({}, { locale })}
          </p>
        </div>
      </div>

      <!-- What We're NOT -->
      <div class="mb-16 rounded-lg border border-gray-600 bg-gray-800/50 p-8">
        <h2 class="mb-4 text-2xl font-bold text-gray-100">
          {m.capwesome_not_good_at_title({}, { locale })}
        </h2>
        <div class="space-y-3 text-gray-300">
          <p>
            <strong class="text-gray-100">{m.capwesome_not_good_at_docs_label({}, { locale })}</strong> {m.capwesome_not_good_at_docs({}, { locale })}
          </p>
          <p>
            <strong class="text-gray-100">{m.capwesome_not_good_at_git_label({}, { locale })}</strong> {m.capwesome_not_good_at_git({}, { locale })}
          </p>
        </div>
      </div>

      <!-- Quick Stats Comparison -->
      <div class="mb-16">
        <h2 class="mb-6 text-3xl font-bold text-gray-100">
          {m.capwesome_quick_facts_title({}, { locale })}
        </h2>
        <div class="grid gap-6 sm:grid-cols-2">
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="text-lg font-semibold text-white mb-4">Capgo</h3>
            <ul class="space-y-2 text-gray-300 text-sm">
              <li>{m.capwesome_quick_facts_capgo_li1({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capgo_li2({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capgo_li3({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capgo_li4({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capgo_li5({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capgo_li6({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capgo_li7({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capgo_li8({}, { locale })}</li>
            </ul>
          </div>
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <h3 class="text-lg font-semibold text-white mb-4">Capawesome</h3>
            <ul class="space-y-2 text-gray-300 text-sm">
              <li>{m.capwesome_quick_facts_capawesome_li1({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capawesome_li2({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capawesome_li3({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capawesome_li4({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capawesome_li5({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capawesome_li6({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capawesome_li7({}, { locale })}</li>
              <li>{m.capwesome_quick_facts_capawesome_li8({}, { locale })}</li>
            </ul>
          </div>
        </div>
        <p class="mt-6 text-center text-sm text-gray-400">
          {m.capwesome_quick_facts_legend({}, { locale })}
        </p>
      </div>

      <!-- Migration -->
      <div class="mb-16">
        <h2 class="mb-6 text-3xl font-bold text-gray-100">
          {m.capwesome_migration_title({}, { locale })}
        </h2>
        <div class="space-y-4 text-gray-300">
          <p>
            {m.capwesome_migration_intro({}, { locale })}
          </p>
          <div class="mt-6 p-6 bg-gray-800 rounded-xl">
            <h3 class="text-lg font-semibold text-white mb-3">{m.capwesome_migration_basics_title({}, { locale })}</h3>
            <ol class="space-y-2 text-gray-300">
              <li class="flex gap-3">
                <span class="text-emerald-400 font-semibold">1.</span>
                <span>{m.capwesome_migration_step1({}, { locale })}</span>
              </li>
              <li class="flex gap-3">
                <span class="text-emerald-400 font-semibold">2.</span>
                <span>{m.capwesome_migration_step2({}, { locale })}</span>
              </li>
              <li class="flex gap-3">
                <span class="text-emerald-400 font-semibold">3.</span>
                <span>{m.capwesome_migration_step3({}, { locale })}</span>
              </li>
            </ol>
            <p class="mt-4 text-sm text-emerald-300" set:html={m.capwesome_migration_guide_text({ url: migrationGuideUrl }, { locale })}></p>
          </div>
        </div>
      </div>

      <!-- Testimonials -->
      <div class="mb-16">
        <h2 class="mb-8 text-3xl font-bold text-gray-100">
          {m.capwesome_testimonials_title({}, { locale })}
        </h2>
        <div class="grid gap-6 sm:grid-cols-2">
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <p class="mb-2 italic text-gray-300">
              "{m.capwesome_testimonial_1({}, { locale })}"
            </p>
            <p class="text-sm text-gray-400">{m.capwesome_testimonial_1_author({}, { locale })}</p>
          </div>
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <p class="mb-2 italic text-gray-300">
              "{m.capwesome_testimonial_2({}, { locale })}"
            </p>
            <p class="text-sm text-gray-400">{m.capwesome_testimonial_2_author({}, { locale })}</p>
          </div>
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <p class="mb-2 italic text-gray-300">
              "{m.capwesome_testimonial_3({}, { locale })}"
            </p>
            <p class="text-sm text-gray-400">{m.capwesome_testimonial_3_author({}, { locale })}</p>
          </div>
          <div class="rounded-lg border border-gray-700 bg-gray-800/50 p-6">
            <p class="mb-2 italic text-gray-300">
              "{m.capwesome_testimonial_4({}, { locale })}"
            </p>
            <p class="text-sm text-gray-400">{m.capwesome_testimonial_4_author({}, { locale })}</p>
          </div>
        </div>

        <div class="mt-8 p-6 bg-gray-800 rounded-xl">
          <h3 class="text-lg font-semibold text-white mb-4">{m.capwesome_testimonials_more({}, { locale })}</h3>
          <iframe
            id="wall-of-love-Ngmn41b"
            src="https://senja.io/p/capgo/Ngmn41b?hideNavigation=true&embed=true"
            aria-label="Wall of Love"
            style="border: 0; overflow: hidden;"
            width="100%"
            class="min-h-100"
          ></iframe>
          <script is:inline>
            document.addEventListener('DOMContentLoaded', function () {
              if (typeof iFrameResize === 'function') {
                iFrameResize({ log: false, checkOrigin: false }, '#wall-of-love-Ngmn41b')
              }
            })
          </script>
        </div>
      </div>

      <!-- CTA -->
      <div class="overflow-hidden p-1 bg-linear-to-r rounded-3xl ring-1 from-[#44BCFF]/10 via-[#FF44EC]/10 to-[#FF675E]/10 ring-white/10">
        <div class="overflow-hidden relative py-12 px-8 bg-gray-900 sm:py-16 sm:px-12 rounded-[1.45rem]">
          <div class="absolute -left-10 -top-24 w-48 h-48 rounded-full pointer-events-none bg-[#44BCFF]/30 blur-3xl"></div>
          <div class="absolute -right-16 -bottom-28 w-56 h-56 rounded-full pointer-events-none bg-[#FF44EC]/20 blur-3xl"></div>
          <div class="relative text-center">
            <h2 class="text-3xl font-bold text-white sm:text-4xl mb-4">
              {m.capwesome_cta_title({}, { locale })}
            </h2>
            <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
              {m.capwesome_cta_subtitle({}, { locale })}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 items-center justify-center">
              <a
                href={getRelativeLocaleUrl(locale, 'register')}
                class="inline-flex justify-center items-center py-4 px-8 text-lg font-bold text-white bg-emerald-600 rounded-xl hover:bg-emerald-700 transition-all"
              >
                {m.capwesome_cta_start_trial({}, { locale })}
              </a>
              <a
                href="https://cal.com/team/capgo/demo"
                target="_blank"
                class="inline-flex justify-center items-center py-4 px-8 text-lg font-semibold text-white rounded-xl ring-1 bg-white/10 ring-white/20 hover:bg-white/15"
              >
                {m.capwesome_cta_book_demo_btn({}, { locale })}
              </a>
            </div>
            <p class="mt-6 text-sm text-gray-400" set:html={m.capwesome_cta_questions({}, { locale })}></p>
          </div>
        </div>
      </div>

      <!-- Footer Note -->
      <div class="mt-12 text-center text-sm text-gray-400">
        <p>
          {m.capwesome_footer_note({}, { locale })}
        </p>
        <p class="mt-2">
          {m.capwesome_footer_note_wink({}, { locale })}
        </p>
      </div>
    </div>
  </section>
</Layout>
