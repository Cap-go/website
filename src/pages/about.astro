---
import { useRuntimeConfig } from '@/config/app'
import Layout from '@/layouts/Layout.astro'
import { defaultLocale } from '@/services/locale'
import VueAbout from '@/vue-pages/about.vue'

const config = useRuntimeConfig()

const brand = config.public.brand
const description = 'About Capgo'

const content = {
  description,
  title: `${brand} | About Capgo`,
  image: `${config.public.baseUrl}/app_demo.webp`,
}
---

<Layout content={content}><VueAbout locale={Astro.currentLocale || defaultLocale} client:load /></Layout>
