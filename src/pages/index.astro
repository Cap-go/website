<script>
  // Lazy load video and replace fake device when in view
  document.addEventListener('DOMContentLoaded', function() {
    const demoContainer = document.getElementById('demo-container');
    const devicePlaceholder = document.getElementById('device-placeholder');
    const videoContainer = document.getElementById('video-container');
    const video = document.getElementById('capgo-demo-video') as HTMLVideoElement;

    if (!demoContainer || !devicePlaceholder || !videoContainer || !video) return;

    // Intersection Observer to detect when the demo section is in view
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Start loading the video
          video.load();
          
          // Once video can play, switch from device to video
          video.addEventListener('canplay', function() {
            devicePlaceholder.classList.add('hidden');
            videoContainer.classList.remove('hidden');
            video.play();
          }, { once: true });

          // Stop observing once loaded
          observer.unobserve(demoContainer);
        }
      });
    }, {
      threshold: 0.3, // Trigger when 30% of the element is visible
      rootMargin: '50px' // Start loading 50px before it comes into view
    });

    observer.observe(demoContainer);
  });
</script>

