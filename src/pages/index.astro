          <div class="mx-auto mt-8 max-w-3xl space-y-6 text-lg leading-relaxed text-gray-700">
            <p>
              {m.manifesto_home_for_developers({}, { locale: Astro.locals.locale })}
            </p>
            <p>
              {m.manifesto_full_ecosystem({}, { locale: Astro.locals.locale })}
            </p>
            <p class="bg-linear-to-b from-[#FF44EC] to-[#2570fa] bg-clip-text text-transparent font-bold">
              {m.manifesto_behind_every_movie({}, { locale: Astro.locals.locale })}
            </p>
          </div>
          <div class="mt-10">
            <a
              href={getRelativeLocaleUrl(Astro.locals.locale, 'register')}
              class="inline-flex items-center justify-center rounded-xl bg-gray-900 px-8 py-4 text-lg font-bold text-white transition-all duration-200 hover:bg-gray-800 focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 focus:outline-none"
