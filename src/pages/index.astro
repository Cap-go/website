---
import Layout from '@/layouts/Layout.astro'
import { shortNumber } from '@/services/misc'
import Orgs from '@/components/Orgs.astro'
import Testimonials from '@/components/Testimonials.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import dayjs from 'dayjs'
import * as m from '@/paraglide/messages'
import CompaniesLogo from '@/components/companies-logo.astro'
import { createLdJsonGraph, createServiceLdJson, createSoftwareApplicationLdJson } from '@/lib/ldJson'

const config = Astro.locals.runtimeConfig

const stats = {
  stars: shortNumber(499),
  apps: shortNumber(1400),
  updates: shortNumber(947593631),
}

const tmp = await fetch(`${config.public.baseApiUrl}/private/website_stats`)
if (tmp.ok) {
  const res = await tmp.json()
  if (res) {
    if (res.apps) stats.apps = shortNumber(res.apps)
    if (res.updates) stats.updates = shortNumber(res.updates)
    if (res.stars) stats.stars = shortNumber(res.stars)
  }
}

// Create comprehensive homepage content definition
const title = `${config.public.brand} - ${m.instant_updates_for_capacitor({}, { locale: Astro.locals.locale })}`
const description = m.ship_updates_fixes_changes_and_features({}, { locale: Astro.locals.locale })

// Create comprehensive LD+JSON for homepage
const capgoService = createServiceLdJson(config.public, {
  name: 'Capgo - Live Updates for Capacitor Apps',
  description: 'Instant over-the-air / CodePush updates for Capacitor mobile applications. Deploy OTA, bug fixes, feature updates, and improvements without app store delays.',
  url: config.public.baseUrl,
  serviceType: 'Software Development Service',
  areaServed: ['Worldwide'],
})

// Create SoftwareApplication schema for the Capgo platform
const capgoSoftware = createSoftwareApplicationLdJson(config.public, {
  name: 'Capgo Live Update Platform',
  description: 'Professional live update platform for Capacitor developers. Deploy updates instantly to iOS and Android apps.',
  url: config.public.baseUrl,
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Web, iOS, Android',
  softwareVersion: '1.0',
  aggregateRating: {
    ratingValue: 4.8,
    reviewCount: parseInt(stats.apps.replace(/[^\d]/g, '')) || 1400,
  },
  offers: {
    price: '0',
    priceCurrency: 'USD',
    availability: 'https://schema.org/InStock',
  },
})

// Create comprehensive LD+JSON graph for homepage
const content = {
  title,
  description,
  image: `${config.public.baseUrl}/capgo_social.png`,
  ldJSON: createLdJsonGraph(config.public, capgoService, {
    includeOrganization: true,
    includeBreadcrumbs: true,
    breadcrumbs: [
      {
        name: 'Home',
        url: config.public.baseUrl,
      },
      {
        name: 'Platform',
        url: `${config.public.baseUrl}/app_mobile/`,
      },
      {
        name: 'Pricing',
        url: `${config.public.baseUrl}/pricing/`,
      },
      {
        name: 'Documentation',
        url: `${config.public.baseUrl}/docs/`,
      },
    ],
  }),
}

// Add the SoftwareApplication to the graph
content.ldJSON['@graph'].push(capgoSoftware)

const ctaSubtext = `${m.days_free_trial({}, { locale: Astro.locals.locale })}. ${m.no_credit_card_required({}, { locale: Astro.locals.locale })}`
---

<Layout content={content}>
  <div>
    <div class="relative">
      <!-- Animated teleport lines -->
      <div class="pointer-events-none absolute inset-0 overflow-hidden">
        {
          Array.from({ length: 20 }).map((_, i) => (
            <div
              class="teleport-line-animation absolute w-full"
              style={{
                top: `${i * 5 - 2}%`,
                animationDelay: `${Math.random() * 3}s`,
                height: `${Math.random() * 1 + 1}px`,
                opacity: Math.random() * 0.5 + 0.3,
              }}
            />
          ))
        }
      </div>

      <!-- Glowing portal effect -->
      <div class="portal-glow-animation pointer-events-none absolute top-1/2 right-0 h-3/5 w-1/5 -translate-y-1/2"></div>

      <section class="relative pt-16 sm:pt-24 lg:pt-32">
        <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="relative z-10 mx-auto max-w-4xl text-center">
            <h1 class="font-pj text-4xl leading-tight font-bold tracking-tight sm:text-5xl sm:leading-tight lg:text-6xl lg:leading-tight xl:text-7xl">
              {m.instant_updates_for_your({}, { locale: Astro.locals.locale })}
              <br />
              <span class="text-azure-500">&lt;CapacitorJS app/&gt;</span>
            </h1>
            <p class="font-inter mx-auto mt-6 max-w-3xl text-lg leading-8 text-gray-400 sm:text-xl">
              {m.hero_subtitle_part1({}, { locale: Astro.locals.locale })} <span class="font-bold">{m.within_minutes({}, { locale: Astro.locals.locale })}</span> {m.hero_subtitle_part2({}, { locale: Astro.locals.locale })}<br />{m.hero_subtitle_line2({}, { locale: Astro.locals.locale })}
            </p>
            <div class="mt-10 flex flex-col items-center gap-3">
              <div class="group relative inline-flex">
                <div
                  class="transitiona-all animate-tilt absolute -inset-px rounded-xl bg-[#44BCFF] opacity-70 blur-lg duration-1000 group-hover:-inset-1 group-hover:opacity-100 group-hover:duration-200"
                >
                </div>
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'register')}
                  class="font-pj relative z-10 inline-flex items-center justify-center rounded-xl bg-gray-900 px-8 py-4 text-lg font-bold text-white transition-all duration-200 focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 focus:outline-none"
                >
                  {m.cta_start_free({}, { locale: Astro.locals.locale })}
                </a>
              </div>
              <p class="font-inter text-sm leading-6 text-gray-400">{ctaSubtext}</p>
            </div>
          </div>
        </div>
      </section>
      <section class="bg-gray-900 py-12 sm:py-16 lg:py-20">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="mx-auto grid grid-cols-1 gap-x-12 gap-y-8 px-16 text-center sm:grid-cols-3 sm:px-0 lg:max-w-4xl lg:gap-x-24">
            <div>
              <svg class="mx-auto h-14 w-auto text-gray-500" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <path d="M349.4 44.6c5.9-13.7 1.5-29.7-10.6-38.5s-28.6-8-39.9 1.8l-256 224c-10 8.8-13.6 22.9-8.9 35.3S50.7 288 64 288H175.5L98.6 467.4c-5.9 13.7-1.5 29.7 10.6 38.5s28.6 8 39.9-1.8l256-224c10-8.8 13.6-22.9 8.9-35.3s-16.6-20.7-30-20.7H272.5L349.4 44.6z"/>
              </svg>
              <h3 class="mt-6 text-lg font-medium text-white md:mt-8">{m.instant_updates({}, { locale: Astro.locals.locale })}</h3>
              <p class="mt-3 text-sm text-gray-400">
                {m.reach_users_now_not_weeks_later({}, { locale: Astro.locals.locale })}
              </p>
            </div>
            <div>
              <div class="mx-auto flex h-14 w-auto items-center justify-center gap-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-auto text-gray-500" fill="currentColor" viewBox="0 0 384 512">
                  <path d="M318.7 268.7c-.2-36.7 16.4-64.4 50-84.8-18.8-26.9-47.2-41.7-84.7-44.6-35.5-2.8-74.3 20.7-88.5 20.7-15 0-49.4-19.7-76.4-19.7C63.3 141.2 4 184.8 4 273.5q0 39.3 14.4 81.2c12.8 36.7 59 126.7 107.2 125.2 25.2-.6 43-17.9 75.8-17.9 31.8 0 48.3 17.9 76.4 17.9 48.6-.7 90.4-82.5 102.6-119.3-65.2-30.7-61.7-90-61.7-91.9zm-56.6-164.2c27.3-32.4 24.8-61.9 24-72.5-24.1 1.4-52 16.4-67.9 34.9-17.5 19.8-27.8 44.3-25.6 71.9 26.1 2 49.9-11.4 69.5-34.3z"/>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-auto text-gray-500" fill="currentColor" viewBox="0 0 488 512">
                  <path d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z"/>
                </svg>
              </div>
              <h3 class="mt-6 text-lg font-medium text-white md:mt-8">{m.app_store_compliant({}, { locale: Astro.locals.locale })}</h3>
              <p class="mt-3 text-sm text-gray-400">{m.compliant_with_apple_and_android_requirements({}, { locale: Astro.locals.locale })}</p>
            </div>
            <div>
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-14 w-auto text-gray-500" fill="currentColor" viewBox="0 0 512 512">
                <path d="M256 0c4.6 0 9.2 1 13.4 2.9L457.7 82.8c22 9.3 38.4 31 38.3 57.2c-.5 99.2-41.3 280.7-213.6 363.2c-16.7 8-36.1 8-52.8 0C57.3 420.7 16.5 239.2 16 140c-.1-26.2 16.3-47.9 38.3-57.2L242.7 2.9C246.8 1 251.4 0 256 0zm0 66.8V444.8C394 378 431.1 230.1 432 141.4L256 66.8l0 0z"/>
              </svg>
              <h3 class="mt-6 text-lg font-medium text-white md:mt-8">{m.end_to_end_encryption({}, { locale: Astro.locals.locale })}</h3>
              <p class="mt-3 text-sm text-gray-400">{m.only_your_users_can_decrypt_your_updates_no_one_else({}, { locale: Astro.locals.locale })}</p>
            </div>
          </div>
          <p class="font-inter mx-auto block max-w-sm text-center text-xl leading-7 text-gray-400 md:hidden">
            {m.for_apple_and_google_app_updates_distribution({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </section>
    </div>
    <CompaniesLogo />
    <section class="relative overflow-hidden bg-gray-900 py-24 sm:py-32">
      <!-- Enhanced Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 30px 30px;"></div>
      </div>

      <!-- Dynamic Floating Elements -->
      <div class="absolute top-10 left-10 h-32 w-32 animate-pulse rounded-full bg-blue-500/10 blur-2xl"></div>
      <div class="absolute right-10 bottom-10 h-40 w-40 animate-pulse rounded-full bg-purple-500/10 blur-2xl" style="animation-delay: 1.5s;"></div>
      <div class="absolute top-1/3 right-1/5 h-24 w-24 animate-pulse rounded-full bg-pink-500/10 blur-xl" style="animation-delay: 3s;"></div>
      <div class="absolute bottom-1/3 left-1/4 h-20 w-20 animate-pulse rounded-full bg-cyan-500/10 blur-xl" style="animation-delay: 4.5s;"></div>

      <!-- Gradient Orbs -->
      <div class="absolute top-20 right-1/4 h-96 w-96 rounded-full bg-blue-600/20 opacity-30 blur-3xl"></div>
      <div class="absolute bottom-20 left-1/4 h-80 w-80 rounded-full bg-pink-600/20 opacity-30 blur-3xl"></div>

      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="mb-16 text-center">
          <div class="mb-8 inline-flex items-center rounded-full bg-blue-500/10 px-4 py-2 text-sm font-medium text-blue-400 ring-1 ring-blue-500/20 ring-inset">
            <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              ></path>
            </svg>
            {m.home_real_time_stats_badge({}, { locale: Astro.locals.locale })}
          </div>

          <h2 class="mb-4 text-4xl leading-tight font-bold text-white sm:text-5xl lg:text-7xl">
            <span class="text-[#44BCFF]">
              {m.apps_with_20m_users({}, { locale: Astro.locals.locale })}
            </span>
          </h2>
          <h2 class="text-5xl leading-tight font-bold text-white sm:text-6xl lg:text-8xl">
            {m.use_capgo({}, { locale: Astro.locals.locale })}
          </h2>

          <p class="mx-auto mt-6 max-w-3xl text-lg leading-relaxed text-gray-300">
            {m.our_numbers_are_shared_transparently_since_december_2021({}, { locale: Astro.locals.locale })}
          </p>
          <p class="mt-4 flex items-center justify-center text-center text-sm text-gray-500">
            <svg class="mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {m.last_update({}, { locale: Astro.locals.locale })}: {dayjs().format('MMMM DD, YYYY')}
          </p>
        </div>

        <!-- Main Stats Grid -->
        <div class="mt-16 grid grid-cols-1 gap-6 sm:grid-cols-3 lg:gap-8">
          <!-- Updates Delivered -->
          <div class="group relative">
            <div
              class="relative overflow-hidden rounded-3xl bg-gray-800/80 p-8 ring-1 ring-white/10 backdrop-blur-sm transition-all duration-300 hover:bg-gray-800/90 hover:ring-white/20"
            >
              <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-2xl bg-white/10 ring-1 ring-white/20">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"
                  ></path>
                </svg>
              </div>
              <h3 class="mb-4 text-6xl font-bold">
                <span class="text-white">{stats.updates}</span>
              </h3>
              <p class="mb-2 text-xl font-semibold text-white">{m.updates_delivered({}, { locale: Astro.locals.locale })}</p>
              <p class="text-sm text-gray-400">{m.all_around_the_globe({}, { locale: Astro.locals.locale })}</p>
            </div>
          </div>

          <!-- Apps in Production -->
          <div class="group relative">
            <div
              class="relative overflow-hidden rounded-3xl bg-gray-800/80 p-8 ring-1 ring-white/10 backdrop-blur-sm transition-all duration-300 hover:bg-gray-800/90 hover:ring-white/20"
            >
              <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-2xl bg-white/10 ring-1 ring-white/20">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="mb-4 text-6xl font-bold">
                <span class="text-white">{stats.apps}</span>
              </h3>
              <p class="mb-2 text-xl font-semibold text-white">{m.apps({}, { locale: Astro.locals.locale })}</p>
              <p class="text-sm text-gray-400">{m.using_us_in_production({}, { locale: Astro.locals.locale })}</p>
            </div>
          </div>

          <!-- GitHub Stars -->
          <div class="group relative">
            <div
              class="relative overflow-hidden rounded-3xl bg-gray-800/80 p-8 ring-1 ring-white/10 backdrop-blur-sm transition-all duration-300 hover:bg-gray-800/90 hover:ring-white/20"
            >
              <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-2xl bg-white/10 ring-1 ring-white/20">
                <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                  ></path>
                </svg>
              </div>
              <h3 class="mb-4 text-6xl font-bold">
                <a href="https://github.com/Cap-go/capacitor-updater" target="_blank" rel="noopener noreferrer" class="text-white hover:underline">
                  {stats.stars}★
                </a>
              </h3>
              <p class="mb-2 text-xl font-semibold text-white">{m.stars_in_github({}, { locale: Astro.locals.locale })}</p>
              <p class="mt-1 text-sm text-gray-400">
                {m.home_stars_card_subtext({}, { locale: Astro.locals.locale })}
                {' '}
                <a href="https://www.npmjs.com/package/@capgo/capacitor-updater" target="_blank" rel="noopener noreferrer" class="text-gray-200 underline hover:text-white">
                  {m.home_stars_card_npm_link_label({}, { locale: Astro.locals.locale })}
                </a>
              </p>
            </div>
          </div>
        </div>

        <!-- Detailed Metrics Grid -->
        <div class="mt-20 grid grid-cols-1 gap-6 lg:grid-cols-2">
          <!-- Update Metrics Card -->
          <div class="group relative">
            <div class="relative overflow-hidden rounded-2xl bg-gray-800/80 p-8 ring-1 ring-white/10 backdrop-blur-sm transition-all duration-300 hover:ring-white/20">
              <div class="mb-6 flex items-center">
                <div class="mr-4 flex h-10 w-10 items-center justify-center rounded-xl bg-red-500/20 ring-1 ring-red-500/30">
                  <svg class="h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-white">{m.update_metrics({}, { locale: Astro.locals.locale })}</h3>
              </div>
              <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                <div class="text-center">
                  <p class="mb-2 text-5xl font-bold text-white">95%</p>
                  <p class="text-sm leading-relaxed text-gray-300">{m.active_users_up_to_date({}, { locale: Astro.locals.locale })}</p>
                </div>
                <div class="text-center">
                  <p class="mb-2 text-5xl font-bold text-white">82%</p>
                  <p class="text-sm leading-relaxed text-gray-300">{m.worldwide_success_rate({}, { locale: Astro.locals.locale })}</p>
                </div>
                <div class="text-center">
                  <p class="mb-2 text-5xl font-bold text-white">{'<3%'}</p>
                  <p class="text-sm leading-relaxed text-gray-300">{m.home_customer_churn_caption({}, { locale: Astro.locals.locale })}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Performance Metrics Card -->
          <div class="group relative">
            <div class="relative overflow-hidden rounded-2xl bg-gray-800/80 p-8 ring-1 ring-white/10 backdrop-blur-sm transition-all duration-300 hover:ring-white/20">
              <div class="mb-6 flex items-center">
                <div class="mr-4 flex h-10 w-10 items-center justify-center rounded-xl bg-green-500/20 ring-1 ring-green-500/30">
                  <svg class="h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-white">{m.performance_metrics({}, { locale: Astro.locals.locale })}</h3>
              </div>
              <div class="grid grid-cols-2 gap-6">
                <div class="text-center">
                  <p class="mb-2 text-5xl font-bold text-white">
                    <a href="https://status.capgo.app" target="_blank" rel="noopener noreferrer" class="hover:underline"> 122ms </a>
                  </p>
                  <p class="text-sm leading-relaxed text-gray-300">{m.download_time_globally({}, { locale: Astro.locals.locale })}</p>
                </div>
                <div class="text-center">
                  <p class="mb-2 text-5xl font-bold text-[#00AA5E]">
                    <a href="https://status.capgo.app" target="_blank" rel="noopener noreferrer" class="hover:underline"> 44ms </a>
                  </p>
                  <p class="text-sm leading-relaxed text-gray-300">{m.home_avg_latency({}, { locale: Astro.locals.locale })}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="bg-gray-50 py-12 sm:py-16 lg:py-20">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 mb-12 sm:mb-16 lg:mb-20">
        <div class="relative bg-[#e8e4dc] rounded-lg overflow-hidden" style="
          filter: drop-shadow(0 25px 50px -12px rgba(0, 0, 0, 0.25));
        ">
          <!-- Folded corner effect -->
          <div class="absolute bottom-0 right-0 w-16 h-16 sm:w-20 sm:h-20 z-10 bg-gray-50" style="
            clip-path: polygon(100% 0, 0% 100%, 100% 100%);
          "></div>
          <div class="absolute bottom-0 right-0 w-16 h-16 sm:w-20 sm:h-20" style="
