      <div class="absolute bottom-10 right-10 w-40 h-40 bg-purple-500/10 rounded-full blur-2xl animate-pulse" style="animation-delay: 1.5s;"></div>
      <div class="absolute top-1/3 right-1/5 w-24 h-24 bg-pink-500/10 rounded-full blur-xl animate-pulse" style="animation-delay: 3s;"></div>
      <div class="absolute bottom-1/3 left-1/4 w-20 h-20 bg-cyan-500/10 rounded-full blur-xl animate-pulse" style="animation-delay: 4.5s;"></div>
      
      <!-- Gradient Orbs -->
      <div class="absolute top-20 right-1/4 w-96 h-96 bg-blue-600/20 rounded-full blur-3xl opacity-30"></div>
      <div class="absolute bottom-20 left-1/4 w-80 h-80 bg-pink-600/20 rounded-full blur-3xl opacity-30"></div>

      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
