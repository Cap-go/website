            <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Real-time Stats
          </div>
          
          <h2 class="text-4xl leading-tight font-bold text-white sm:text-5xl lg:text-7xl mb-4">
            <span class="bg-linear-to-r from-[#44BCFF] via-[#FF44EC] to-[#FF675E] bg-clip-text text-transparent">
              {m.apps_with_20m_users({}, { locale: Astro.locals.locale })}
            </span>
          </h2>
          <h2 class="text-5xl leading-tight font-bold text-white sm:text-6xl lg:text-8xl">
            {m.use_capgo({}, { locale: Astro.locals.locale })}
          </h2>
          
          <p class="mt-6 text-lg leading-relaxed text-gray-300 max-w-3xl mx-auto">
            {m.our_numbers_are_shared_transparently_since_december_2021({}, { locale: Astro.locals.locale })}
          </p>
          <p class="mt-4 text-center text-sm text-gray-500 flex items-center justify-center">
            <svg class="mr-2 h-4 w-4 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {m.last_update({}, { locale: Astro.locals.locale })}: {dayjs().format('MMMM DD, YYYY')}
          </p>
        </div>

        <!-- Main Stats Grid -->
        <div class="mt-16 grid grid-cols-1 gap-6 sm:grid-cols-3 lg:gap-8">
          <!-- Updates Delivered -->
          <div class="group relative">
            <div class="absolute inset-0 bg-linear-to-br from-blue-500/20 via-purple-500/20 to-pink-500/20 rounded-3xl blur-xl opacity-75 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="relative overflow-hidden rounded-3xl bg-gray-800/80 backdrop-blur-sm ring-1 ring-white/10 p-8 transition-all duration-300 hover:ring-white/20 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 rounded-2xl bg-blue-500/20 ring-1 ring-blue-500/30 mb-6">
                <svg class="w-6 h-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                </svg>
              </div>
              <h3 class="text-6xl font-bold mb-4">
                <span class="bg-linear-to-r from-[#44BCFF] to-[#FF44EC] bg-clip-text text-transparent">{stats.updates}</span>
              </h3>
              <p class="text-xl font-semibold text-white mb-2">{m.updates_delivered({}, { locale: Astro.locals.locale })}</p>
              <p class="text-sm text-gray-400">{m.all_around_the_globe({}, { locale: Astro.locals.locale })}</p>
            </div>
          </div>

          <!-- Apps in Production -->
          <div class="group relative">
            <div class="absolute inset-0 bg-linear-to-br from-green-500/20 via-blue-500/20 to-purple-500/20 rounded-3xl blur-xl opacity-75 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="relative overflow-hidden rounded-3xl bg-gray-800/80 backdrop-blur-sm ring-1 ring-white/10 p-8 transition-all duration-300 hover:ring-white/20 hover:bg-gray-800/90">
              <div class="flex items-center justify-center w-12 h-12 rounded-2xl bg-green-500/20 ring-1 ring-green-500/30 mb-6">
                <svg class="w-6 h-6 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-6xl font-bold mb-4">
                <span class="bg-linear-to-r from-[#00AA5E] to-[#44BCFF] bg-clip-text text-transparent">{stats.apps}</span>
              </h3>
              <p class="text-xl font-semibold text-white mb-2">{m.apps({}, { locale: Astro.locals.locale })}</p>
              <p class="text-sm text-gray-400">{m.using_us_in_production({}, { locale: Astro.locals.locale })}</p>
