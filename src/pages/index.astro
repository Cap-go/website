---
import Layout from '@/layouts/Layout.astro'
import { shortNumber } from '@/services/misc'
import Orgs from '@/components/Orgs.astro'
import Testimonials from '@/components/Testimonials.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import dayjs from 'dayjs'
import * as m from '@/paraglide/messages'
import CompaniesLogo from '@/components/companies-logo.astro'

const config = Astro.locals.runtimeConfig

const stats = {
  stars: shortNumber(499),
  apps: shortNumber(1400),
  updates: shortNumber(947593631),
}

const tmp = await fetch(`${config.public.baseApiUrl}/private/website_stats`)
if (tmp.ok) {
  const res = await tmp.json()
  if (res) {
    if (res.apps) stats.apps = shortNumber(res.apps)
    if (res.updates) stats.updates = shortNumber(res.updates)
    if (res.stars) stats.stars = shortNumber(res.stars)
  }
}
---

<Layout>
  <div>
    <div class="relative">
      <!-- Animated teleport lines -->
      <div class="pointer-events-none absolute inset-0 overflow-hidden">
        {
          Array.from({ length: 20 }).map((_, i) => (
            <div
              class="teleport-line-animation absolute w-full"
              style={{
                top: `${i * 5 - 2}%`,
                animationDelay: `${Math.random() * 3}s`,
                height: `${Math.random() * 1 + 1}px`,
                opacity: Math.random() * 0.5 + 0.3,
              }}
            />
          ))
        }
      </div>

      <!-- Glowing portal effect -->
      <div class="portal-glow-animation pointer-events-none absolute top-1/2 right-0 h-3/5 w-1/5 -translate-y-1/2"></div>

      <!-- Vertical data streams -->
      <div class="pointer-events-none absolute inset-0 overflow-hidden">
        {
          Array.from({ length: 10 }).map((_, i) => (
            <div
              class="data-stream-animation absolute h-full w-px"
              style={{
                left: `${i * 10}%`,
                animationDuration: `${Math.random() * 4 + 6}s`,
                animationDelay: `${Math.random() * 2}s`,
                opacity: Math.random() * 0.3 + 0.1,
              }}
            />
          ))
        }
      </div>
      <section class="relative py-12 sm:py-16 lg:pt-20 xl:pb-0">
        <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="relative z-10 mx-auto max-w-3xl text-center">
            <p class="font-pj inline-flex rounded-full border border-gray-200 bg-gray-900 px-4 py-2 text-base">{m.top_header_text({}, { locale: Astro.locals.locale })}</p>
            <h1 class="font-pj mt-5 text-3xl leading-tight font-bold sm:text-4xl sm:leading-tight lg:leading-tight xl:text-5xl">
              {m.instant_updates_for_capacitor({}, { locale: Astro.locals.locale })}
            </h1>
            <h2 class="font-inter mx-auto mt-6 max-w-md text-base leading-7 text-gray-400">
              {m.ship_updates_fixes_changes_and_features({}, { locale: Astro.locals.locale })}
              <br /><span class="font-bold">{m.within_minutes({}, { locale: Astro.locals.locale })}</span><br />
            </h2>
            <div class="group relative mt-10 inline-flex">
              <div
                class="transitiona-all animate-tilt absolute -inset-px rounded-xl bg-linear-to-r from-[#44BCFF] via-[#FF44EC] to-[#FF675E] opacity-70 blur-lg duration-1000 group-hover:-inset-1 group-hover:opacity-100 group-hover:duration-200"
              >
              </div>
              <a
                href={getRelativeLocaleUrl(Astro.locals.locale, 'register')}
                title={m.get_quote_now({}, { locale: Astro.locals.locale })}
                class="font-pj relative z-10 inline-flex items-center justify-center rounded-xl bg-gray-900 px-8 py-4 text-lg font-bold text-white transition-all duration-200 focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 focus:outline-none"
                role="button"
