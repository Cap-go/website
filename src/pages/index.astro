      <!-- Gradient Orbs -->
      <div class="absolute top-20 right-1/4 w-96 h-96 bg-linear-to-r from-blue-600/20 to-purple-600/20 rounded-full blur-3xl opacity-30"></div>
      <div class="absolute bottom-20 left-1/4 w-80 h-80 bg-linear-to-r from-pink-600/20 to-blue-600/20 rounded-full blur-3xl opacity-30"></div>

      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
