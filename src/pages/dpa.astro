---
import Layout from '@/layouts/Layout.astro'
import * as m from '@/paraglide/messages'
import { defaultLocale } from '@/services/locale'

const title = [Astro.locals.runtimeConfig.public.brand, m.data_processing_agreement({}, { locale: Astro.locals.locale })].join(' | ')
const description = m.read_our_data_processing_agreement({}, { locale: Astro.locals.locale })

const content = { title, description }

const config = Astro.locals.runtimeConfig
const domain = config.public.baseUrl
---

<Layout content={content}>
  <div class="prose-sm prose prose-invert m-auto py-8">
    {
      Astro.locals.locale !== defaultLocale && (
        <span class="text-xs">
          Note: This is an automatic translated page from it's English source. Only the English version should be used for legal actions, associated with only link to English
          source.
        </span>
      )
    }
    <h1>{m.dpa_title({}, { locale: Astro.locals.locale })}</h1>
    <p>{m.dpa_last_updated({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.dpa_definitions_title({}, { locale: Astro.locals.locale })}</h2>
    <ul>
      <li>{m.dpa_definitions_1({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_definitions_2({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_definitions_3({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_definitions_4({}, { locale: Astro.locals.locale })}</li>
    </ul>
    <h2>{m.dpa_privacy_security_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.dpa_privacy_security_1({}, { locale: Astro.locals.locale })}</p>
    <p>{m.dpa_privacy_security_2({}, { locale: Astro.locals.locale })}</p>
    <p>{m.dpa_privacy_security_3({}, { locale: Astro.locals.locale })}</p>
    <p>{m.dpa_privacy_security_4({}, { locale: Astro.locals.locale })}</p>
    <p>{m.dpa_privacy_security_5({}, { locale: Astro.locals.locale })}</p>
    <p>{m.dpa_privacy_security_6({}, { locale: Astro.locals.locale })}</p>
    <p>{m.dpa_privacy_security_7({}, { locale: Astro.locals.locale })}</p>
    <p>
      {m.dpa_privacy_security_8({}, { locale: Astro.locals.locale })}
      <a href="https://www.apple.com/legal/privacy/en-ww/" rel="external nofollow noopener" target="_blank">{m.data_policy_title({}, { locale: Astro.locals.locale })}</a>.
    </p>
    <h2>{m.dpa_security_measures_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.dpa_security_measures_1({}, { locale: Astro.locals.locale })}</p>
    <p>{m.dpa_security_measures_2({}, { locale: Astro.locals.locale })}</p>
    <p>{m.dpa_security_measures_3({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.dpa_processor_obligations_title({}, { locale: Astro.locals.locale })}</h2>
    <ul>
      <li>{m.dpa_processor_obligations_1({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_processor_obligations_2({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_processor_obligations_3({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_processor_obligations_4({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_processor_obligations_5({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_processor_obligations_6({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_processor_obligations_7({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_processor_obligations_8({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_processor_obligations_9({}, { locale: Astro.locals.locale })}</li>
    </ul>
    <h2>{m.dpa_customer_undertakings_title({}, { locale: Astro.locals.locale })}</h2>
    <ul>
      <li>{m.dpa_customer_undertakings_1({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_customer_undertakings_2({}, { locale: Astro.locals.locale })}</li>
      <li>{m.dpa_customer_undertakings_3({}, { locale: Astro.locals.locale })}</li>
      <ol>
        <li>{m.dpa_customer_undertakings_4({}, { locale: Astro.locals.locale })}</li>
        <li>{m.dpa_customer_undertakings_5({}, { locale: Astro.locals.locale })}</li>
        <li>{m.dpa_customer_undertakings_6({}, { locale: Astro.locals.locale })}</li>
        <li>{m.dpa_customer_undertakings_7({}, { locale: Astro.locals.locale })}</li>
      </ol>
    </ul>
    <h2>{m.dpa_liability_indemnity_title({}, { locale: Astro.locals.locale })}</h2>
    <ul>
      <li>{m.dpa_liability_indemnity_1({}, { locale: Astro.locals.locale })}</li>
    </ul>
    <h2>{m.dpa_signing_required_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.dpa_signing_required_1({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.dpa_sharing_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.dpa_sharing_1({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.dpa_notification_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.dpa_notification_1({}, { locale: Astro.locals.locale })}</p>
    <h2>{m.dpa_contact_title({}, { locale: Astro.locals.locale })}</h2>
    <p>{m.dpa_contact_1({}, { locale: Astro.locals.locale })}</p>
    <ul>
      <li>
        {m.dpa_contact_2({}, { locale: Astro.locals.locale })}
        <a href="https://support.capgo.app" rel="external nofollow noopener" target="_blank">{domain}/#support</a>
      </li>
    </ul>
  </div>
</Layout>
