---
import VueDpa from '@/vue-pages/dpa.vue'
import Layout from '@/layouts/Layout.astro'

const title = [Astro.locals.runtimeConfig.public.brand, Astro.locals.translations['data_processing_agreement'][Astro.locals.locale]].join(' | ')
const description = Astro.locals.translations['read_our_data_processing_agreement'][Astro.locals.locale]

const content = { title, description }
---

<Layout content={content}><VueDpa locale={Astro.locals.locale} client:load /></Layout>
