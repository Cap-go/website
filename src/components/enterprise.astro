---
import * as m from '@/paraglide/messages'
---

<section class="overflow-hidden relative bg-indigo-900 rounded-3xl border shadow-2xl border-slate-700/50">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-60">
    <div
      class="absolute inset-0"
      style='background-image: url(&apos;data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.1"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E&apos;)'
    >
    </div>
  </div>

  <!-- Gradient Overlays -->
  <div class="absolute top-0 right-0 w-96 h-96 rounded-full bg-blue-500/20 blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 rounded-full bg-indigo-500/20 blur-3xl"></div>

  <div class="relative p-8 mx-auto max-w-7xl lg:p-16">
    <div class="grid gap-16 items-start lg:grid-cols-2">
      <!-- Left Column -->
      <div class="space-y-8">
        <!-- Badge -->
        <div class="inline-flex gap-2 items-center py-2 px-4 rounded-full border border-blue-400/30 bg-indigo-500/20 backdrop-blur-sm">
          <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-gray-200">{m.enterprise_ready()}</span>
        </div>

        <div>
          <h2 class="mb-6 text-5xl font-bold leading-tight lg:text-6xl">
            <span class="text-transparent bg-clip-text bg-indigo-200">
              {m.enterprise_title()}
            </span>
          </h2>
          <p class="mb-8 text-xl leading-relaxed text-slate-300">
            {m.enterprise_description()}
          </p>
        </div>

        <!-- CTA Section -->
        <div class="space-y-6">
          <button
            class="flex relative gap-3 items-center py-5 px-10 text-lg font-bold text-white bg-indigo-600 rounded-2xl transition-colors duration-300 hover:bg-indigo-700 hover:shadow-xl group hover:border-indigo-500/50 hover:shadow-indigo-500/10"
          >
            <span>{m.get_enterprise_quote()}</span>
            <svg class="w-6 h-6 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </button>

          <div class="flex gap-4 items-center text-slate-400">
            <div class="flex gap-2 items-center">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"
                ></path>
              </svg>
              <span class="text-sm">{m.custom_pricing()}</span>
            </div>
            <div class="w-1 h-1 rounded-full bg-slate-500"></div>
            <div class="flex gap-2 items-center">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"
                ></path>
              </svg>
              <span class="text-sm">{m.no_commitment_required()}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Features -->
      <div class="space-y-8">
        <!-- Security & Compliance -->
        <div class="p-6 rounded-2xl border border-slate-700/50 bg-slate-800/50 backdrop-blur-sm">
          <h3 class="flex gap-3 items-center mb-6 text-xl font-bold text-white">
            <div class="flex justify-center items-center w-10 h-10 bg-blue-600 rounded-xl">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
            </div>
            {m.security_and_compliance()}
          </h3>
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.single_sign_on_sso()}</span>
            </div>
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.advanced_access_levels()}</span>
            </div>
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.extended_security()}</span>
            </div>
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.enterprise_security_automations()}</span>
            </div>
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.soc2_compliance_short()}</span>
            </div>
          </div>
          <div class="p-5 mt-6 rounded-xl border border-gray-600/40 bg-slate-900/40">
            <h4 class="text-sm font-semibold tracking-wider text-gray-200 uppercase">{m.enterprise_security_audit_title()}</h4>
            <p class="mt-2 text-sm leading-relaxed text-slate-300">{m.enterprise_security_audit_desc()}</p>
          </div>
        </div>

        <!-- Integration & API -->
        <div class="p-6 rounded-2xl border border-slate-700/50 bg-slate-800/50 backdrop-blur-sm">
          <h3 class="flex gap-3 items-center mb-6 text-xl font-bold text-white">
            <div class="flex justify-center items-center w-10 h-10 bg-purple-600 rounded-xl">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            {m.integration_and_api()}
          </h3>
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.custom_webhooks()}</span>
            </div>
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.full_api_access()}</span>
            </div>
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.ci_cd_integration()}</span>
            </div>
            <div class="flex gap-3 items-center text-slate-300">
              <div class="flex justify-center items-center w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.custom_features()}</span>
            </div>
          </div>
        </div>

        <!-- Infrastructure & Support -->
        <div class="p-6 rounded-2xl border border-slate-700/50 bg-slate-800/50 backdrop-blur-sm">
          <h3 class="flex gap-3 items-center mb-6 text-xl font-bold text-white">
            <div class="flex justify-center items-center w-10 h-10 bg-orange-600 rounded-xl">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                ></path>
              </svg>
            </div>
            {m.infrastructure_and_support()}
          </h3>
          <div class="space-y-4">
            <div class="flex gap-3 items-start text-slate-300">
              <div class="flex justify-center items-center mt-0.5 w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.deploy_on_cloud_providers()}</span>
            </div>
            <div class="flex gap-3 items-start text-slate-300">
              <div class="flex justify-center items-center mt-0.5 w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.per_country_hosting_gdpr()}</span>
            </div>
            <div class="flex gap-3 items-start text-slate-300">
              <div class="flex justify-center items-center mt-0.5 w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.self_hosted_storage_options()}</span>
            </div>
            <div class="flex gap-3 items-start text-slate-300">
              <div class="flex justify-center items-center mt-0.5 w-6 h-6 bg-green-500 rounded-lg shrink-0">
                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <span class="font-medium">{m.priority_support_dedicated_sla()}</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Stats -->
    <div class="pt-8 mt-16 border-t border-slate-700/50">
      <div class="grid grid-cols-1 gap-8 text-center md:grid-cols-3">
        <div class="space-y-2">
          <div class="text-3xl font-bold text-white">
            <a href="https://status.capgo.app" target="_blank" rel="noopener noreferrer" class="hover:underline"> 99.9% </a>
          </div>
          <div class="text-slate-400">{m.uptime_sla()}</div>
        </div>
        <div class="space-y-2">
          <div class="text-3xl font-bold text-white">24/7</div>
          <div class="text-slate-400">{m.priority_support_24_7()}</div>
        </div>
        <div class="space-y-2">
          <div class="text-3xl font-bold text-white">SOC 2</div>
          <div class="text-slate-400">{m.type_ii_certified()}</div>
        </div>
      </div>
    </div>
  </div>
</section>
