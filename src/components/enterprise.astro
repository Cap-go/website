---
import * as m from '@/paraglide/messages'
---

<section class="relative bg-linear-to-br from-slate-900 via-blue-900 to-indigo-900 rounded-3xl shadow-2xl border border-slate-700/50 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-60">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;0.1&quot;%3E%3Ccircle cx=&quot;30&quot; cy=&quot;30&quot; r=&quot;2&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')"></div>
    </div>
    
    <!-- Gradient Overlays -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-linear-to-bl from-blue-500/20 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-linear-to-tr from-indigo-500/20 to-transparent rounded-full blur-3xl"></div>
    
    <div class="relative max-w-7xl mx-auto p-8 lg:p-16">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
            <!-- Left Column -->
            <div class="space-y-8">
                <!-- Badge -->
                <div class="inline-flex items-center gap-2 bg-linear-to-r from-blue-500/20 to-indigo-500/20 backdrop-blur-sm border border-blue-400/30 rounded-full px-4 py-2">
                    <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
                    <span class="text-blue-200 text-sm font-medium">{m.enterprise_ready()}</span>
                </div>

                <div>
                    <h2 class="text-5xl lg:text-6xl font-bold mb-6 leading-tight">
                        <span class="bg-linear-to-r from-white via-blue-100 to-indigo-200 bg-clip-text text-transparent">
                            {m.enterprise_title()}
                        </span>
                    </h2>
                    <p class="text-xl text-slate-300 mb-8 leading-relaxed">
                        {m.enterprise_description()}
                    </p>
                </div>

                <!-- CTA Section -->
                <div class="space-y-6">
                    <button class="group relative bg-linear-to-r from-blue-600 to-indigo-600 hover:from-blue-500 hover:to-indigo-500 text-white px-10 py-5 rounded-2xl font-bold text-lg transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/25 flex items-center gap-3">
                        <span>{m.get_enterprise_quote()}</span>
                        <svg class="w-6 h-6 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </button>
                    
                    <div class="flex items-center gap-4 text-slate-400">
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-sm">{m.custom_pricing()}</span>
                        </div>
                        <div class="w-1 h-1 bg-slate-500 rounded-full"></div>
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-sm">{m.no_commitment_required()}</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Features -->
            <div class="space-y-8">
                <!-- Security & Compliance -->
                <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-6 hover:border-blue-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-blue-500/10">
                    <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
                        <div class="w-10 h-10 bg-linear-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                        </div>
                        {m.security_and_compliance()}
                    </h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div class="flex items-center gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.single_sign_on_sso()}</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.advanced_access_levels()}</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.extended_security()}</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.soc2_compliance_short()}</span>
                        </div>
                    </div>
                </div>

                <!-- Integration & API -->
                <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-6 hover:border-purple-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-purple-500/10">
                    <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
                        <div class="w-10 h-10 bg-linear-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        {m.integration_and_api()}
                    </h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div class="flex items-center gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.custom_webhooks()}</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.full_api_access()}</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.ci_cd_integration()}</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.custom_features()}</span>
                        </div>
                    </div>
                </div>

                <!-- Infrastructure & Support -->
                <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-6 hover:border-orange-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-orange-500/10">
                    <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
                        <div class="w-10 h-10 bg-linear-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                            </svg>
                        </div>
                        {m.infrastructure_and_support()}
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-start gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.deploy_on_cloud_providers()}</span>
                        </div>
                        <div class="flex items-start gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.per_country_hosting_gdpr()}</span>
                        </div>
                        <div class="flex items-start gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.self_hosted_storage_options()}</span>
                        </div>
                        <div class="flex items-start gap-3 text-slate-300 hover:text-white transition-colors duration-200">
                            <div class="w-6 h-6 bg-linear-to-br from-green-400 to-green-500 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <span class="font-medium">{m.priority_support_dedicated_sla()}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Stats -->
        <div class="mt-16 pt-8 border-t border-slate-700/50">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
                <div class="space-y-2">
                    <div class="text-3xl font-bold text-white">99.9%</div>
                    <div class="text-slate-400">{m.uptime_sla()}</div>
                </div>
                <div class="space-y-2">
                    <div class="text-3xl font-bold text-white">24/7</div>
                    <div class="text-slate-400">{m.priority_support_24_7()}</div>
                </div>
                <div class="space-y-2">
                    <div class="text-3xl font-bold text-white">SOC 2</div>
                    <div class="text-slate-400">{m.type_ii_certified()}</div>
                </div>
            </div>
        </div>
    </div>
</section>
