---
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
---    
<section class="bg-[#1a1a1a] py-12 sm:py-16 lg:py-20">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 mb-12 sm:mb-16 lg:mb-20">
    <div class="relative bg-[#e8e4dc] rounded-lg overflow-hidden" style="
      filter: drop-shadow(0 25px 50px -12px rgba(0, 0, 0, 0.25));
    ">
      <!-- Folded corner effect -->
      <div class="absolute bottom-0 right-0 w-16 h-16 sm:w-20 sm:h-20 z-10 bg-[#1a1a1a]" style="
        clip-path: polygon(100% 0, 0% 100%, 100% 100%);
      "></div>
      <div class="absolute bottom-0 right-0 w-16 h-16 sm:w-20 sm:h-20" style="
        background: linear-gradient(225deg, #e8e4dc 0%, #e8e4dc 50%, transparent 50%, transparent 100%);
        box-shadow: -2px -2px 5px rgba(0,0,0,0.15);
      "></div>

      <div class="px-8 sm:px-12 lg:px-16 py-12 sm:py-16 relative">
        <!-- Avatar -->
        <div class="mb-8">
          <img
            src="/martin_manifesto.webp"
            alt="Martin Donadieu"
            class="w-20 h-20 sm:w-24 sm:h-24 rounded-full object-cover ring-4 ring-white shadow-lg"
          />
        </div>

        <!-- Title -->
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-8" style="font-family: 'Courier New', monospace;">
          {m.our_manifesto({}, { locale: Astro.locals.locale })}
        </h2>

        <!-- Content -->
        <div class="space-y-6 text-base sm:text-lg leading-relaxed text-gray-800">
          <p class="font-mono">
            {m.manifesto_home_for_developers({}, { locale: Astro.locals.locale })}
          </p>
          <p class="font-mono">
            {m.manifesto_full_ecosystem({}, { locale: Astro.locals.locale })}
          </p>
          <p class="font-mono text-[#4a90e2]">
            {m.manifesto_behind_every_movie({}, { locale: Astro.locals.locale })}
          </p>
        </div>

        <!-- Signature -->
        <div class="mt-12 sm:mt-16">
          <p class="text-2xl sm:text-3xl font-light text-gray-900" style="font-family: 'Brush Script MT', cursive;">
            Martin Donadieu
          </p>
          <p class="mt-2 text-sm sm:text-base text-gray-600">
            Founder, Capgo
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
