---
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
---    
<section class="py-12 sm:py-16 lg:py-20 bg-[#1a1a1a]">
  <div class="px-4 mx-auto mb-12 max-w-4xl sm:px-6 sm:mb-16 lg:px-8 lg:mb-20">
    <div class="overflow-hidden relative rounded-lg bg-[#e8e4dc]" style="
      filter: drop-shadow(0 25px 50px -12px rgba(0, 0, 0, 0.25));
    ">
      <!-- Folded corner effect -->
      <div class="absolute right-0 bottom-0 z-10 w-16 h-16 sm:w-20 sm:h-20 bg-[#1a1a1a]" style="
        clip-path: polygon(100% 0, 0% 100%, 100% 100%);
      "></div>
      <div class="absolute right-0 bottom-0 w-16 h-16 sm:w-20 sm:h-20" style="
        background: linear-gradient(225deg, #e8e4dc 0%, #e8e4dc 50%, transparent 50%, transparent 100%);
        box-shadow: -2px -2px 5px rgba(0,0,0,0.15);
      "></div>

      <div class="relative py-12 px-8 sm:py-16 sm:px-12 lg:px-16">
        <!-- Avatar -->
        <div class="mb-8">
          <img
            src="/martin_manifesto.webp"
            alt="Martin Donadieu"
            class="object-cover w-20 h-20 rounded-full ring-4 ring-white shadow-lg sm:w-24 sm:h-24"
          />
        </div>

        <!-- Title -->
        <h2 class="mb-8 text-2xl font-bold text-gray-900 sm:text-3xl" style="font-family: 'Courier New', monospace;">
          {m.our_manifesto({}, { locale: Astro.locals.locale })}
        </h2>

        <!-- Content -->
        <div class="space-y-6 text-base leading-relaxed text-gray-800 sm:text-lg">
          <p class="font-mono">
            {m.manifesto_home_for_developers({}, { locale: Astro.locals.locale })}
          </p>
          <p class="font-mono">
            {m.manifesto_full_ecosystem({}, { locale: Astro.locals.locale })}
          </p>
          <p class="font-mono text-[#4a90e2]">
            {m.manifesto_behind_every_movie({}, { locale: Astro.locals.locale })}
          </p>
        </div>

        <!-- Signature -->
        <div class="mt-12 sm:mt-16">
          <p class="text-2xl font-light text-gray-900 sm:text-3xl" style="font-family: 'Brush Script MT', cursive;">
            Martin Donadieu
          </p>
          <p class="mt-2 text-sm text-gray-600 sm:text-base">
            Founder, Capgo
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
