---
const { class: className, ...props } = Astro.props
---
<svg viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg" class:list={["w-full h-auto drop-shadow-2xl", className]} {...props}>
  <!-- Window Frame -->
  <rect x="50" y="20" width="500" height="360" rx="12" class="fill-gray-900/90 stroke-gray-700" stroke-width="2"/>
  
  <!-- Title Bar -->
  <path d="M50 32C50 25.3726 55.3726 20 62 20H538C544.627 20 550 25.3726 550 32V50H50V32Z" class="fill-gray-800"/>
  <circle cx="70" cy="35" r="4" class="fill-red-500/50"/>
  <circle cx="85" cy="35" r="4" class="fill-yellow-500/50"/>
  <circle cx="100" cy="35" r="4" class="fill-green-500/50"/>
  
  <!-- Sidebar -->
  <rect x="50" y="50" width="120" height="330" class="fill-gray-800/50"/>
  <rect x="70" y="80" width="80" height="8" rx="2" class="text-current fill-current opacity-20"/>
  <rect x="70" y="100" width="60" height="8" rx="2" class="text-current fill-current opacity-10"/>
  <rect x="70" y="120" width="70" height="8" rx="2" class="text-current fill-current opacity-10"/>
  
  <!-- Main Area -->
  <rect x="190" y="80" width="340" height="40" rx="4" class="fill-gray-800"/>
  <rect x="210" y="95" width="100" height="10" rx="2" class="text-current fill-current opacity-30"/>
  
  <!-- App Card 1 -->
  <rect x="190" y="140" width="160" height="120" rx="6" class="fill-gray-800 stroke-gray-700" stroke-width="1"/>
  <circle cx="215" cy="165" r="12" class="text-current fill-current opacity-20"/>
  <rect x="240" y="158" width="80" height="8" rx="2" class="text-current fill-current opacity-40"/>
  <rect x="240" y="172" width="50" height="6" rx="2" class="fill-gray-600"/>
  <!-- Chart Line -->
  <path d="M210 220 L240 210 L270 230 L300 200 L330 210" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-current opacity-60"/>
  
  <!-- App Card 2 -->
  <rect x="370" y="140" width="160" height="120" rx="6" class="fill-gray-800 stroke-gray-700" stroke-width="1"/>
  <circle cx="395" cy="165" r="12" class="text-current fill-current opacity-20"/>
  <rect x="420" y="158" width="80" height="8" rx="2" class="text-current fill-current opacity-40"/>
  <rect x="420" y="172" width="50" height="6" rx="2" class="fill-gray-600"/>
  <rect x="390" y="210" width="120" height="6" rx="2" class="fill-gray-700"/>
  <rect x="390" y="225" width="80" height="6" rx="2" class="fill-gray-700"/>
  
  <!-- Floating Element (Notification/Update) -->
  <g transform="translate(420, 240)">
    <rect x="0" y="0" width="160" height="60" rx="8" class="fill-gray-700 shadow-xl stroke-gray-600" stroke-width="1"/>
    <circle cx="25" cy="30" r="10" class="text-green-400 fill-current opacity-20"/>
    <path d="M20 30L23 33L30 26" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400"/>
    <rect x="45" y="20" width="80" height="8" rx="2" class="fill-gray-300"/>
    <rect x="45" y="34" width="60" height="6" rx="2" class="fill-gray-500"/>
  </g>
</svg>

