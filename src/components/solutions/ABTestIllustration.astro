---
const { class: className, ...props } = Astro.props
---
<svg viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg" class:list={["w-full h-auto drop-shadow-2xl", className]} {...props}>
  <!-- Container -->
  <rect x="50" y="50" width="500" height="300" rx="12" class="fill-gray-900 stroke-gray-700" stroke-width="2"/>
  
  <!-- Split Line -->
  <path d="M300 50 V350" stroke="currentColor" stroke-width="2" stroke-dasharray="4 4" class="text-gray-700"/>
  
  <!-- Variant A (Left) -->
  <g transform="translate(100, 80)">
    <text x="50" y="0" text-anchor="middle" class="fill-gray-400 font-bold text-sm">Original</text>
    <rect x="0" y="20" width="100" height="160" rx="8" class="fill-gray-800 stroke-gray-600" stroke-width="1"/>
    <!-- UI Elements -->
    <rect x="10" y="30" width="80" height="30" rx="4" class="fill-gray-700"/>
    <rect x="10" y="70" width="60" height="6" rx="2" class="fill-gray-600"/>
    <rect x="10" y="85" width="80" height="6" rx="2" class="fill-gray-600"/>
    <rect x="10" y="140" width="80" height="20" rx="4" class="fill-gray-700"/>
  </g>
  
  <!-- Variant B (Right) -->
  <g transform="translate(350, 80)">
    <text x="50" y="0" text-anchor="middle" class="fill-gray-400 font-bold text-sm">Variant B</text>
    <rect x="0" y="20" width="100" height="160" rx="8" class="fill-gray-800 stroke-gray-600" stroke-width="1"/>
    <!-- UI Elements (Changed) -->
    <rect x="10" y="30" width="80" height="60" rx="4" class="text-current fill-current opacity-20"/> <!-- Hero Image instead of small box -->
    <rect x="10" y="100" width="80" height="6" rx="2" class="fill-gray-600"/>
    <rect x="10" y="140" width="80" height="20" rx="4" class="text-current fill-current opacity-80"/> <!-- Call to action highlighted -->
    
    <!-- Winner Badge -->
    <circle cx="100" cy="20" r="12" class="fill-green-500"/>
    <path d="M96 20 l3 3 5 -5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </g>
  
  <!-- Metrics -->
  <g transform="translate(100, 280)">
    <rect x="0" y="0" width="100" height="40" rx="4" class="fill-gray-800"/>
    <text x="50" y="25" text-anchor="middle" class="fill-gray-400 text-sm">2.1% Conv</text>
  </g>
  
  <g transform="translate(350, 280)">
    <rect x="0" y="0" width="100" height="40" rx="4" class="fill-gray-800 stroke-green-500/50"/>
    <text x="50" y="25" text-anchor="middle" class="fill-green-400 text-sm font-bold">4.5% Conv</text>
  </g>
</svg>

