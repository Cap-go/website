---
const { class: className, ...props } = Astro.props
---
<svg viewBox="0 0 600 400" fill="none" xmlns="http://www.w3.org/2000/svg" class:list={["w-full h-auto drop-shadow-2xl", className]} {...props}>
  <!-- Left Box (Agency) -->
  <rect x="80" y="120" width="140" height="160" rx="12" class="fill-gray-900 stroke-gray-700" stroke-width="2"/>
  <circle cx="150" cy="180" r="24" class="text-amber-500/20 fill-current"/>
  <path d="M138 180h24M150 168v24" stroke="currentColor" stroke-width="4" stroke-linecap="round" class="text-amber-500"/>
  <rect x="110" y="230" width="80" height="8" rx="2" class="fill-gray-600"/>

  <!-- Right Box (Client) -->
  <rect x="380" y="120" width="140" height="160" rx="12" class="fill-gray-900 stroke-gray-700" stroke-width="2"/>
  <circle cx="450" cy="180" r="24" class="text-green-500/20 fill-current"/>
  <path d="M438 180l8 8 16-16" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" class="text-green-500"/>
  <rect x="410" y="230" width="80" height="8" rx="2" class="fill-gray-600"/>

  <!-- Connection Line -->
  <path d="M220 200h160" stroke="currentColor" stroke-width="2" stroke-dasharray="8 8" class="text-gray-600"/>
  <path d="M370 190l10 10-10 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-600"/>

  <!-- Flying Package -->
  <g transform="translate(280, 180)">
    <rect x="0" y="0" width="40" height="40" rx="10" class="text-current fill-current shadow-lg"/>
    <rect x="12" y="12" width="16" height="16" rx="2" class="fill-white/30"/>
  </g>
</svg>

