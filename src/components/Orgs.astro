---
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'

const features = [
  {
    title: m.manage_various_teams({}, { locale: Astro.locals.locale }),
    description: m.create_oversee_organizations_from_single_account({}, { locale: Astro.locals.locale }),
  },
  {
    title: m.control_access_levels({}, { locale: Astro.locals.locale }),
    description: m.assign_specific_rights_and_access_levels_to_each_user_within_your_organizations({}, { locale: Astro.locals.locale }),
  },
  {
    title: m.adapt_as_you_grow({}, { locale: Astro.locals.locale }),
    description: m.easily_adjust_user_roles_and_permissions_as_your_team_and_projects_evolve_maintaining_optimal_organization_structure({}, { locale: Astro.locals.locale }),
  },
]
---

<section class="relative bg-[#1a1a1a] py-20 sm:py-24 lg:py-32">
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-20 text-center">
      <!-- Badge -->
      <div class="mb-8 inline-flex items-center rounded-full border border-blue-500/30 bg-blue-500/10 px-5 py-2 text-xs font-semibold uppercase tracking-widest text-blue-400">
        HOW IT WORKS
      </div>

      <!-- Main Heading -->
      <h2 class="mb-6 text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
        Flexible Management<br />for Your Team
      </h2>

      <!-- Subtitle -->
      <p class="mx-auto max-w-3xl text-lg leading-relaxed text-gray-400">
        {m.create_manage_organizations_with_ease({}, { locale: Astro.locals.locale })}
      </p>
    </div>

    <!-- Feature Cards Grid -->
    <div class="mx-auto grid max-w-7xl grid-cols-1 gap-8 lg:grid-cols-3">
      <!-- Card 1: Manage various teams -->
      <div class="group relative flex flex-col rounded-3xl bg-[#242424] p-8 transition-all duration-300 hover:bg-[#2a2a2a]">
        <!-- Image Container with 3D perspective effect -->
        <div class="relative mb-8 h-[400px] overflow-visible p-8">
          <!-- 3D Cards Stack -->
          <div class="relative h-full w-full" style="perspective: 1000px;">
            <!-- Card 1 - R&D Team (Back Left) -->
            <div class="absolute left-1/2 top-1/2 h-56 w-72 rounded-xl border border-gray-700 bg-[#2a2a2a] p-5 shadow-2xl" style="transform: translate(-50%, -50%) translateX(-80px) translateZ(-100px) rotateY(-35deg) rotateX(5deg); transform-style: preserve-3d;">
              <div class="mb-4 flex items-center gap-2">
                <div class="flex h-6 w-6 items-center justify-center rounded-full bg-gray-700">
                  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-400">R&D Team</span>
              </div>
              <div class="mb-1">
                <div class="mb-1 text-xs text-gray-500">Account</div>
                <div class="text-xl font-semibold text-white">Natalie</div>
              </div>
              <div class="mt-4 border-t border-gray-700 pt-4">
                <div class="mb-2 text-xs text-gray-400">Permissions</div>
              </div>
              <div class="mt-3 border-t border-gray-700 pt-3">
                <div class="text-xs text-gray-400">Settings</div>
              </div>
            </div>

            <!-- Card 2 - Acme Corp -->
            <div class="absolute left-1/2 top-1/2 h-56 w-72 rounded-xl border border-gray-700 bg-[#2a2a2a] p-5 shadow-2xl" style="transform: translate(-50%, -50%) translateX(-40px) translateZ(-50px) rotateY(-20deg) rotateX(3deg); transform-style: preserve-3d;">
              <div class="mb-4 flex items-center gap-2">
                <div class="flex h-6 w-6 items-center justify-center rounded-full bg-gray-700">
                  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-400">Acme Corp</span>
              </div>
              <div class="mb-1">
                <div class="mb-1 text-xs text-gray-500">Account</div>
                <div class="text-xl font-semibold text-white">Joseph</div>
              </div>
              <div class="mt-4 border-t border-gray-700 pt-4">
                <div class="mb-2 text-xs text-gray-400">Permissions</div>
              </div>
              <div class="mt-3 border-t border-gray-700 pt-3">
                <div class="text-xs text-gray-400">Settings</div>
              </div>
            </div>

            <!-- Card 3 - Engineering (Front) -->
            <div class="absolute left-1/2 top-1/2 h-56 w-72 rounded-xl border border-gray-700 bg-[#2a2a2a] p-5 shadow-2xl" style="transform: translate(-50%, -50%) translateX(20px) translateZ(0px) rotateY(5deg) rotateX(1deg); transform-style: preserve-3d;">
              <div class="mb-4 flex items-center gap-2">
                <div class="flex h-6 w-6 items-center justify-center rounded-full bg-gray-700">
                  <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-400">Engineering</span>
              </div>
              <div class="mb-1">
                <div class="mb-1 text-xs text-gray-500">Account</div>
                <div class="text-xl font-semibold text-white">Mike Smith</div>
              </div>
              <div class="mt-4 border-t border-gray-700 pt-4">
                <div class="mb-2 text-xs text-gray-400">Permissions</div>
              </div>
              <div class="mt-3 border-t border-gray-700 pt-3">
                <div class="text-xs text-gray-400">Settings</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Text Content -->
        <h3 class="mb-4 text-2xl font-bold text-white">{features[0].title}</h3>
        <p class="text-base leading-relaxed text-gray-400">{features[0].description}</p>
      </div>

      <!-- Card 2: Control access levels -->
      <div class="group relative flex flex-col rounded-3xl p-8 transition-all duration-300" style="background: radial-gradient(ellipse at center, rgba(59, 130, 246, 0.15) 0%, rgba(36, 36, 36, 1) 70%);">
        <!-- Image Container with glow effect -->
        <div class="relative mb-8 flex h-[400px] items-center justify-center overflow-visible">
          <!-- Blue glow outside card on bottom-left -->
          <div class="pointer-events-none absolute bottom-[25%] left-[15%] w-64 h-64 z-0" style="background: radial-gradient(circle, rgba(59, 130, 246, 0.5) 0%, transparent 70%); filter: blur(30px);"></div>

          <!-- Developer Card -->
          <div class="relative w-72 rounded-xl border border-gray-700 bg-[#1f1f1f] p-6 shadow-2xl z-10">
            <div class="relative">
              <div class="mb-6 flex items-center gap-2">
                <div class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-700">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <span class="text-base text-white">Developer</span>
              </div>

              <div class="mb-6">
                <div class="mb-2 text-xs text-gray-500">Account</div>
                <div class="text-2xl font-semibold text-white">Joseph</div>
              </div>

              <div class="mb-6 flex gap-8">
                <div class="text-sm text-gray-400">Permissions</div>
                <div class="relative text-sm text-white">
                  Full access
                  <!-- Cursor Pointer -->
                  <svg class="absolute -right-6 -top-1 h-6 w-6 text-white drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M5 3l14 9-6 1-3 6-5-16z"></path>
                  </svg>
                </div>
              </div>

              <div class="border-t border-gray-700 pt-4">
                <div class="text-sm text-gray-400">Settings</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Text Content -->
        <h3 class="mb-4 text-2xl font-bold text-white">{features[1].title}</h3>
        <p class="text-base leading-relaxed text-gray-400">{features[1].description}</p>
      </div>

      <!-- Card 3: Adapt as you grow -->
      <div class="group relative flex flex-col overflow-hidden rounded-3xl bg-[#1e1f23] p-8 transition-all duration-300 hover:bg-[#24252a]">
        <div class="pointer-events-none absolute inset-0" aria-hidden="true">
          <div
            class="absolute inset-0 opacity-80"
            style="background: radial-gradient(ellipse at top, rgba(59, 130, 246, 0.25) 0%, rgba(30, 32, 40, 0.85) 65%, rgba(12, 13, 18, 0.95) 100%);"
          ></div>
        </div>
        <!-- Preview Card -->
        <div class="relative mb-8 flex h-[400px] items-center justify-end overflow-visible">
          <div class="relative w-full max-w-sm rounded-2xl border-2 border-gray-700 bg-[#1f1f1f] p-6 shadow-2xl overflow-hidden" style="margin-right: -5rem;">
            <!-- Gradient Bottom Effect -->
            <div class="pointer-events-none absolute bottom-0 left-0 right-0 h-48">
              <div class="h-full w-full" style="background: linear-gradient(to bottom, transparent 0%, rgba(30, 58, 138, 0.2) 100%);"></div>
            </div>

            <div class="relative z-10 space-y-6">
              <h3 class="text-xl font-semibold text-white">Role Permissions</h3>

              <div class="overflow-hidden rounded-2xl border border-white/5 bg-white/[0.03] backdrop-blur-sm">
                <div class="flex items-center justify-between px-5 py-4">
                  <span class="text-base text-white/90">Deploy updates</span>
                  <div class="flex h-7 w-7 items-center justify-center rounded-lg bg-blue-500 shadow-[0_0_20px_rgba(59,130,246,0.55)]">
                    <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex items-center justify-between border-t border-white/5 px-5 py-4">
                  <span class="text-base text-white/90">View logs</span>
                  <div class="flex h-7 w-7 items-center justify-center rounded-lg bg-blue-500 shadow-[0_0_20px_rgba(59,130,246,0.55)]">
                    <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex items-center justify-between border-t border-white/5 px-5 py-4">
                  <span class="text-base text-white/90">Manage channels</span>
                  <div class="flex h-7 w-7 items-center justify-center rounded-lg bg-blue-500 shadow-[0_0_20px_rgba(59,130,246,0.55)]">
                    <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Text Content -->
        <h3 class="relative z-[1] mb-4 text-2xl font-bold text-white">{features[2].title}</h3>
        <p class="relative z-[1] text-base leading-relaxed text-gray-400">{features[2].description}</p>
      </div>
    </div>

    <!-- CTA Button -->
    <div class="mt-20 text-center">
      <a
        href={getRelativeLocaleUrl(Astro.locals.locale, 'register')}
        class="inline-flex items-center justify-center rounded-xl bg-[#5B7FE8] px-12 py-4 text-lg font-semibold text-white shadow-lg shadow-blue-500/20 transition-all duration-200 hover:bg-[#4a6ed4] hover:shadow-blue-500/30 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-[#1a1a1a]"
      >
        Install Capgo
      </a>
    </div>
  </div>
</section>
