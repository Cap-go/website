---
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { Image } from 'astro:assets'
import orgsGraphic from '@/assets/orgs-graphic.svg'

const features = [
  {
    title: m.manage_various_teams({}, { locale: Astro.locals.locale }),
    description: m.create_oversee_organizations_from_single_account({}, { locale: Astro.locals.locale }),
  },
  {
    title: m.control_access_levels({}, { locale: Astro.locals.locale }),
    description: m.assign_specific_rights_and_access_levels_to_each_user_within_your_organizations({}, { locale: Astro.locals.locale }),
  },
  {
    title: m.adapt_as_you_grow({}, { locale: Astro.locals.locale }),
    description: m.easily_adjust_user_roles_and_permissions_as_your_team_and_projects_evolve_maintaining_optimal_organization_structure({}, { locale: Astro.locals.locale }),
  },
]
---

<section class="relative bg-[#1a1a1a] py-20 sm:py-24 lg:py-32">
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-20 text-center">
      <!-- Badge -->
      <div class="mb-8 inline-flex items-center rounded-full border border-blue-500/30 bg-blue-500/10 px-5 py-2 text-xs font-semibold uppercase tracking-widest text-blue-400">
        {m.orgs_badge({}, { locale: Astro.locals.locale })}
      </div>

      <!-- Main Heading -->
      <h2 class="mb-6 text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
        {m.orgs_title({}, { locale: Astro.locals.locale })}<br />{m.orgs_title_line2({}, { locale: Astro.locals.locale })}
      </h2>

      <!-- Subtitle -->
      <p class="mx-auto max-w-3xl text-lg leading-relaxed text-gray-400">
        {m.create_manage_organizations_with_ease({}, { locale: Astro.locals.locale })}
      </p>
    </div>

    <!-- Feature Cards Grid -->
    <div class="mx-auto grid max-w-7xl grid-cols-1 gap-8 lg:grid-cols-3">
      <!-- Card 1: Manage various teams -->
      <div class="group relative flex flex-col overflow-hidden rounded-3xl bg-[#10131a] p-8 transition-all duration-300 hover:bg-[#141822]">
        <div class="pointer-events-none absolute inset-0 rounded-3xl" aria-hidden="true" style="background: radial-gradient(circle at top, rgba(59, 130, 246, 0.22) 0%, rgba(16, 19, 26, 0.95) 70%);"></div>
        <div class="relative mb-8 flex h-[400px] items-center justify-center">
          <div class="pointer-events-none absolute -top-20 left-1/2 h-80 w-80 -translate-x-1/2 rounded-full bg-blue-500/25 blur-[120px]"></div>
          <Image src={orgsGraphic} alt="Organization Management" class="relative z-10 w-full max-w-[400px]" />
        </div>

        <h3 class="relative z-10 mb-4 text-2xl font-semibold text-white">{features[0].title}</h3>
        <p class="relative z-10 text-base leading-relaxed text-gray-400">{features[0].description}</p>
      </div>

      <!-- Card 2: Control access levels -->
      <div class="group relative flex flex-col overflow-hidden rounded-3xl bg-[#10131a] p-8 transition-all duration-300 hover:bg-[#141822]">
        <div class="pointer-events-none absolute inset-0 rounded-3xl" aria-hidden="true" style="background: radial-gradient(circle at 40% 10%, rgba(59, 130, 246, 0.22) 0%, rgba(16, 19, 26, 0.95) 70%);"></div>
        <div class="relative mb-8 flex h-[400px] items-center justify-center">
          <div class="pointer-events-none absolute bottom-0 left-1/2 h-80 w-80 -translate-x-1/2 rounded-full bg-blue-500/25 blur-[140px]"></div>

          <svg width="320" height="320" viewBox="0 0 320 320" fill="none" xmlns="http://www.w3.org/2000/svg" class="relative z-10 w-full max-w-[320px]">
            <!-- Glow -->
            <g filter="url(#filter0_f)">
              <circle cx="160" cy="160" r="100" fill="#3B82F6" fill-opacity="0.2"/>
            </g>
            
            <!-- Card -->
            <rect x="20" y="60" width="280" height="200" rx="20" fill="#090B11" fill-opacity="0.95" stroke="rgba(59, 130, 246, 0.3)" stroke-width="1"/>
            
            <!-- Header -->
            <circle cx="50" cy="90" r="12" fill="rgba(59, 130, 246, 0.15)"/>
            <path d="M50 86C47.7909 86 46 87.7909 46 90C46 92.2091 47.7909 94 50 94C52.2091 94 54 92.2091 54 90C54 87.7909 52.2091 86 50 86ZM50 96C47.3333 96 46 97.3333 46 98V99H54V98C54 97.3333 52.6667 96 50 96Z" fill="#BFDBFE"/>
            <text x="70" y="94" fill="#DBEAFE" font-family="sans-serif" font-size="12" font-weight="500">Developer</text>
            
            <!-- Body -->
            <text x="40" y="130" fill="rgba(255, 255, 255, 0.4)" font-family="sans-serif" font-size="10" letter-spacing="0.1em">ACCOUNT</text>
            <text x="40" y="155" fill="white" font-family="sans-serif" font-size="24" font-weight="600">Joseph</text>
            
            <!-- Divider -->
            <line x1="40" y1="180" x2="280" y2="180" stroke="white" stroke-opacity="0.1"/>
            
            <!-- Permissions Row -->
            <text x="40" y="205" fill="rgba(255, 255, 255, 0.7)" font-family="sans-serif" font-size="13">Permissions</text>
            <text x="200" y="205" fill="white" font-family="sans-serif" font-size="13" font-weight="500">Full access</text>
            
            <!-- Cursor -->
            <path d="M240 210L250 235L255 225L265 230L268 224L258 219L268 215L240 210Z" fill="#3B82F6" stroke="white" stroke-width="1.5"/>
            
            <!-- Divider -->
            <line x1="40" y1="225" x2="280" y2="225" stroke="white" stroke-opacity="0.1"/>
            
            <!-- Footer -->
            <text x="40" y="245" fill="rgba(255, 255, 255, 0.6)" font-family="sans-serif" font-size="13">Settings</text>

            <defs>
              <filter id="filter0_f" x="-40" y="-40" width="400" height="400" filterUnits="userSpaceOnUse" color-interpolation-filters="sRGB">
                <feFlood flood-opacity="0" result="BackgroundImageFix"/>
                <feBlend mode="normal" in="SourceGraphic" in2="BackgroundImageFix" result="shape"/>
                <feGaussianBlur stdDeviation="60" result="effect1_foregroundBlur"/>
              </filter>
            </defs>
          </svg>
        </div>

        <h3 class="relative z-10 mb-4 text-2xl font-semibold text-white">{features[1].title}</h3>
        <p class="relative z-10 text-base leading-relaxed text-gray-400">{features[1].description}</p>
      </div>

      <!-- Card 3: Adapt as you grow -->
      <div class="group relative flex flex-col overflow-hidden rounded-3xl bg-[#10131a] p-8 transition-all duration-300 hover:bg-[#141822]">
        <div class="pointer-events-none absolute inset-0 rounded-3xl" aria-hidden="true" style="background: radial-gradient(circle at 70% 15%, rgba(59, 130, 246, 0.24) 0%, rgba(16, 19, 26, 0.95) 70%);"></div>
        <div class="relative mb-8 flex h-[400px] items-center justify-center">
          <div class="pointer-events-none absolute inset-0 rounded-full bg-blue-500/20 blur-[140px]"></div>

          <svg width="320" height="320" viewBox="0 0 320 320" fill="none" xmlns="http://www.w3.org/2000/svg" class="relative z-10 w-full max-w-[320px]">
            <!-- Glow -->
            <g filter="url(#filter1_f)">
              <circle cx="160" cy="160" r="100" fill="#3B82F6" fill-opacity="0.2"/>
            </g>

            <!-- Card -->
            <rect x="20" y="40" width="280" height="240" rx="20" fill="#090B11" fill-opacity="0.95" stroke="rgba(59, 130, 246, 0.3)" stroke-width="1"/>
            
            <!-- Header -->
            <text x="40" y="80" fill="white" font-family="sans-serif" font-size="16" font-weight="600">Role Permissions</text>
            
            <!-- List Container -->
            <rect x="40" y="100" width="240" height="160" rx="12" fill="rgba(255, 255, 255, 0.02)" stroke="rgba(255, 255, 255, 0.08)"/>
            
            <!-- Item 1 -->
            <text x="55" y="135" fill="rgba(255, 255, 255, 0.9)" font-family="sans-serif" font-size="14">Deploy updates</text>
            <rect x="240" y="120" width="24" height="24" rx="6" fill="#3B82F6"/>
            <path d="M246 132L250 136L258 128" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            
            <!-- Divider -->
            <line x1="40" y1="153" x2="280" y2="153" stroke="rgba(255, 255, 255, 0.08)"/>
            
            <!-- Item 2 -->
            <text x="55" y="188" fill="rgba(255, 255, 255, 0.9)" font-family="sans-serif" font-size="14">View logs</text>
            <rect x="240" y="173" width="24" height="24" rx="6" fill="#3B82F6"/>
            <path d="M246 185L250 189L258 181" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            
            <!-- Divider -->
            <line x1="40" y1="206" x2="280" y2="206" stroke="rgba(255, 255, 255, 0.08)"/>
            
            <!-- Item 3 -->
            <text x="55" y="241" fill="rgba(255, 255, 255, 0.9)" font-family="sans-serif" font-size="14">Manage Channels</text>
            <rect x="240" y="226" width="24" height="24" rx="6" fill="#3B82F6"/>
            <path d="M246 238L250 242L258 234" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>

            <defs>
              <filter id="filter1_f" x="-40" y="-40" width="400" height="400" filterUnits="userSpaceOnUse" color-interpolation-filters="sRGB">
                <feFlood flood-opacity="0" result="BackgroundImageFix"/>
                <feBlend mode="normal" in="SourceGraphic" in2="BackgroundImageFix" result="shape"/>
                <feGaussianBlur stdDeviation="60" result="effect1_foregroundBlur"/>
              </filter>
            </defs>
          </svg>
        </div>

        <h3 class="relative z-10 mb-4 text-2xl font-semibold text-white">{features[2].title}</h3>
        <p class="relative z-10 text-base leading-relaxed text-gray-400">{features[2].description}</p>
      </div>
    </div>

    <!-- CTA Button -->
    <div class="mt-20 text-center">
      <a
        href={getRelativeLocaleUrl(Astro.locals.locale, 'register')}
        class="inline-flex items-center justify-center rounded-xl bg-[#5B7FE8] px-12 py-4 text-lg font-semibold text-white shadow-lg shadow-blue-500/20 transition-all duration-200 hover:bg-[#4a6ed4] hover:shadow-blue-500/30 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-[#1a1a1a]"
      >
{m.orgs_cta({}, { locale: Astro.locals.locale })}
      </a>
    </div>
  </div>
</section>
