---
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'

const features = [
  {
    title: m.manage_various_teams({}, { locale: Astro.locals.locale }),
    description: m.create_oversee_organizations_from_single_account({}, { locale: Astro.locals.locale }),
  },
  {
    title: m.control_access_levels({}, { locale: Astro.locals.locale }),
    description: m.assign_specific_rights_and_access_levels_to_each_user_within_your_organizations({}, { locale: Astro.locals.locale }),
  },
  {
    title: m.adapt_as_you_grow({}, { locale: Astro.locals.locale }),
    description: m.easily_adjust_user_roles_and_permissions_as_your_team_and_projects_evolve_maintaining_optimal_organization_structure({}, { locale: Astro.locals.locale }),
  },
]
---

<section class="relative bg-[#1a1a1a] py-20 sm:py-24 lg:py-32">
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="mb-20 text-center">
      <!-- Badge -->
      <div class="mb-8 inline-flex items-center rounded-full border border-blue-500/30 bg-blue-500/10 px-5 py-2 text-xs font-semibold uppercase tracking-widest text-blue-400">
        HOW IT WORKS
      </div>

      <!-- Main Heading -->
      <h2 class="mb-6 text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
        Flexible Management<br />for Your Team
      </h2>

      <!-- Subtitle -->
      <p class="mx-auto max-w-3xl text-lg leading-relaxed text-gray-400">
        {m.create_manage_organizations_with_ease({}, { locale: Astro.locals.locale })}
      </p>
    </div>

    <!-- Feature Cards Grid -->
    <div class="mx-auto grid max-w-7xl grid-cols-1 gap-8 lg:grid-cols-3">
      <!-- Card 1: Manage various teams -->
      <div class="group relative flex flex-col rounded-3xl bg-[#242424] p-8 transition-all duration-300 hover:bg-[#2a2a2a]">
        <!-- Image Container with 3D perspective effect -->
        <div class="relative mb-8 flex h-80 items-center justify-center overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-black p-8">
          <!-- 3D Cards Stack -->
          <div class="relative" style="perspective: 1000px; transform-style: preserve-3d;">
            <!-- Back Card - Sesame Devs -->
            <div class="absolute left-4 top-0 h-48 w-64 rounded-2xl bg-gradient-to-br from-gray-800 to-gray-900 p-6 shadow-2xl" style="transform: rotateY(-15deg) rotateX(5deg) translateZ(-40px);">
              <div class="flex items-center gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gray-700">
                  <svg class="h-5 w-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-xs text-gray-500">Organization</p>
                  <p class="font-semibold text-white">Sesame Devs</p>
                </div>
              </div>
            </div>

            <!-- Middle Card - Acme Corp -->
            <div class="absolute left-0 top-4 h-48 w-64 rounded-2xl bg-gradient-to-br from-gray-700 to-gray-800 p-6 shadow-2xl" style="transform: rotateY(-8deg) rotateX(3deg) translateZ(-20px);">
              <div class="flex items-center gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gray-600">
                  <svg class="h-5 w-5 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-xs text-gray-400">Organization</p>
                  <p class="font-semibold text-white">Acme Corp</p>
                </div>
              </div>
              <div class="mt-6 space-y-3">
                <div class="flex items-center gap-2">
                  <div class="flex h-7 w-7 items-center justify-center rounded-full bg-gray-600">
                    <svg class="h-4 w-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <span class="text-sm text-gray-300">Joseph</span>
                </div>
              </div>
            </div>

            <!-- Front Card - R&D Team -->
            <div class="relative h-48 w-64 rounded-2xl bg-gradient-to-br from-gray-600 to-gray-700 p-6 shadow-2xl" style="transform: rotateY(0deg) rotateX(0deg) translateZ(0px);">
              <div class="flex items-center gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gray-500">
                  <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-xs text-gray-300">Account</p>
                  <p class="font-semibold text-white">R&D Team</p>
                </div>
              </div>
              <div class="mt-6 space-y-3">
                <div class="flex items-center gap-2">
                  <div class="flex h-7 w-7 items-center justify-center rounded-full bg-gray-500">
                    <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <span class="text-sm text-white">Natalie</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="flex h-7 w-7 items-center justify-center rounded-full bg-gray-500">
                    <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <span class="text-sm text-white">Joseph</span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="flex h-7 w-7 items-center justify-center rounded-full bg-gray-500">
                    <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                  </div>
                  <span class="text-sm text-white">Mike Smith</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Text Content -->
        <h3 class="mb-4 text-2xl font-bold text-white">{features[0].title}</h3>
        <p class="text-base leading-relaxed text-gray-400">{features[0].description}</p>
      </div>

      <!-- Card 2: Control access levels -->
      <div class="group relative flex flex-col rounded-3xl bg-[#242424] p-8 transition-all duration-300 hover:bg-[#2a2a2a]">
        <!-- Image Container with glow effect -->
        <div class="relative mb-8 flex h-80 items-center justify-center overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-black p-8">
          <!-- Glowing card with blue aura -->
          <div class="relative">
            <!-- Blue glow effect -->
            <div class="absolute inset-0 rounded-3xl bg-blue-500/30 blur-3xl"></div>

            <!-- Main Card -->
            <div class="relative h-72 w-72 rounded-3xl bg-gradient-to-br from-gray-800 to-gray-900 p-8 shadow-2xl ring-1 ring-white/10">
              <!-- Header -->
              <div class="mb-6 flex items-center gap-3">
                <div class="flex h-12 w-12 items-center justify-center rounded-full bg-gray-700 ring-2 ring-gray-600">
                  <svg class="h-6 w-6 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-xs text-gray-400">Developer</p>
                </div>
              </div>

              <!-- Account Name -->
              <div class="mb-8">
                <p class="text-sm text-gray-400">Account</p>
                <p class="text-3xl font-bold text-white">Joseph</p>
              </div>

              <!-- Options -->
              <div class="space-y-4">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-300">Permissions</span>
                  <span class="text-sm font-semibold text-white">Full access</span>
                </div>
                <div class="text-sm text-gray-400">Settings</div>
              </div>

              <!-- Cursor pointer -->
              <div class="absolute right-8 top-32">
                <svg class="h-8 w-8 text-white drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M5.5 3.21v17.58l7.5-7.5 4.5 7.5 1.5-.88-4.5-7.5 7.5-4.5-16.5-4.7z"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Text Content -->
        <h3 class="mb-4 text-2xl font-bold text-white">{features[1].title}</h3>
        <p class="text-base leading-relaxed text-gray-400">{features[1].description}</p>
      </div>

      <!-- Card 3: Adapt as you grow -->
      <div class="group relative flex flex-col rounded-3xl bg-[#242424] p-8 transition-all duration-300 hover:bg-[#2a2a2a]">
        <!-- Image Container -->
        <div class="relative mb-8 flex h-80 items-center justify-center overflow-hidden rounded-2xl bg-gradient-to-br from-gray-900 to-black p-8">
          <!-- Permissions Panel -->
          <div class="relative h-72 w-72 rounded-3xl bg-gradient-to-br from-gray-800 to-gray-900 p-8 shadow-2xl ring-1 ring-white/10">
            <!-- Header -->
            <h4 class="mb-8 text-xl font-bold text-white">Role Permissions</h4>

            <!-- Permission Items -->
            <div class="space-y-6">
              <div class="flex items-center justify-between">
                <span class="text-base text-gray-200">Deploy updates</span>
                <div class="flex h-6 w-6 items-center justify-center rounded bg-blue-600">
                  <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>

              <div class="flex items-center justify-between">
                <span class="text-base text-gray-200">View logs</span>
                <div class="flex h-6 w-6 items-center justify-center rounded bg-blue-600">
                  <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>

              <div class="flex items-center justify-between">
                <span class="text-base text-gray-200">Manage Channels</span>
                <div class="flex h-6 w-6 items-center justify-center rounded bg-blue-600">
                  <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Text Content -->
        <h3 class="mb-4 text-2xl font-bold text-white">{features[2].title}</h3>
        <p class="text-base leading-relaxed text-gray-400">{features[2].description}</p>
      </div>
    </div>

    <!-- CTA Button -->
    <div class="mt-20 text-center">
      <a
        href={getRelativeLocaleUrl(Astro.locals.locale, 'docs/getting-started')}
        class="inline-flex items-center justify-center rounded-xl bg-[#5B7FE8] px-12 py-4 text-lg font-semibold text-white shadow-lg shadow-blue-500/20 transition-all duration-200 hover:bg-[#4a6ed4] hover:shadow-blue-500/30 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-[#1a1a1a]"
      >
        Install Plugin
      </a>
    </div>
  </div>
</section>
