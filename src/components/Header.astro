---
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { getTotalStars } from '@/services/github'

const brand = Astro.locals.runtimeConfig.public.brand
const totalStars = getTotalStars()
---

<header class="relative py-2">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between">
      <div class="flex items-center shrink-0">
        <a href={getRelativeLocaleUrl(Astro.locals.locale)} aria-label={m.capgo_home({}, { locale: Astro.locals.locale })} class="flex items-center pr-3 text-4xl font-medium font-prompt">
          <img class="w-auto pr-1 h-18" loading="eager" height="72" width="133" alt={`${brand} logo`} aria-label={`${brand} logo`} src="/capgo_logo.webp" />
        </a>
      </div>
      <div class="flex lg:hidden">
        <button type="button" class="text-white" aria-label={m.expand_menu({}, { locale: Astro.locals.locale })} id="menu-toggle">
          <svg class="w-7 h-7" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:flex-1 lg:gap-10 lg:items-center">
        <nav class="flex items-center space-x-8">
          <!-- Docs -->
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'docs')}
            aria-label={m.docs({}, { locale: Astro.locals.locale })}
            class="text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
          >
            {m.docs({}, { locale: Astro.locals.locale })}
          </a>
          <!-- Products Dropdown -->
          <div class="relative group">
            <button
              type="button"
              class="flex items-center text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
              aria-label={m.products({}, { locale: Astro.locals.locale })}
            >
              {m.products({}, { locale: Astro.locals.locale })}
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:rotate-180" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute left-0 z-50 invisible pt-2 w-48 opacity-0 transition-all duration-200 group-hover:visible group-hover:opacity-100">
              <div class="py-2 bg-gray-800 rounded-lg border border-gray-700 shadow-xl">
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'live-update')}
                  class="block px-4 py-2 text-sm text-gray-300 transition-colors hover:bg-gray-700 hover:text-white"
                >
                  {m.live_update({}, { locale: Astro.locals.locale })}
                </a>
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'native-build')}
                  class="block px-4 py-2 text-sm text-gray-300 transition-colors hover:bg-gray-700 hover:text-white"
                >
                  {m.native_build({}, { locale: Astro.locals.locale })}
                </a>
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'plugins')}
                  class="block px-4 py-2 text-sm text-gray-300 transition-colors hover:bg-gray-700 hover:text-white"
                >
                  {m.plugins({}, { locale: Astro.locals.locale })}
                </a>
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'ionic-enterprise-plugins')}
                  class="block px-4 py-2 text-sm text-gray-300 transition-colors hover:bg-gray-700 hover:text-white"
                >
                  {m.solutions_ionic_plugins_short({}, { locale: Astro.locals.locale })}
                </a>
              </div>
            </div>
          </div>
          <!-- Solutions Dropdown -->
          <div class="relative group">
            <button
              type="button"
              class="flex items-center text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
              aria-label={m.solutions({}, { locale: Astro.locals.locale })}
