---
import * as m from '@/paraglide/messages'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { getTotalStars } from '@/services/github'

const brand = Astro.locals.runtimeConfig.public.brand
const totalStars = getTotalStars()
---

<header class="relative py-2">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between">
      <div class="flex items-center shrink-0">
        <a href={getRelativeLocaleUrl(Astro.locals.locale)} aria-label="Capgo home" class="flex items-center pr-3 text-4xl font-medium font-prompt">
          <img class="w-auto pr-1 h-18" loading="eager" height="72" width="133" alt={`${brand} logo`} aria-label={`${brand} logo`} src="/capgo_logo.webp" />
        </a>
      </div>
      <div class="flex lg:hidden">
        <button type="button" class="text-white" aria-label="Expand menu" id="menu-toggle">
          <svg class="w-7 h-7" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:flex-1 lg:gap-10 lg:items-center">
        <nav class="flex items-center space-x-8">
          <!-- Docs -->
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'docs')}
            aria-label="Docs"
            class="text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
          >
            {m.docs({}, { locale: Astro.locals.locale })}
          </a>
          <!-- Products Dropdown -->
          <div class="relative group">
            <button
              type="button"
              class="flex items-center text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
              aria-label="Products"
            >
              {m.products({}, { locale: Astro.locals.locale })}
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:rotate-180" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute left-0 z-50 invisible pt-2 w-48 opacity-0 transition-all duration-200 group-hover:visible group-hover:opacity-100">
              <div class="py-2 bg-gray-800 rounded-lg border border-gray-700 shadow-xl">
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'live-update')}
                  class="block px-4 py-2 text-sm text-gray-300 transition-colors hover:bg-gray-700 hover:text-white"
                >
                  {m.live_update({}, { locale: Astro.locals.locale })}
                </a>
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'native-build')}
                  class="block px-4 py-2 text-sm text-gray-300 transition-colors hover:bg-gray-700 hover:text-white"
                >
                  {m.native_build({}, { locale: Astro.locals.locale })}
                </a>
                <a
                  href={getRelativeLocaleUrl(Astro.locals.locale, 'plugins')}
                  class="block px-4 py-2 text-sm text-gray-300 transition-colors hover:bg-gray-700 hover:text-white"
                >
                  {m.plugins({}, { locale: Astro.locals.locale })}
                </a>
              </div>
            </div>
          </div>
          <!-- Solutions Dropdown -->
          <div class="relative group">
            <button
              type="button"
              class="flex items-center text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
              aria-label="Solutions"
            >
              {m.solutions({}, { locale: Astro.locals.locale })}
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:rotate-180" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute left-0 z-50 invisible pt-2 w-[500px] opacity-0 transition-all duration-200 group-hover:visible group-hover:opacity-100">
              <div class="p-4 bg-gray-800 rounded-lg border border-gray-700 shadow-xl">
                <div class="grid grid-cols-2 gap-4">
                  <!-- By Use Case Column -->
                  <div>
                    <p class="px-2 mb-2 text-xs font-semibold tracking-wider text-gray-500 uppercase">{m.solutions_by_use_case({}, { locale: Astro.locals.locale })}</p>
                    <a
                      href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/production-updates')}
                      class="flex gap-3 items-center px-2 py-2 text-sm text-gray-300 rounded-lg transition-colors hover:bg-gray-700 hover:text-white"
                    >
                      <svg class="w-5 h-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                      </svg>
                      {m.solutions_production_updates({}, { locale: Astro.locals.locale })}
                    </a>
                    <a
                      href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/direct-updates')}
                      class="flex gap-3 items-center px-2 py-2 text-sm text-gray-300 rounded-lg transition-colors hover:bg-gray-700 hover:text-white"
                    >
                      <svg class="w-5 h-5 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                      {m.solutions_direct_updates({}, { locale: Astro.locals.locale })}
                    </a>
                    <a
                      href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/pr-preview')}
                      class="flex gap-3 items-center px-2 py-2 text-sm text-gray-300 rounded-lg transition-colors hover:bg-gray-700 hover:text-white"
                    >
                      <svg class="w-5 h-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {m.solutions_pr_preview({}, { locale: Astro.locals.locale })}
                    </a>
                  </div>
                  <!-- By Industry Column -->
                  <div>
                    <p class="px-2 mb-2 text-xs font-semibold tracking-wider text-gray-500 uppercase">{m.solutions_by_app_type({}, { locale: Astro.locals.locale })}</p>
                    <a
                      href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/beta-testing')}
                      class="flex gap-3 items-center px-2 py-2 text-sm text-gray-300 rounded-lg transition-colors hover:bg-gray-700 hover:text-white"
                    >
                      <svg class="w-5 h-5 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                      {m.solutions_beta_testing({}, { locale: Astro.locals.locale })}
                    </a>
                    <a
                      href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/white-label')}
                      class="flex gap-3 items-center px-2 py-2 text-sm text-gray-300 rounded-lg transition-colors hover:bg-gray-700 hover:text-white"
                    >
                      <svg class="w-5 h-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                      </svg>
                      {m.solutions_white_label({}, { locale: Astro.locals.locale })}
                    </a>
                    <a
                      href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/version-targeting')}
                      class="flex gap-3 items-center px-2 py-2 text-sm text-gray-300 rounded-lg transition-colors hover:bg-gray-700 hover:text-white"
                    >
                      <svg class="w-5 h-5 text-rose-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                      </svg>
                      {m.solutions_version_targeting({}, { locale: Astro.locals.locale })}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Enterprise -->
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'enterprise')}
            aria-label="Enterprise"
            class="text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
          >
            {m.enterprise_title({}, { locale: Astro.locals.locale })}
          </a>
          <!-- Pricing -->
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'pricing')}
            aria-label="Pricing"
            class="text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
          >
            {m.pricing({}, { locale: Astro.locals.locale })}
          </a>
          <!-- Blog -->
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'blog')}
            aria-label="Blog"
            class="text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
          >
            {m.blog({}, { locale: Astro.locals.locale })}
          </a>
        </nav>
        <div class="flex items-center ml-auto space-x-4">
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'plugins')}
            aria-label="GitHub Stars"
            class="flex gap-2 items-center py-1.5 px-3 text-sm font-medium text-gray-300 bg-gray-800 rounded-md transition-colors hover:bg-gray-700"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
            </svg>
            <span>{totalStars}+</span>
          </a>
          <a
            href="https://console.capgo.app/login/"
            aria-label="Login"
            target="_blank"
            class="text-base font-medium transition-all duration-200 border-b-2 border-transparent hover:border-blue-600 focus:border-blue-600"
          >
            {m.login({}, { locale: Astro.locals.locale })}
          </a>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'register')}
            target="_blank"
            aria-label="Register"
            class="px-5 py-2 text-base font-semibold leading-7 text-gray-300 transition-all duration-200 bg-transparent border border-gray-300 rounded-xl hover:text-white hover:bg-gray-500 focus:text-white focus:bg-gray-500 focus:ring-2 focus:ring-gray-300 focus:ring-offset-2 focus:outline-none font-pj"
            role="button"
          >
            {m.register({}, { locale: Astro.locals.locale })}
          </a>
        </div>
      </div>
    </div>
  </div>
  <div id="mobile-menu" class="hidden">
    <div class="px-2 pt-2 pb-3 mt-2 space-y-1 bg-gray-700">
      <!-- GitHub Stars -->
      <a
        href={getRelativeLocaleUrl(Astro.locals.locale, 'plugins')}
        aria-label="GitHub Stars"
        class="flex gap-2 items-center px-3 py-2 text-base font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-600"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
        </svg>
        <span>{totalStars}+ Stars</span>
      </a>
      <!-- Docs -->
      <a
        href={getRelativeLocaleUrl(Astro.locals.locale, 'docs')}
        aria-label={m.docs({}, { locale: Astro.locals.locale })}
        class="block px-3 py-2 text-base font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-600"
      >
        {m.docs({}, { locale: Astro.locals.locale })}
      </a>
      <!-- Products Section -->
      <div class="border-t border-gray-600 pt-2 mt-2">
        <button
          type="button"
          id="products-toggle"
          class="flex items-center justify-between w-full px-3 py-2 text-base font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-600"
        >
          {m.products({}, { locale: Astro.locals.locale })}
          <svg id="products-chevron" class="w-4 h-4 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="products-submenu" class="hidden pl-4 space-y-1">
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'live-update')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.live_update({}, { locale: Astro.locals.locale })}
          </a>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'native-build')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.native_build({}, { locale: Astro.locals.locale })}
          </a>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'plugins')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.plugins({}, { locale: Astro.locals.locale })}
          </a>
        </div>
      </div>
      <!-- Solutions Section -->
      <div class="border-t border-gray-600 pt-2 mt-2">
        <button
          type="button"
          id="solutions-toggle"
          class="flex items-center justify-between w-full px-3 py-2 text-base font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-600"
        >
          {m.solutions({}, { locale: Astro.locals.locale })}
          <svg id="solutions-chevron" class="w-4 h-4 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div id="solutions-submenu" class="hidden pl-4 space-y-1">
          <p class="px-3 py-1 text-xs font-semibold tracking-wider text-gray-500 uppercase">{m.solutions_by_use_case({}, { locale: Astro.locals.locale })}</p>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/production-updates')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.solutions_production_updates({}, { locale: Astro.locals.locale })}
          </a>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/direct-updates')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.solutions_direct_updates({}, { locale: Astro.locals.locale })}
          </a>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/pr-preview')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.solutions_pr_preview({}, { locale: Astro.locals.locale })}
          </a>
          <p class="px-3 py-1 text-xs font-semibold tracking-wider text-gray-500 uppercase">{m.solutions_by_app_type({}, { locale: Astro.locals.locale })}</p>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/beta-testing')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.solutions_beta_testing({}, { locale: Astro.locals.locale })}
          </a>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/white-label')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.solutions_white_label({}, { locale: Astro.locals.locale })}
          </a>
          <a
            href={getRelativeLocaleUrl(Astro.locals.locale, 'solutions/version-targeting')}
            class="block px-3 py-2 text-sm text-gray-400 rounded-md hover:text-white hover:bg-gray-600"
          >
            {m.solutions_version_targeting({}, { locale: Astro.locals.locale })}
          </a>
        </div>
      </div>
      <!-- Enterprise -->
      <a
        href={getRelativeLocaleUrl(Astro.locals.locale, 'enterprise')}
        aria-label={m.enterprise_title({}, { locale: Astro.locals.locale })}
        class="block px-3 py-2 text-base font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-600"
      >
        {m.enterprise_title({}, { locale: Astro.locals.locale })}
      </a>
      <!-- Pricing -->
      <a
        href={getRelativeLocaleUrl(Astro.locals.locale, 'pricing')}
        aria-label={m.pricing({}, { locale: Astro.locals.locale })}
        class="block px-3 py-2 text-base font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-600"
      >
        {m.pricing({}, { locale: Astro.locals.locale })}
      </a>
      <!-- Blog -->
      <a
        href={getRelativeLocaleUrl(Astro.locals.locale, 'blog')}
        aria-label={m.blog({}, { locale: Astro.locals.locale })}
        class="block px-3 py-2 text-base font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-600"
      >
        {m.blog({}, { locale: Astro.locals.locale })}
      </a>
      <div class="border-t border-gray-600 pt-2 mt-2">
        <a
          href="https://console.capgo.app/login/"
          target="_blank"
          aria-label={m.login({}, { locale: Astro.locals.locale })}
          class="block px-3 py-2 text-base font-medium text-gray-300 rounded-md hover:text-white hover:bg-gray-600"
        >
          {m.login({}, { locale: Astro.locals.locale })}
        </a>
        <a
          target="_blank"
          aria-label={m.register({}, { locale: Astro.locals.locale })}
          href={getRelativeLocaleUrl(Astro.locals.locale, 'register')}
          class="block px-5 py-2 mt-2 text-base font-medium leading-7 text-center text-gray-300 transition-all duration-200 bg-gray-900 border border-gray-300 rounded-md hover:text-white hover:bg-gray-500 focus:text-white focus:bg-gray-500 focus:ring-2 focus:ring-gray-300 focus:ring-offset-2 focus:outline-none font-pj"
        >
          {m.register({}, { locale: Astro.locals.locale })}
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle')
  const mobileMenu = document.getElementById('mobile-menu')
  const productsToggle = document.getElementById('products-toggle')
  const productsSubmenu = document.getElementById('products-submenu')
  const productsChevron = document.getElementById('products-chevron')
  const solutionsToggle = document.getElementById('solutions-toggle')
  const solutionsSubmenu = document.getElementById('solutions-submenu')
  const solutionsChevron = document.getElementById('solutions-chevron')

  menuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden')
  })

  productsToggle?.addEventListener('click', () => {
    productsSubmenu?.classList.toggle('hidden')
    productsChevron?.classList.toggle('rotate-180')
  })

  solutionsToggle?.addEventListener('click', () => {
    solutionsSubmenu?.classList.toggle('hidden')
    solutionsChevron?.classList.toggle('rotate-180')
  })
</script>
