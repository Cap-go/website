---
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'
---

<section class="py-10 bg-gray-900 sm:py-16 lg:py-24">
  <div class="px-4 mx-auto max-w-5xl sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold leading-tight text-white sm:text-4xl lg:text-5xl">
        {m.questions_and_answers({}, { locale: Astro.locals.locale })}
      </h2>
      <p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-gray-300">
        {m.explore_common_questions({}, { locale: Astro.locals.locale })}
      </p>
    </div>
    <!-- Plan Features & Limits -->
    <div class="mt-16 max-w-3xl mx-auto">
      <div class="mb-8 text-center">
        <h3 class="text-2xl font-semibold text-white hover:text-blue-400 transition-colors duration-200 cursor-default mb-2">Plan Features & Limits</h3>
        <p class="text-gray-400 text-sm">Everything you need to know about your plan's capabilities</p>
      </div>
      
      <div class="space-y-1 bg-gray-800/20 rounded-2xl overflow-hidden border border-gray-800">
        <details class="group border-b border-gray-800 last:border-b-0 open:bg-blue-950/20 open:border-blue-600/30" id="faq-mau">
          <summary class="flex items-center justify-between px-8 py-6 cursor-pointer hover:bg-gray-800/30 group-open:bg-blue-900/20 transition-all duration-200">
            <span class="text-lg font-medium text-white group-hover:text-blue-400 group-open:text-blue-400 transition-colors duration-200 pr-4">{m.how_are_mau_counted({}, { locale: Astro.locals.locale })}</span>
            <svg class="w-5 h-5 text-gray-400 group-open:text-blue-400 group-open:rotate-180 transition-all duration-300 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="px-8 pb-6 pt-2 bg-blue-950/10">
            <div class="text-gray-200 leading-relaxed space-y-3">
              <p>{m.mau_counting_explanation({}, { locale: Astro.locals.locale })}</p>
              <p>
                {m.capgo_usage_explanation({}, { locale: Astro.locals.locale })}
