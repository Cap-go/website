                {m.capgo_usage_explanation({}, { locale: Astro.locals.locale })}
                <a class="text-blue-400 hover:text-blue-300 transition-colors underline decoration-1 underline-offset-2" href={getRelativeLocaleUrl(Astro.locals.locale, 'blog/how-your-usage-is-counted')}>
                  {m.here({}, { locale: Astro.locals.locale })}
