---
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'
---

<section class="py-10 bg-gray-900 sm:py-16 lg:py-24">
  <div class="px-4 mx-auto max-w-5xl sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-bold leading-tight text-white sm:text-4xl lg:text-5xl">
        {m.questions_and_answers({}, { locale: Astro.locals.locale })}
      </h2>
      <p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-gray-300">
        {m.explore_common_questions({}, { locale: Astro.locals.locale })}
      </p>
    </div>
    <div class="grid grid-cols-1 gap-y-16 gap-x-20 mt-12 md:grid-cols-2 md:mt-20">
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">{m.how_are_mau_counted({}, { locale: Astro.locals.locale })}</p>
          <p class="mt-4 text-base text-gray-400">
            {m.mau_counting_explanation({}, { locale: Astro.locals.locale })}
          </p>
          <p class="mt-4 text-base text-gray-400">
            {m.capgo_usage_explanation({}, { locale: Astro.locals.locale })}
            <a class="border-b-2 border-blue-600 hover:text-gray-200 focus:text-gray-200" href={getRelativeLocaleUrl(Astro.locals.locale, 'blog/how-your-usage-is-counted')}>
              {m.here({}, { locale: Astro.locals.locale })}
            </a>
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">{m.what_does_storage_mean({}, { locale: Astro.locals.locale })}</p>
          <p class="mt-4 text-base text-gray-400">
            {m.storage_explanation({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">{m.how_is_bandwidth_counted({}, { locale: Astro.locals.locale })}</p>
          <p class="mt-4 text-base text-gray-400">
            {m.bandwidth_explanation({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">
            {m.do_you_offer_annual_billing_and_ach_payment_options({}, { locale: Astro.locals.locale })}
          </p>
          <p class="mt-4 text-base text-gray-400">
            {m.ach_available_for_enterprise_annual_payments({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">{m.unsure_about_active_users({}, { locale: Astro.locals.locale })}</p>
          <p class="mt-4 text-base text-gray-400">
            {m.free_trial_explanation({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">
            {m.do_you_offer_discounts_for_students_non_profits_or_startups({}, { locale: Astro.locals.locale })}
          </p>
          <p class="mt-4 text-base text-gray-400">
            {m.no_discounts_available_at_this_time({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">
            {m.do_you_have_purchasing_power_parity_pricing({}, { locale: Astro.locals.locale })}
          </p>
          <p class="mt-4 text-base text-gray-400">
            {m.no_ppp_available_at_this_time({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">{m.what_happens_if_i_reach_the_mau_limit({}, { locale: Astro.locals.locale })}</p>
          <p class="mt-4 text-base text-gray-400">
            {m.what_happens_if_i_reach_the_mau_limit_answer({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-semibold text-white">{m.what_happens_if_i_reach_the_storage_limit({}, { locale: Astro.locals.locale })}</p>
          <p class="mt-4 text-base text-gray-400">
            {m.what_happens_if_i_reach_the_storage_limit_answer({}, { locale: Astro.locals.locale })}
          </p>
        </div>
      </div>
      <div class="flex items-start">
        <div class="flex justify-center items-center w-8 h-8 bg-gray-700 rounded-full shrink-0">
          <span class="text-lg font-semibold text-white">?</span>
        </div>
