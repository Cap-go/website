---
import { numberWithSpaces, toTb, updateCalc } from '@/services/misc'
import { getRelativeLocaleUrl } from 'astro:i18n'
import * as m from '@/paraglide/messages'

interface Props {
  payg: {
    mau: number
    mau_unit: number
    bandwidth: number
    bandwidth_unit: number
    storage: number
    storage_unit: number
    price_m: number
    price_y: number
