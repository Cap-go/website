---
import * as m from '@/paraglide/messages'

const locale = Astro.locals.locale
---

<div class="py-24 sm:py-32 bg-[#1a1a1a]">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <h2 class="font-mono text-base font-semibold leading-7 text-[#44BCFF]">{m.landing_monitoring_subtitle()}</h2>
      <p class="mt-2 text-3xl font-bold tracking-tight text-white sm:text-4xl">
        {m.landing_monitoring_title()}
      </p>
      <p class="mt-6 text-lg leading-8 text-gray-400">
        {m.landing_monitoring_description()}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Card 1: User Population -->
      <div class="bg-white/5 rounded-2xl p-8 border border-white/10 flex flex-col">
        <h3 class="text-lg font-semibold mb-2 text-white">
          {m.landing_monitoring_user_pop()}
        </h3>
        <p class="text-gray-400 text-sm mb-6">
          {m.landing_monitoring_user_pop_desc()}
        </p>
        
        <div class="mt-auto space-y-6">
          <!-- Android -->
          <div>
            <div class="flex justify-between text-xs text-gray-400 mb-1">
              <span>Android</span>
              <span>v 2.0</span>
            </div>
            <div class="h-4 w-full bg-white/10 rounded-full overflow-hidden flex">
              <div class="h-full bg-blue-500" style="width: 40%"></div>
              <div class="h-full bg-emerald-500" style="width: 30%"></div>
              <div class="h-full bg-purple-500" style="width: 30%"></div>
            </div>
          </div>

          <!-- iOS -->
          <div>
            <div class="flex justify-between text-xs text-gray-400 mb-1">
              <span>iOS</span>
              <span>v 2.0</span>
            </div>
            <div class="h-4 w-full bg-white/10 rounded-full overflow-hidden flex">
              <div class="h-full bg-blue-500" style="width: 20%"></div>
              <div class="h-full bg-emerald-500" style="width: 50%"></div>
              <div class="h-full bg-purple-500" style="width: 30%"></div>
            </div>
          </div>

          <!-- Legend -->
          <div class="flex gap-4 text-xs text-gray-400 pt-2">
            <div class="flex items-center gap-1">
              <div class="w-2 h-2 rounded-full bg-blue-500"></div>
              <span>1.0</span>
            </div>
            <div class="flex items-center gap-1">
              <div class="w-2 h-2 rounded-full bg-emerald-500"></div>
              <span>1.1</span>
            </div>
            <div class="flex items-center gap-1">
              <div class="w-2 h-2 rounded-full bg-purple-500"></div>
              <span>2.0</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Card 2: Bandwidth & Storage -->
      <div class="bg-white/5 rounded-2xl p-8 border border-white/10 flex flex-col">
        <h3 class="text-lg font-semibold mb-2 text-white">
          {m.landing_monitoring_bandwidth()}
        </h3>
        <p class="text-gray-400 text-sm mb-6">
          {m.landing_monitoring_bandwidth_desc()}
        </p>
        
        <div class="mt-auto h-48 relative">
          <!-- Simple SVG Line Chart -->
          <svg class="w-full h-full" viewBox="0 0 100 50" preserveAspectRatio="none">
            <!-- Grid lines -->
            <line x1="0" y1="10" x2="100" y2="10" stroke="rgba(255,255,255,0.1)" stroke-width="0.5" />
            <line x1="0" y1="20" x2="100" y2="20" stroke="rgba(255,255,255,0.1)" stroke-width="0.5" />
            <line x1="0" y1="30" x2="100" y2="30" stroke="rgba(255,255,255,0.1)" stroke-width="0.5" />
            <line x1="0" y1="40" x2="100" y2="40" stroke="rgba(255,255,255,0.1)" stroke-width="0.5" />

            <!-- Line 1 (Blue) -->
            <path d="M0,40 Q20,35 40,25 T80,15 T100,5" fill="none" stroke="#3b82f6" stroke-width="2" />
            <!-- Area 1 -->
            <path d="M0,40 Q20,35 40,25 T80,15 T100,5 V50 H0 Z" fill="url(#blueGradient)" opacity="0.2" />

            <!-- Line 2 (Green) -->
            <path d="M0,45 Q30,40 50,30 T90,20 T100,10" fill="none" stroke="#10b981" stroke-width="2" />
             <!-- Area 2 -->
             <path d="M0,45 Q30,40 50,30 T90,20 T100,10 V50 H0 Z" fill="url(#greenGradient)" opacity="0.2" />

            <defs>
              <linearGradient id="blueGradient" x1="0" y1="0" x2="0" y2="1">
                <stop offset="0%" stop-color="#3b82f6" />
                <stop offset="100%" stop-color="#3b82f6" stop-opacity="0" />
              </linearGradient>
              <linearGradient id="greenGradient" x1="0" y1="0" x2="0" y2="1">
                <stop offset="0%" stop-color="#10b981" />
                <stop offset="100%" stop-color="#10b981" stop-opacity="0" />
              </linearGradient>
            </defs>
          </svg>
        </div>
      </div>

      <!-- Card 3: Update Statistics -->
      <div class="bg-white/5 rounded-2xl p-8 border border-white/10 flex flex-col">
        <h3 class="text-lg font-semibold mb-2 text-white">
          {m.landing_monitoring_updates()}
        </h3>
        <p class="text-gray-400 text-sm mb-6">
          {m.landing_monitoring_updates_desc()}
        </p>
        
        <div class="mt-auto h-48 relative flex items-end justify-between gap-1">
            <!-- Tooltip -->
            <div class="absolute top-10 right-10 bg-[#1a1a1a] text-xs p-2 rounded border border-white/10 shadow-lg z-10">
                <span class="text-red-400 font-mono">Error:</span> <span class="text-gray-300">Network connection lost</span>
            </div>

            <!-- Bars -->
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 30%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 45%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 25%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 60%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 35%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 50%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 40%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 55%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 65%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 20%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 10%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 5%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 5%"></div>
            <div class="w-full bg-red-500/80 rounded-t-sm" style="height: 5%"></div>
        </div>
      </div>
    </div>
  </div>
</div>
