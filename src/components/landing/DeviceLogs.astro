---
import * as m from '@/paraglide/messages'

const locale = Astro.locals.locale
---

<div class="py-24 sm:py-32 bg-[#1a1a1a]">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid gap-12 items-center lg:grid-cols-[1.05fr_0.95fr]">
      <div>
        <p class="inline-flex items-center px-3 py-1 text-[11px] font-semibold tracking-wide uppercase rounded-full border border-white/10 bg-white/5 text-sky-100">
          {m.live_update_logs_kicker({}, { locale })}
        </p>
        <h2 class="mt-4 text-3xl font-bold leading-tight text-white sm:text-4xl">
          {m.live_update_logs_title({}, { locale })}
        </h2>
        <p class="mt-4 text-lg text-gray-300">
          {m.live_update_logs_desc({}, { locale })}
        </p>
        <ul class="mt-6 space-y-3 text-gray-300">
          <li class="flex gap-3">
            <span class="w-2 h-2 mt-1 rounded-full bg-emerald-400"></span>
            {m.live_update_logs_bullet1({}, { locale })}
          </li>
          <li class="flex gap-3">
            <span class="w-2 h-2 mt-1 rounded-full bg-amber-400"></span>
            {m.live_update_logs_bullet2({}, { locale })}
          </li>
          <li class="flex gap-3">
            <span class="w-2 h-2 mt-1 rounded-full bg-rose-400"></span>
            {m.live_update_logs_bullet3({}, { locale })}
          </li>
          <li class="flex gap-3">
            <span class="w-2 h-2 mt-1 rounded-full bg-sky-400"></span>
            {m.live_update_logs_bullet4({}, { locale })}
          </li>
        </ul>
        <div class="flex flex-wrap gap-3 mt-8">
          <a href="/register" class="px-5 py-3 text-sm font-semibold text-white transition bg-blue-600 rounded-lg shadow-lg shadow-blue-600/30 hover:bg-blue-700">
            {m.live_update_logs_cta_primary({}, { locale })}
          </a>
          <a href="/live-update" class="px-5 py-3 text-sm font-semibold text-blue-100 transition border rounded-lg border-white/10 hover:border-blue-400/60">
            {m.live_update_logs_cta_secondary({}, { locale })}
          </a>
        </div>
      </div>

      <div class="relative p-6 bg-white/5 border border-white/10 rounded-2xl shadow-2xl shadow-blue-900/40 overflow-hidden">
        <div class="absolute inset-0 opacity-70" style="background: radial-gradient(120% 120% at 15% 10%, rgba(59,130,246,0.14), rgba(26,26,26,0));"></div>
        <div class="relative space-y-3 font-mono text-xs text-gray-100">
          <div class="flex justify-between">
            <span class="text-sky-300">10:00:01</span>
            <span class="text-gray-300">device A1B2C3</span>
            <span class="text-amber-300">download_start 2.6.0</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sky-300">10:00:05</span>
            <span class="text-gray-300">device A1B2C3</span>
            <span class="text-rose-300">update_fail (network_timeout)</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sky-300">10:00:06</span>
            <span class="text-gray-300">device A1B2C3</span>
            <span class="text-sky-200">retry scheduled in 30s</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sky-300">10:02:21</span>
            <span class="text-gray-300">device D4E5F6</span>
            <span class="text-rose-300">update_fail (out_of_memory)</span>
          </div>
          <div class="flex justify-between">
            <span class="text-sky-300">10:02:22</span>
            <span class="text-gray-300">device D4E5F6</span>
            <span class="text-emerald-300">rollback â†’ builtin</span>
          </div>
        </div>
        <p class="relative mt-6 text-sm text-gray-300">
          {m.live_update_logs_panel_footer({}, { locale })}
        </p>
      </div>
    </div>
  </div>
</div>
