<svg viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
  <!-- Timeline Line -->
  <line x1="50" y1="150" x2="350" y2="150" stroke="#374151" stroke-width="2" />
  
  <!-- Past Version (Stable) -->
  <g transform="translate(100, 150)">
    <circle r="8" fill="#10B981" />
    <text x="0" y="25" text-anchor="middle" fill="#9CA3AF" font-family="monospace" font-size="10">v1.0</text>
  </g>
  
  <!-- Current Version (Buggy) -->
  <g transform="translate(250, 150)">
    <circle r="8" fill="#EF4444" />
    <text x="0" y="25" text-anchor="middle" fill="#EF4444" font-family="monospace" font-size="10">v1.1 (Crash)</text>
    
    <!-- Pulse -->
    <circle r="12" stroke="#EF4444" stroke-width="1" opacity="0.5">
      <animate attributeName="r" values="12;20" dur="1s" repeatCount="indefinite" />
      <animate attributeName="opacity" values="0.5;0" dur="1s" repeatCount="indefinite" />
    </circle>
  </g>

  <!-- Rollback Arc -->
  <path d="M250 130 Q 175 50 100 130" fill="none" stroke="#60A5FA" stroke-width="2" stroke-dasharray="4 4">
    <animate attributeName="stroke-dashoffset" values="8;0" dur="1s" repeatCount="indefinite" />
  </path>
  
  <!-- Arrow Head -->
  <path d="M95 125 L100 130 L105 125" stroke="#60A5FA" stroke-width="2" fill="none" />
  
  <text x="175" y="80" text-anchor="middle" fill="#60A5FA" font-family="sans-serif" font-size="12" font-weight="bold">Auto Rollback</text>
</svg>
