     </circle>
     <circle r="10" fill="#EF4444" />
  </g>
  
  <!-- Hands (Abstract) -->
  <circle cx="150" cy="220" r="15" fill="#EF4444" />
  <circle cx="250" cy="220" r="15" fill="#EF4444" />
</svg>
