<svg viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
  <!-- Engineer Desk -->
  <rect x="50" y="200" width="300" height="10" rx="2" fill="#374151" />
  
  <!-- Monitor -->
  <rect x="100" y="50" width="200" height="120" rx="8" fill="#1F2937" stroke="#4B5563" stroke-width="4" />
  <rect x="180" y="170" width="40" height="30" fill="#4B5563" />
  <rect x="160" y="200" width="80" height="5" rx="2" fill="#4B5563" />

  <!-- Code on Screen -->
  <rect x="110" y="60" width="100" height="100" fill="none" />
  <rect x="115" y="65" width="80" height="6" rx="2" fill="#EF4444" opacity="0.6" />
  <rect x="115" y="75" width="60" height="6" rx="2" fill="#EF4444" opacity="0.6" />
  <rect x="115" y="85" width="120" height="6" rx="2" fill="#EF4444" opacity="0.6" />
