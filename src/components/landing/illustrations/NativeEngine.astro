<svg viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
  <defs>
    <clipPath id="screen-clip">
      <rect x="120" y="50" width="160" height="200" rx="12" />
    </clipPath>
  </defs>

  <!-- Phone Outline -->
  <rect x="110" y="40" width="180" height="220" rx="20" stroke="#374151" stroke-width="4" fill="#1F2937" />
  
  <!-- Screen Content -->
  <g clip-path="url(#screen-clip)">
    <!-- Native Layer (Bottom) -->
    <rect x="120" y="150" width="160" height="100" fill="#1F2937" />
    
    <!-- Gears (Native Engine) -->
    <g transform="translate(160, 200)">
      <circle r="20" fill="none" stroke="#60A5FA" stroke-width="4" stroke-dasharray="4 4">
         <animateTransform attributeName="transform" type="rotate" from="0" to="360" dur="4s" repeatCount="indefinite" />
      </circle>
      <circle r="8" fill="#60A5FA" />
    </g>
    
    <g transform="translate(240, 180)">
       <circle r="15" fill="none" stroke="#3B82F6" stroke-width="4" stroke-dasharray="3 3">
         <animateTransform attributeName="transform" type="rotate" from="360" to="0" dur="4s" repeatCount="indefinite" />
       </circle>
    </g>

    <!-- Web Layer (Top) -->
    <rect x="120" y="50" width="160" height="100" fill="#374151" opacity="0.8" />
    
    <!-- Connection Points -->
    <line x1="160" y1="130" x2="160" y2="180" stroke="#60A5FA" stroke-width="2" />
    <line x1="240" y1="130" x2="240" y2="165" stroke="#3B82F6" stroke-width="2" />
    
    <circle cx="160" cy="130" r="4" fill="#FFFFFF" />
    <circle cx="240" cy="130" r="4" fill="#FFFFFF" />
  </g>
  
  <text x="200" y="280" text-anchor="middle" fill="#9CA3AF" font-family="sans-serif" font-size="12">Native Bridge</text>
</svg>
