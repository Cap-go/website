<svg viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
  <defs>
    <linearGradient id="green-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#10B981" stop-opacity="0.2" />
      <stop offset="100%" stop-color="#10B981" stop-opacity="0.05" />
    </linearGradient>
    <filter id="glow-green" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="8" result="blur" />
      <feComposite in="SourceGraphic" in2="blur" operator="over" />
    </filter>
  </defs>

  <!-- Central Cloud Builder -->
  <g transform="translate(400, 300)">
    <!-- Hexagon Base -->
    <path d="M0 -150 L130 -75 L130 75 L0 150 L-130 75 L-130 -75 Z" fill="url(#green-gradient)" stroke="#34D399" stroke-width="2" />
    
    <!-- Inner Construction -->
    <g transform="translate(-60, -80) scale(0.6)">
        <!-- Blocks stacking -->
        <rect x="0" y="100" width="80" height="40" fill="#059669" />
        <rect x="100" y="100" width="80" height="40" fill="#059669" />
        <rect x="50" y="50" width="80" height="40" fill="#10B981" />
        
        <!-- Crane Arm -->
        <line x1="250" y1="0" x2="90" y2="50" stroke="#34D399" stroke-width="4" />
        <circle cx="250" cy="0" r="10" fill="#34D399" />
        <line x1="90" y1="50" x2="90" y2="90" stroke="#34D399" stroke-width="2" stroke-dasharray="4 4" />
    </g>
  </g>

  <!-- Satellites (Platforms) -->
  <!-- iOS -->
  <g transform="translate(200, 200)">
     <circle r="40" fill="#1F2937" stroke="#34D399" stroke-width="2" />
     <text x="0" y="5" text-anchor="middle" fill="#FFFFFF" font-family="sans-serif" font-weight="bold">iOS</text>
     <!-- Connection -->
     <path d="M40 0 L150 50" stroke="#10B981" stroke-width="1" stroke-dasharray="4 4" opacity="0.5">
        <animate attributeName="stroke-dashoffset" values="8;0" dur="1s" repeatCount="indefinite" />
     </path>
  </g>

  <!-- Android -->
  <g transform="translate(600, 200)">
     <circle r="40" fill="#1F2937" stroke="#34D399" stroke-width="2" />
     <text x="0" y="5" text-anchor="middle" fill="#FFFFFF" font-family="sans-serif" font-weight="bold">Android</text>
     <!-- Connection -->
     <path d="M-40 0 L-150 50" stroke="#10B981" stroke-width="1" stroke-dasharray="4 4" opacity="0.5">
        <animate attributeName="stroke-dashoffset" values="0;8" dur="1s" repeatCount="indefinite" />
     </path>
  </g>

  <!-- Particles -->
  <circle r="3" fill="#34D399">
    <animateMotion path="M240 200 L 350 250" dur="1.5s" repeatCount="indefinite" />
  </circle>
  <circle r="3" fill="#34D399">
    <animateMotion path="M560 200 L 450 250" dur="1.5s" repeatCount="indefinite" />
  </circle>

</svg>
