<svg viewBox="0 0 800 600" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
  <defs>
    <linearGradient id="blue-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#3B82F6" stop-opacity="0.2" />
      <stop offset="100%" stop-color="#3B82F6" stop-opacity="0.05" />
    </linearGradient>
    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="10" result="blur" />
      <feComposite in="SourceGraphic" in2="blur" operator="over" />
    </filter>
  </defs>

  <!-- Cloud Infrastructure -->
  <g transform="translate(100, 100)">
    <!-- Cloud Base -->
    <path d="M100 150 C 60 150, 40 120, 60 90 C 50 50, 90 20, 130 40 C 160 10, 220 20, 230 60 C 260 60, 270 90, 250 120 C 270 150, 240 170, 200 160 L 100 150 Z" 
          fill="url(#blue-gradient)" stroke="#60A5FA" stroke-width="2" />
    
    <!-- Code Blocks inside Cloud -->
    <rect x="110" y="80" width="40" height="6" rx="2" fill="#93C5FD" opacity="0.6" />
    <rect x="110" y="95" width="60" height="6" rx="2" fill="#93C5FD" opacity="0.6" />
    <rect x="110" y="110" width="30" height="6" rx="2" fill="#93C5FD" opacity="0.6" />
    
    <!-- Pulse Effect -->
    <circle cx="180" cy="100" r="80" stroke="#3B82F6" stroke-width="1" opacity="0.2">
      <animate attributeName="r" values="80;100;80" dur="4s" repeatCount="indefinite" />
      <animate attributeName="opacity" values="0.2;0;0.2" dur="4s" repeatCount="indefinite" />
    </circle>
  </g>

  <!-- Connection Lines (Data Stream) -->
  <g>
    <path d="M350 200 C 450 200, 450 400, 550 400" stroke="#3B82F6" stroke-width="2" stroke-dasharray="8 8" opacity="0.4" />
    
    <!-- Traveling Packets -->
    <circle r="4" fill="#60A5FA">
      <animateMotion path="M350 200 C 450 200, 450 400, 550 400" dur="2s" repeatCount="indefinite" />
    </circle>
    <circle r="4" fill="#93C5FD">
      <animateMotion path="M350 200 C 450 200, 450 400, 550 400" dur="2s" begin="0.5s" repeatCount="indefinite" />
    </circle>
    <circle r="4" fill="#3B82F6">
      <animateMotion path="M350 200 C 450 200, 450 400, 550 400" dur="2s" begin="1s" repeatCount="indefinite" />
    </circle>
  </g>

  <!-- Mobile Device -->
  <g transform="translate(500, 250)">
    <!-- Phone Frame -->
    <rect x="0" y="0" width="180" height="320" rx="24" fill="#1F2937" stroke="#374151" stroke-width="4" />
    <!-- Screen -->
    <rect x="10" y="10" width="160" height="300" rx="16" fill="#111827" />
    <!-- Notch -->
    <path d="M60 10 H120 V25 C120 30, 115 35, 110 35 H70 C65 35, 60 30, 60 25 Z" fill="#1F2937" />
    
    <!-- App UI -->
    <!-- Header -->
    <rect x="25" y="60" width="130" height="20" rx="4" fill="#374151" />
    
    <!-- Content Blocks -->
    <rect x="25" y="100" width="60" height="60" rx="8" fill="#374151" />
    <rect x="95" y="100" width="60" height="60" rx="8" fill="#374151" />
    
    <rect x="25" y="170" width="130" height="80" rx="8" fill="#374151" />
    
    <!-- Update Notification Modal -->
    <g transform="translate(20, 120)">
      <rect x="0" y="0" width="140" height="80" rx="8" fill="#1F2937" stroke="#3B82F6" stroke-width="1" filter="url(#glow)" />
      <text x="70" y="30" text-anchor="middle" fill="#FFFFFF" font-family="sans-serif" font-size="10" font-weight="bold">Update Available</text>
      <!-- Progress Bar -->
      <rect x="20" y="45" width="100" height="4" rx="2" fill="#374151" />
      <rect x="20" y="45" width="70" height="4" rx="2" fill="#3B82F6">
        <animate attributeName="width" values="0;100" dur="2s" repeatCount="indefinite" />
      </rect>
    </g>
  </g>
</svg>
