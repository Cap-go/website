---
interface Props {
  title: string
  description: string
  reverse?: boolean
  isFirst?: boolean
}

const { title, description, reverse = false, isFirst = false } = Astro.props
---

<section class={`py-16 sm:py-24 lg:py-32 overflow-hidden ${isFirst ? 'pt-0 sm:pt-0 lg:pt-0' : ''}`}>
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class={`grid items-center grid-cols-1 gap-y-12 lg:grid-cols-2 lg:gap-x-16 xl:gap-x-24 ${reverse ? 'lg:grid-flow-dense' : ''}`}>
      
      <!-- Text Content -->
      <div class={reverse ? 'lg:col-start-2' : 'lg:col-start-1'}>
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl">
          {title}
        </h2>
        <p class="mt-6 text-lg leading-8 text-gray-300">
          {description}
        </p>
        <div class="mt-8">
          <slot name="cta" />
        </div>
      </div>

      <!-- Illustration -->
      <div class={`relative ${reverse ? 'lg:col-start-1' : 'lg:col-start-2'}`}>
        <div class="relative overflow-hidden rounded-2xl bg-gray-800/50 border border-white/10 shadow-2xl">
           <!-- Illustration Slot -->
           <div class="p-8 sm:p-12">
             <slot name="illustration" />
           </div>
        </div>
        
        <!-- Background Glow -->
        <div class="absolute -inset-4 -z-10 bg-gradient-to-r from-blue-500/20 to-purple-500/20 blur-2xl opacity-50" />
      </div>

    </div>
  </div>
</section>
