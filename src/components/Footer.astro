---

<footer class="text-white bg-gray-900" aria-labelledby="footer-heading">
  <p id="footer-heading" class="sr-only">{m.footer({}, { locale: Astro.locals.locale })}</p>
  <div class="relative py-16 px-4 mx-auto max-w-7xl sm:px-6 lg:py-24 lg:px-8">
    
    <!-- Top Section: Tagline + Button -->
    <div class="flex flex-col justify-between items-start mb-12 lg:flex-row lg:items-center">
      <h2 class="mb-6 max-w-2xl text-3xl font-bold tracking-tight text-white md:text-4xl lg:mb-0">
        {m.footer_tagline_part1({}, { locale: Astro.locals.locale })}
        <span class="block text-zinc-500">{m.footer_tagline_part2({}, { locale: Astro.locals.locale })}</span>
      </h2>
      <a href={getRelativeLocaleUrl(Astro.locals.locale, 'plugins')} class="inline-flex justify-center items-center py-3 px-6 text-base font-medium text-white bg-blue-600 rounded-md border border-transparent shadow-sm hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none">
        {m.install_plugin({}, { locale: Astro.locals.locale })}
      </a>
    </div>

    <!-- Middle Section: Hero Icons -->
    <div class="flex flex-wrap gap-6 pb-12 mb-12 border-b border-zinc-800">
      {
        navigation.hero.map((item) => (
          <a href={item.href} target="_blank" rel="noreferrer" class="flex items-center text-sm transition-colors hover:text-white text-zinc-400">
            {item.icon && <div class="h-5 w-5 mr-2 text-blue-500 [&>svg]:w-full [&>svg]:h-full" set:html={item.icon} />}
            <span>{typeof item.name === 'function' ? item.name() : item.name}</span>
          </a>
        ))
      }
    </div>

    <!-- Links Grid -->
    <div class="grid grid-cols-2 gap-8 mb-12 md:grid-cols-6">
      <div>
        <h3 class="mb-4 text-sm font-semibold tracking-wider text-white uppercase">{m.products({}, { locale: Astro.locals.locale })}</h3>
        <ul role="list" class="space-y-3">
          {navigation.products.map((item) => (
            <li>
              <a href={item.href} target={item.target} class="text-sm transition-colors hover:text-white text-zinc-400">
                {typeof item.name === 'function' ? item.name() : item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="mb-4 text-sm font-semibold tracking-wider text-white uppercase">{m.solutions({}, { locale: Astro.locals.locale })}</h3>
        <ul role="list" class="space-y-3">
          {navigation.solutions.map((item) => (
            <li>
              <a href={item.href} target={item.target} class="text-sm transition-colors hover:text-white text-zinc-400">
                {typeof item.name === 'function' ? item.name() : item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="mb-4 text-sm font-semibold tracking-wider text-white uppercase">{m.support({}, { locale: Astro.locals.locale })}</h3>
        <ul role="list" class="space-y-3">
          {navigation.support.filter(i => !i.href.includes('status.capgo.app') || (typeof i.name === 'function' ? i.name() : i.name) !== m.all_systems_normal({}, { locale: Astro.locals.locale })).map((item) => (
            <li>
              <a href={item.href} target={item.target} rel={item.rel} class="text-sm transition-colors hover:text-white text-zinc-400">
                {item.icon && <span class="inline-block mr-2 w-4 h-4" set:html={typeof item.icon === 'function' ? item.icon() : item.icon} />}
                {typeof item.name === 'function' ? item.name() : item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="mb-4 text-sm font-semibold tracking-wider text-white uppercase">{m.company({}, { locale: Astro.locals.locale })}</h3>
        <ul role="list" class="space-y-3">
          {navigation.company.map((item) => (
            <li>
              <a href={item.href} class="text-sm transition-colors hover:text-white text-zinc-400">
                {typeof item.name === 'function' ? item.name() : item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="mb-4 text-sm font-semibold tracking-wider text-white uppercase">{m.compare({}, { locale: Astro.locals.locale })}</h3>
        <ul role="list" class="space-y-3">
          {navigation.compare.map((item) => (
            <li>
              <a href={item.href} class="text-sm transition-colors hover:text-white text-zinc-400">
