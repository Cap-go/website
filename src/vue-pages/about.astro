---
import AboutMartin from '@/components/AboutMartin.astro'
import * as m from '@/paraglide/messages'
import type { Locales } from '@/services/locale'

interface Props {
  locale: Locales
}

const { locale } = Astro.props
---

<section class="relative bg-gray-900 pt-12 sm:pt-16 lg:pt-20">
  <div class="absolute inset-0 overflow-hidden">
    <img class="h-full w-full -translate-y-80 transform object-cover object-top opacity-20" src="/background-pattern.webp" alt="" />
  </div>
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-xl text-center xl:max-w-3xl">
      <h2 class="font-pj text-3xl font-bold text-white sm:text-4xl xl:text-5xl">{m.about_capgo({}, { locale })}</h2>
      <p class="font-pj mx-auto mt-4 max-w-xl text-base leading-7 text-gray-100 sm:mt-8">{m.your_live_update_solution_for_capacitor_apps({}, { locale })}</p>
      <div class="mt-8 inline-block rounded-full bg-blue-600 px-4 py-2 text-sm font-semibold text-white sm:mt-11">
        {m.open_source({}, { locale })}
      </div>
    </div>
  </div>
  <div class="relative mx-auto mt-20 max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2">
      <div>
        <h3 class="mb-4 text-2xl font-bold text-white">ðŸš€ {m.welcome_to_capgo({}, { locale })}</h3>
        <p class="mb-6 text-gray-300">
          {m.capgo_is_the_cutting_edge_live_update_system_designed_specifically_for_capacitor_applications({}, { locale })}
          {
            m.we_empower_developers_to_push_updates_instantly_ensuring_your_users_always_have_the_latest_version_of_your_app_without_the_hassle_of_app_store_approvals(
              {},
              { locale },
            )
          }
        </p>
        <h3 class="mb-4 text-2xl font-bold text-white">ðŸŒ± {m.our_story({}, { locale })}</h3>
        <p class="mb-6 text-gray-300">
          {m.capgo_was_born_from_a_real_need_in_the_developer_community({}, { locale })}
          {m.it_all_started_with_a_github_issue_where_many_developers_voiced_their_frustration_with_the_high_costs_of_existing_solutions_like_appflow({}, { locale })}
          {m.this_inspired_me_to_create_an_affordable_efficient_alternative({}, { locale })}
        </p>
        <a href="https://capgo.app/blog/birth-of-capgo-my-challenging-journey-as-a-solo-maker/" class="text-blue-400 hover:underline">
          {m.read_the_full_story_of_capgos_challenging_birth_as_a_solo_maker_project({}, { locale })}
        </a>
      </div>
      <div>
        <h3 class="mb-4 text-2xl font-bold text-white">ðŸ”§ {m.key_features({}, { locale })}</h3>
        <ul class="mb-6 list-inside list-disc space-y-2 text-gray-300">
          <li>{m.instant_updates({}, { locale })}: {m.deploy_changes_in_real_time({}, { locale })}</li>
          <li>{m.version_control({}, { locale })}: {m.manage_multiple_app_versions_effortlessly({}, { locale })}</li>
          <li>{m.rollback_capability({}, { locale })}: {m.revert_to_previous_versions_if_needed({}, { locale })}</li>
          <li>{m.analytics({}, { locale })}: {m.track_update_performance_and_user_adoption({}, { locale })}</li>
          <li>{m.organization_and_app_management({}, { locale })}: {m.thanks_to_our_open_source_nature({}, { locale })}</li>
        </ul>
        <h3 class="mb-4 text-2xl font-bold text-white">ðŸŒŸ {m.our_commitment({}, { locale })}</h3>
        <p class="mb-6 text-gray-300">
          {m.as_the_largest_ecosystem_of_open_source_plugins_for_capacitor_we_re_committed_to_innovation_transparency_and_community_driven_development({}, { locale })}
        </p>
        <h3 class="mb-4 text-2xl font-bold text-white">ðŸ’ª {m.practicing_what_we_preach({}, { locale })}</h3>
        <p class="mb-6 text-gray-300">
          {m.we_practice_what_we_preach({}, { locale })}
          {m.capgo_is_used_to_update_its_own_apps_allowing_us_to_continuously_improve_and_refine_our_product_through_real_world_usage({}, { locale })}
        </p>
        <h3 class="mb-4 text-2xl font-bold text-white">ðŸš€ {m.our_dedication({}, { locale })}</h3>
        <p class="mb-6 text-gray-300">
          {m.since_2023_capgo_has_been_my_full_time_focus_ensuring_dedicated_development_and_support_for_our_growing_community_of_users({}, { locale })}
        </p>
      </div>
    </div>
  </div>
  <div class="relative mx-auto mt-20 max-w-6xl">
    <AboutMartin locale={locale} />
  </div>
</section>
